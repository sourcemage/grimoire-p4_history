   SOURCE_URL[0]=$SOURCEFORGE_URL/polyglotman/$SOURCE
   SOURCE_URL[1]=http://unl.dl.sourceforge.net/sourceforge/rman/$SOURCE
     SOURCE_HASH=sha512:a70aea0af1510088fd88a736e63a6dab9200040be5eb89912ede4f50e3de97d423574841bbb66e90fb12934f3834dac0acefe78ff1c73a78a79c95c3dd6fa5ae
