   SOURCE_URL[0]=$CTAN_URL/macros/latex/contrib/$SOURCE
   SOURCE_URL[1]=ftp://ftp.dante.de/tex-archive/macros/latex/contrib/$SOURCE
          MD5[0]=2ee5efd2aaad4815b86949ea4869f9f3
