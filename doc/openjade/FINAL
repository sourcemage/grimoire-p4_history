install-catalog --add /etc/sgml/openjade.cat /usr/share/sgml/OpenJade/catalog &&
install-catalog --add /etc/sgml/sgml-docbook.cat /etc/sgml/openjade.cat       &&

echo "SYSTEM \"http://www.oasis-open.org/docbook/xml/4.4/docbookx.dtd\" \
    \"/usr/share/xml/docbook/xml-dtd-4.4/docbookx.dtd\"" >> \
    /usr/share/sgml/OpenJade/catalog
