mkdir --parents  ${TEXMF}/fonts/source/public/$SPELL    &&
mkdir --parents  ${TEXMF}/tex/latex/$SPELL              &&
mkdir --parents  ${INSTALL_ROOT}/usr/doc/$SPELL         &&

cp    *.mf       ${TEXMF}/fonts/source/public/$SPELL    &&
cp    *.fd       ${TEXMF}/tex/latex/$SPELL              &&
cp    $SPELL.sty ${TEXMF}/tex/latex/$SPELL              &&
cp    *.dvi      ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
#cp   ar_demo.*  ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
cp    README     ${INSTALL_ROOT}/usr/share/doc/$SPELL
