SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/docconversion/$SOURCE
          MD5[0]=2ce7a161a3ce7cedfafce38df0c9fc12
        WEB_SITE=http://docconversion.sf.net
         ENTERED=20031009
