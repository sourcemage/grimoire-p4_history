mkdir   --parents   ${INSTALL_ROOT}/usr/share/doc/$SPELL                &&
install --mode=644  cookbook.ps ${INSTALL_ROOT}/usr/share/doc/$SPELL    &&
install --mode=644  info/*      ${INSTALL_ROOT}/usr/share/info          &&
install-info        --info-dir=${INSTALL_ROOT}/usr/share/info \
                    ${INSTALL_ROOT}/usr/share/info/cookbook.info
