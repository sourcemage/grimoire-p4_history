mkdir   --parents   ${TEXMF}/tex/latex/$SPELL                              &&
mkdir   --parents   ${INSTALL_ROOT}/usr/share/doc/$SPELL                   &&

install --mode=644  $SPELL.cls      ${TEXMF}/tex/latex/$SPELL              &&
install --mode=644  *.pdf           ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
install --mode=644  *.dvi           ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
install --mode=644  avery*          ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
install --mode=644  samplecards.tex ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
install --mode=644  COPYING         ${INSTALL_ROOT}/usr/share/doc/$SPELL   &&
install --mode=644  README          ${INSTALL_ROOT}/usr/share/doc/$SPELL
