if  !  grep  -q  CONFIGURED  $SPELL_CONFIG;  then

  if    query  "Install client only? " n
  then  echo   'OPTS="$OPTS --without-server"'  >>  $SPELL_CONFIG
  elif  query  "Invoke mysqld at boot?" y
  then  echo   "MYSQL_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "MYSQL_BOOT=n"  >>  $SPELL_CONFIG
  fi

  if    query  "Install Innodb Support? "  y
  then  echo   'OPTS="$OPTS --with-innodb"'  >>  $SPELL_CONFIG
  fi

  echo  'CONFIGURED="y"'  >>  $SPELL_CONFIG

fi
