#!/bin/bash

PROGRAM=/usr/bin/postmaster
RUNLEVEL=3
NEEDS="+remote_fs"

. /etc/init.d/smgl_init
. /etc/sysconfig/postgresql

start()
{
  echo "Starting postmaster..."
  cd "$DBPATH" &&
  if  [[  -z  "$PORT"  ]];  then
    su "$USER" -c "pg_ctl start -D '$DBPATH' -l '$LOGFILE'"
  else
    su "$USER" -c "pg_ctl start -D '$DBPATH' -l '$LOGFILE' -o \"-i -p '$PORT'\""
  fi
  evaluate_retval
}

stop()
{
  echo "Stopping postmaster..."
  cd "$DBPATH" &&
  su "$USER" -c "pg_ctl stop -D '$DBPATH' -m fast"
  evaluate_retval
}

restart()
{
  echo "Restarting postmaster..."
  cd "$DBPATH" &&
  su "$USER" -c "pg_ctl restart -D '$DBPATH' -l '$LOGFILE'"
}
