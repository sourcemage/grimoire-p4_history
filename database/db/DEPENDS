optional_depends  g++             \
                  "--enable-cxx"  \
                  ""              \
                  "for C++ API"   &&

if grep -q 'enable-java' $SPELL_CONFIG; then
  depends JAVA '--enable-java' &&
  depends uudeview &&
  depends swig
fi &&
if grep -q 'enable-test' $SPELL_CONFIG; then
  depends tcl '--enable-tcl=/usr'
else
  optional_depends tcl '--enable-tcl=/usr' '--disable-tcl' 'API for TCL support'
fi
