depends clibpdf		&&
depends libxml2		&&
optional_depends JAVA "" "" "Java front end"			&&
optional_depends perl "" \
		"--with-perl-lib=/usr/lib/perl5/5.8.3" \
		 "Perl front end"				&&
optional_depends Python	\
		"--with-pythonver=`ls /usr/lib |grep python|cut -c7-`" \
		"--disable-python" \
		"Python frontend"				&&
optional_depends "PHP" "" "--disable-php" "php frontend"	&&
optional_depends "ODBC-MGR" "" "--disable-odbc" "ODBC database access"	&&
optional_depends "mysql" "" "--disable-mysql" "mysql database support"	&&
optional_depends "postgresql" "" "--disable-postgre" "postgresql database support"

