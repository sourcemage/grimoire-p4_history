depends  glib2                                          &&

if [ "$MDBTOOLS_CVS" == "y" ] ; then
	depends  CVS       
fi                                                      &&

optional_depends unixodbc                               \
                 "--with-unixodbc=/usr"                 \
                 "--without-unixodbc"                   \
                 "Build odbc driver against UnixODBC?"  &&

optional_depends gtk-doc                                \
                 "--enable-gtk-doc"                     \
                 "--disable-gtk-doc"                    \
                 "Build documentation with gtk-doc?"

