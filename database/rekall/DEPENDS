depends g++             &&
if [ "$GUI" == "kde" ]; then
  depends  kdelibs  &&
  optional_depends  arts  ""  "--without-arts"  "for arts support"
else
  depends  qt-x11
fi                      &&
if [ "$DEVEL" == "y" ]; then
  depends scons         &&
  depends sip
fi                      &&
if [ "$XBASE" == "y" ]; then
  depends  xbase        &&
  depends  xbsql
fi                      && 
optional_depends "postgresql" "--enable-pgsql" "--disable-pgsql" "PostgreSQL database support"  &&
optional_depends "mysql"      "--enable-mysql" "--disable-mysql" "MySQL database support"	
