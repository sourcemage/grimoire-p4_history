depends  g++         &&
depends  fontconfig  &&

optional_depends  zlib    ""  "--disable-zlib"  "for compressed file support"                 &&
optional_depends  jpeg    ""  "--disable-libjpeg"  "for jpeg support"                         &&
optional_depends  glib2   ""  "--disable-poppler-glib"  "for glib wrapper"                    &&
optional_depends  qt-x11  ""  "--disable-poppler-qt --disable-poppler-qt4"  "for QT wrapper"  &&
optional_depends  cairo   ""  "--disable-cairo-output"  "for cairo output"
