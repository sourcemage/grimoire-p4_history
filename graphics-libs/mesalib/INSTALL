mkdir -p ${INSTALL_ROOT}/usr/include/GL                                    &&
mkdir -p ${INSTALL_ROOT}/usr/include/GLES                                  &&
mkdir -p ${INSTALL_ROOT}/usr/lib/modules/dri                               &&
mv -fv ${SOURCE_DIRECTORY}/include/GL/*.h ${INSTALL_ROOT}/usr/include/GL   &&
## NOT YET: cp -f ${TOP}/include/GLES/*.h ${INCLUDE_DIR}/GLES              &&
mv -fv ${SOURCE_DIRECTORY}/lib/*_dri* ${INSTALL_ROOT}/usr/lib/modules/dri  &&
mv -fv ${SOURCE_DIRECTORY}/lib/* ${INSTALL_ROOT}/usr/lib
if [[ "$MESALIB_DEMOS" == "y" ]]
then
cd ${SOURCE_DIRECTORY}/progs/xdemos                                        &&
MESA_DEMOS="glthreads glxdemo glxgears glxgears_fbconfig glxcontexts       \
glxheads glxinfo glxpixmap glxpbdemo glxswapcontrol manywin offset overlay \
pbinfo pbdemo wincopy xfont xrotfontdemo yuvrect_client"

  for i in $MESA_DEMOS
  do
    cp -v $i ${INSTALL_ROOT}/usr/bin
  done
fi
