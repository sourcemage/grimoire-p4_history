config_query  MESALIB_DEMOS                                              \
              "Do you want to build some basic demos(glxgears/glxinfo)"  \
              y                                                          &&
if [[ "${SMGL_ARCHSPECS[1]}" == "sparc" ]]
then
config_query_list MESALIB_BUILD                                          \
                  "Select build type(use dri type for 3D acceleration?"  \
                  linux-sparc                                            \
                  linux-sparc5                                           \
                  linux-ultrasparc                                       \
                  linux-directfb                                         \
                  linux-fbdev                                            \
                  linux-glide
elif [[ "${SMGL_ARCHSPECS[1]}" == "ppc" ]]
then
config_query_list MESALIB_BUILD                                          \
                  "Select build type(use dri type for 3D acceleration?"  \
                  linux-ppc                                              \
                  linux-dri-ppc                                          \
                  linux-directfb                                         \
                  linux-fbdev                                            \
                  linux-glide
elif [[ "${SMGL_ARCHSPECS[1]}" == "x86_64" ]]
then
config_query_list MESALIB_BUILD                                          \
                  "Select build type(use dri type for 3D acceleration?"  \
                  linux-x86-64                                           \
                  linux-dri-x86-64                                       \
                  linux-directfb                                         \
                  linux-fbdev                                            \
                  linux-glide
elif [[ "${SMGL_ARCHSPECS[1]}" == "ia32" ]]
then
config_query_list MESALIB_BUILD                                          \
                  "Select build type(use dri type for 3D acceleration?"  \
                  linux-x86                                              \
                  linux-dri-x86                                          \
                  linux-directfb                                         \
                  linux-fbdev                                            \
                  linux-glide
fi
