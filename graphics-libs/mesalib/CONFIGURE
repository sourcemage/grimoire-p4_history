config_query_option  MESALIB_DEBUG     "Enable full Mesa debugging?"  n  \
                     "--enable-debug"  "--disable-debug"                 &&

config_query_option  MESALIB_TRACE     "Enable Mesa trace toolkit?"   n  \
                     "--enable-trace"  "--disable-trace"                 &&

config_query_option  MESALIB_PROFILE   "Enable profiling?"            n  \
                     "--enable-profile"  "--disable-profile"             &&

config_query_option  MESALIB_OPTIMIZE  "Enable extra optimizations?"  y  \
                     "--enable-optimize"  "--disable-optimize"
