# $Id: PREPARE,v 1.2 2003/01/08 18:35:55 sergeyli Exp $
if ! grep -q 'CONFIGURED=y' $SPELL_CONFIG; then
  if query "Would you like to use the \`$SPELL' source code from development repository?" n; then
    # don't use dashes '-' in the DEFAULT_VERSION value, they'll mangle
    # the SOURCE_DIRECTORY definition in the DETAILS
    DEFAULT_VERSION="HEAD_$(date +%Y%m%d)"

    # REPOSITORY_TAG can be used by the individual spells
    # to provide "recommended" version to use for source code
    # checked out of the repository
    echo "VERSION=${REPOSITORY_TAG:-$DEFAULT_VERSION}" >> $SPELL_CONFIG
    echo "SOURCE_URL[0]=cvs://:pserver:cvsread:horde@anoncvs.horde.org:/repository:$SPELL:${REPOSITORY_TAG:-HEAD}" >> $SPELL_CONFIG
    echo 'FORCE_DOWNLOAD=on' >> $SPELL_CONFIG
    echo 'SUFFIX=.tar.bz2'
    echo 'CONFIGURED=y' >> $SPELL_CONFIG
  fi
fi
