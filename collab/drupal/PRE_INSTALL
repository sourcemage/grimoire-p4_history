DRUPAL_CONFIG_PATH="'${INSTALL_ROOT}${DRUPAL_INSTALL_PATH}/${SPELL}/sites/default"  &&

for  www_file  in  `find  sites/default/  -type  f`;  do
  if  install_config_file  "sites/default/${www_file}"   "${DRUPAL_CONFIG_PATH}/${www_file}";  then
    chmod  0644               "${DRUPAL_CONFIG_PATH}/${www_file}"  &&
    chown  www-data:www-data  "${DRUPAL_CONFIG_PATH}/${www_file}"
  fi
done
