           SPELL=turba
         VERSION=1.1-RC2
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-${VERSION%-*}
      SOURCE_URI=$SPELL/tarballs/$SOURCE
   SOURCE_URL[0]=ftp://ftp.horde.org/pub/$SOURCE_URI
   SOURCE_URL[1]=ftp://ftp.au.horde.org/pub/horde/$SOURCE_URI
   SOURCE_URL[2]=ftp://ftp.at.horde.org/mirror/horde/$SOURCE_URI
   SOURCE_URL[3]=ftp://ftp.br.horde.org/pub/mirrors/ftp.horde.org/pub/$SOURCE_URI
