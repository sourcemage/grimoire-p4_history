./configure --prefix=$INSTALL_ROOT/usr/share/www/ldap-account-manager  \
            --localstatedir=$INSTALL_ROOT/var                          \
            --mandir=$INSTALL_ROOT/usr/share/man                       \
            --infodir=$INSTALL_ROOT/usr/share/info                     \
            --with-httpd-user=$LDAPAM_USER                             \
            --with-httpd-group=$LDAPAM_GROUP
