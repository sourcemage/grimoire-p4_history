## conditionally run `make' if SWIG dependency is on
## @usage <1:make target>
function make_if_swig() {
  if echo "$OPTS" | grep -q 'with-swig'; then
    make $1
  fi
}

make_normal                   &&
default_install               &&
make_if_swig install-swig-py  &&

if  [ -d /etc/httpd ]; then
  cp $SCRIPT_DIRECTORY/svn.conf.default /etc/httpd/
fi
