depends  autoconf  &&
depends  libtool   &&
depends  bison     &&

depends  apr      "--with-apr=/usr"       &&
depends  apr-util "--with-apr-util=/usr"  &&
depends  neon     "--with-neon=/usr"      &&
depends  db       "--with-berkeley-db"    &&

if  [  "$SVN_EXPORT_HEAD"  ==  "y"  ];  then
  depends  python
fi  &&

optional_depends  APACHE                        \
                  "--with-apxs"                 \
                  "--without-apxs"              \
                  "to create Apache 2 modules"  &&

optional_depends  swig                     \
                  "--with-swig"            \
                  "--without-swig"         \
                  "for language bindings"  &&

optional_depends  cyrus-sasl                       \
                  ""                               \
                  ""                               \
                  "for Cyrus SASL authentication"
