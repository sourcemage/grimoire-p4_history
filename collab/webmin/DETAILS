SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/webadmin/$SOURCE
          MD5[0]=ff7be743c23c37ba3b31705df4885d93
        WEB_SITE=http://www.webmin.com/
         ENTERED=20020415
