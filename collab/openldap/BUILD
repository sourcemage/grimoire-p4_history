./configure                 \
  --build=$BUILD            \
  --prefix=/usr             \
  --sysconfdir=/etc         \
  --infodir=/usr/share/info \
  --mandir=/usr/share/man   \
  --localstatedir=/var      \
  --enable-cleartext        \
  --enable-crypt            \
  --enable-rlookups         \
  $OPTS                     &&

make  depend  &&
make
