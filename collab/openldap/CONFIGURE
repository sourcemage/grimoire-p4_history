# $Id: CONFIGURE,v 1.5 2002/08/10 04:07:47 sergeyli Exp $
if grep -q "CONFIGURED=y" $SPELL_CONFIG; then
	true
	exit
fi

if  !  grep  -q  "SLAPD_BOOT="  $SPELL_CONFIG;  then

  if    query  "Invoke slapd at boot?" y
  then  echo   "SLAPD_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "SLAPD_BOOT=n"  >>  $SPELL_CONFIG
  fi

fi

if ! grep -q "able-ldbm" $SPELL_CONFIG; then
	if query "Enable Lightweight DB Manager (LDBM) backend?" n; then
		echo 'OPTS="$OPTS --enable-ldbm"' >> $SPELL_CONFIG
	fi
fi

if ! grep -q "able-sql" $SPELL_CONFIG; then
	if query "Enable SQL backend?" n; then
		echo 'OPTS="$OPTS --enable-sql"' >> $SPELL_CONFIG
	fi
fi

# --enable-dnssrv	  enable dnssrv backend [no]
# --enable-ldap	  enable ldap backend [no]
# --enable-meta	  enable metadirectory backend [no]
# --enable-monitor	  enable monitor backend [no]
# --enable-null	  enable null backend [no]
# --enable-passwd	  enable passwd backend [no]

echo "CONFIGURED=y" >> $SPELL_CONFIG
