depends db "--enable-bdb" &&

optional_depends "openssl"    ""                  ""                    "for encryption in passwords etc."      &&
optional_depends "bash"       "--enable-shell"    "--disable-shell"     "for shell backend"                     &&
#optional_depends "perl"       "--enable-perl"     "--disable-perl"     "for perl backend"                       &&
optional_depends "cyrus-sasl" "--with-cyrus-sasl" "--with-cyrus-ssl=no" "for SASL/TLS encrypted authentication"
