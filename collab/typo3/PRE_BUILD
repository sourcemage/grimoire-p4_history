mk_source_dir $SOURCE_DIRECTORY &&
cd $SOURCE_DIRECTORY &&
unpack "$SOURCE" "${MD5[0]}" &&
mv "${SOURCE%%.tar*}" code &&
if [[ -z "$TYPO3_SITEPKG" ]]; then
  mkdir site
else
  cd $SOURCE_DIRECTORY &&
  for N in {2..4}; do
    eval S="\$SOURCE$N" &&
    if [[ "$S" =~ "^$TYPO3_SITEPKG-.*" ]]; then
      unpack "$S" ${MD5[$(($N - 1))]} &&
	  mv "${S%%.tar*}" site
    fi
  done
fi
