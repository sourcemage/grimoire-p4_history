mkdir -p ${INSTALL_ROOT}/usr/share/dict &&
mkdir -p ${INSTALL_ROOT}/usr/share/cracklib &&
cp ${SOURCE_CACHE}/allwords ${INSTALL_ROOT}/usr/share/cracklib/     &&
sedit 's/^DICTPATH=/DICTPATH=$(INSTALL_ROOT)/g' Makefile &&
sedit 's/^SRCDICTS=/SRCDICTS=$(INSTALL_ROOT)/g' Makefile &&
make INSTALL_ROOT=${INSTALL_ROOT} install               &&
cp ${SOURCE_DIRECTORY}/cracklib/libcrack.a ${INSTALL_ROOT}/usr/lib/
