config_query OPENAL_CVS "Would you like to have the latest cvs?" n &&
if [ "${OPENAL_CVS}" == "y" ]
then
    config_query OPENAL_CVS_AUTOUPDATE \
    "Automatically update the spell on sorcery queue/system-update?" "n"
fi &&
config_query_option OPENAL_JLIBS \
    "Enable jlibs? (more debug output, but can break some games)" n \
    "--enable-jlibs" \
    "--disable-jlibs"

