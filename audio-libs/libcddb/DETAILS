        WEB_SITE=http://libcddb.sourceforge.net
     SOURCE_HASH=sha512:444eca0f4e1f0723bd54fdf1eb81267d6932cfac5a4fa3e153fd47f628aea3a7b891cdb1f66936e612794962e7d36e83cce2818266fbd1aed82632169cd19e00
