           SPELL=libsndtouch
         VERSION=1.3.0
          SOURCE=soundtouch_v$VERSION.zip
SOURCE_DIRECTORY=$BUILD_DIRECTORY/SoundTouch-$VERSION
   SOURCE_URL[0]=http://www.hut.fi/u/oparviai/$SOURCE 
     SOURCE_HASH=sha1:ac366908c47f9196621046dcb89e2351c21e0c0b
