if spell_installed Python; then
   if ! grep -q "^Python\:expat\:on" $DEPENDS_STATUS; then

      message libglade2 requires an expat-enabled Python

      rm -f /var/lock/casting.$SPELL
      
      if ! spell_installed expat &&
	 ! spell_held expat   
      then cast expat || exit 1
      fi
      remove_depends Python
      cast -c Python || exit 1
      
      echo $$ > /var/lock/casting.$SPELL   
   fi
fi

default_pre_build
