   SOURCE_URL[0]=ftp://ftp.gnome.org/pub/GNOME/sources/$SPELL/$BRANCH/$SOURCE
     SOURCE_HASH=sha512:5763b00f09cab79ffb9d279555d0b4eeb9b07d8bfd1a0d20780b352ceb10e68d31957e8a9558dbc5246d84fa060370d5d5e093bb592357f5124fe83d0316238c
