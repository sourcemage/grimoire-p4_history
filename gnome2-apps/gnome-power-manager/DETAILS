   SOURCE_URL[0]=ftp://ftp.gnome.org/pub/GNOME/sources/$SPELL/$BRANCH/$SOURCE
     SOURCE_HASH=sha512:00c2a9892678de2aa5bdfafb2a17429981cb18432250ee2e7e38d1e99079bd6bb9b2149fef5ea00bb854a5d723f0ef404f2f6c27508fc09585b5c616e2ff4150
