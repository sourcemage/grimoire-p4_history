          BRANCH=`echo $VERSION|cut -d . -f 1,2`
          SOURCE=gftp-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/gftp-$VERSION
   SOURCE_URL[0]=http://www.gftp.org/$SOURCE
