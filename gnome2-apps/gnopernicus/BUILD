if [ "$BRLTTY" == "y" ]; then
   OPTS="$OPTS --enable-brltty"
else
   OPTS="$OPTS --disable-brltty"
fi                                  &&

if [ "$IPV6" == "y" ]; then
   OPTS="$OPTS --enable-ipv6"
else
   OPTS="$OPTS --disable-ipv6"
fi                                  &&

if [ "$MAGNIFY" == "y" ]; then
   OPTS="$OPTS --enable-magnifier"
else
   OPTS="$OPTS --disable-magnifier"
fi                                  &&

default_build
