depends  GECKO         &&
depends  libgnomeui    &&
depends  gnome-desktop &&

optional_depends nautilus2                              \
                 "--enable-nautilus-view"               \
                 "--disable-nautilus-view"              \
                 "for a nautilus html viewer component" &&

optional_depends dbus                                   \
                 "--enable-dbus"                        \
                 "--disable-dbus"                       \
                 "Enable dbus support"                  &&

optional_depends gtk-doc                                \
                 "--enable-gtk-doc"                     \
                 "--disable-gtk-doc"                    \
                 "Use gtk-doc to build documentation"   

