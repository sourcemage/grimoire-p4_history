   SOURCE_URL[0]=http://primates.ximian.com/~sandino/$SPELL/files/$SOURCE
     SOURCE_HASH=sha512:4a4739b9da3a1e2d2e79aaf0ceb27e2b9c9b44d7b709368c14c5dbc4a752bda6466ce05cf0c3868eb8304cf8436e038e63132821b3561c1c796f80e5afe54a0d
