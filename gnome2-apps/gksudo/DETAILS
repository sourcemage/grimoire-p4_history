SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://people.debian.org/~kov/gksu/gksu1.2/$SOURCE
          MD5[0]=1485b29520f319c12c89002b87400cad
