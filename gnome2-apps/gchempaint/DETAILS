   SOURCE_URL[0]=http://savannah.nongnu.org/download/$SPELL/$SOURCE
     SOURCE_HASH=sha512:b82207fe20df6f6d52538ac74b1402dde6f9caf9df8f712f8adbba7a09372952400558bc9c541b54d36055546d825bcf505663205d52be0ef91864aaf17269cb
