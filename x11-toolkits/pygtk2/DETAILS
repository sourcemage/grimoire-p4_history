           SPELL=pygtk2
         VERSION=2.0.0
          BRANCH=`echo $VERSION|cut -d . -f 1,2`
          SOURCE=pygtk-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/pygtk-$VERSION
   SOURCE_URL[0]=$GNOME_URL/sources/pygtk/$BRANCH/$SOURCE
   SOURCE_URL[1]=http://ftp.gnome.org/pub/GNOME/sources/pygtk/$BRANCH/$SOURCE
          MD5[0]='d99f636ee9ff10e063b607aad3bfb021'
