depends X11-LIBS "--with-x --x-libraries=${INSTALL_ROOT}/usr/X11R6/lib" &&
depends zlib '--with-zlib' &&
depends jpeg '--with-libjpeg' &&
depends libpng '--with-libpng' &&
depends tiff '--with-libtiff' &&
#depends expat '--with-expat' &&
if [ "$GTKVERSION" == "y" ]
then
   depends gtk+ '--with-gtk=1'
 else
   depends gtk+2 '--with-gtk=2'
fi

