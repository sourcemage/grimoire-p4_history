   SOURCE_URL[0]=${SOURCEFORGE_URL}/liferea/$SOURCE
     SOURCE_HASH=sha512:2bc7c9ed6926246add2cf1e2c7ae0ae73c6e61022eb3df14311fe53176ad3dd89f51c45c2cb2f0b0d1354d4ac4c66d07a5a4772438ea9641b2d24a340d08c68b 
