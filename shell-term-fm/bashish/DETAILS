           SPELL=bashish
         VERSION=1.9.24
  THEMES_VERSION=1.1.0
          SOURCE=$SPELL-$VERSION.tar.gz
	 SOURCE2=$SPELL-themes-${THEMES_VERSION}.tar.gz 
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/${SPELL}/${SOURCE}
   SOURCE_URL[1]=http://osdn.dl.sourceforge.net/sourceforge/${SPELL}/${SOURCE}
  SOURCE2_URL[0]=${SOURCEFORGE_URL}/${SPELL}/${SOURCE2}
  SOURCE2_URL[1]=http://osdn.dl.sourceforge.net/sourceforge/${SPELL}/${SOURCE2}
        WEB_SITE=http://bashish.sourceforge.net/
      BUILD_API=2
         ENTERED=20020911
