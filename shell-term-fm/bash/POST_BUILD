default_post_build  &&
(
  mkdir  -p  /etc/skel
  if  !  [  -e  /etc/profile             ];  then  cp  $SCRIPT_DIRECTORY/profile      /etc;                     fi
  if  !  [  -e  /etc/skel/.bash_profile  ];  then  cp  /etc/profile                   /etc/skel/.bash_profile;  fi
  if  !  [  -e  /etc/skel/.bash_logout   ];  then  cp  $SCRIPT_DIRECTORY/bash_logout  /etc/skel/.bash_logout;   fi
  if  !  [  -e  /etc/skel/.bashrc        ];  then  ln  -sf  .bash_profile             /etc/skel/.bashrc;        fi
)
