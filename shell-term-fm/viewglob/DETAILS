SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/viewglob/$SOURCE
          MD5[0]=a297917772320353bc856004ef293b5e
