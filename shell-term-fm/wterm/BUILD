  ./configure  --prefix=/usr               \
               --sysconfdir=/etc           \
               --localstatedir=/var/run    \
	       --with-logsdir=/var/log	   \
 	       --enable-transparency 	   \
	       --enable-next-scroll 	   \
               --enable-xpm-background 	   \
	       $OPTS		      &&	
  make 
