(

  ./configure  --with-sys-screenrc=/etc/screenrc  \
               --prefix=/usr                      \
               $OPTS			          &&
  make                                            &&
  prepare_install                                 &&
  make    install

) > $C_FIFO 2>&1  &&  (

  if  [  -f  /etc/screenrc  ]; then
      if  [  "$REPLACE_RC" == "y"  ]; then
          cp  ${SCRIPT_DIRECTORY}/screenrc  /etc/screenrc
      else
          cp  ${SCRIPT_DIRECTORY}/screenrc  /etc/screenrc.new
      fi
  else
      cp  ${SCRIPT_DIRECTORY}/screenrc  /etc/screenrc
  fi

)
