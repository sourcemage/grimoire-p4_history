         VERSION=1.6.24
          SOURCE=${SPELL}-${VERSION}.tar.gz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
   SOURCE_URL[0]=${GNU_URL}/${SPELL}/${SOURCE}
  SOURCE_HASH[0]=sha512:13c76f7a9d91a11e4818d8524ee59104ecfa60867a0b671bb595afd7fd27eab7e1a6461e0ae81cf30a6ee36567776f73991645d5fb09f0f0b219b976347cba0b
