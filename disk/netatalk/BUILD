      $NETATALK_CNID_CDB             \
      $NETATALK_CNID_DBD             \
      $NETATALK_DBD                  \
      $NETATALK_CNID_BDB             \
      $NETATALK_CNID_LAST            \
      $NETATALK_CNID_HASH            \
      $NETATALK_CNID_DID             \
