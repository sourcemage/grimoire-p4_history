config_query_option  NETATALK_ADMIN              \
                     "Enable admin group?"    y  \
                     "--enable-admin-group"      \
                     "--disable-admin-group"     &&

config_query_option  NETATALK_TIMELORD                    \
                     "Enable timelord (time server)?"  n  \
                     "--enable-timelord"                  \
                     "--disable-timelord"                 &&

config_query_option  NETATALK_SHELL                  \
                     "Enable valid shell check?"  y  \
                     "--enable-shell-check"          \
                     "--disable-shell-check"         &&

config_query_option  NETATALK_FILENAME               \
                     "Enable filename mangling?"  y  \
                     "--with-mangling"               \
                     "--without-mangling"            &&

config_query_option  NETATALK_AFS                            \
                     "Enable Andrew FileSystem support?"  n  \
                     "--enable-afs"                          \
                     "--disable-afs"                         &&

config_query_option  NETATALK_DDP      \
                     "Enable DDP?"  y  \
                     "--enable-ddp"    \
                     "--disable-ddp"   &&

config_query_option  NETATALK_AFP3               \
                     "Enable AFP 3.x calls?"  y  \
                     "--enable-afp3"             \
                     "--disable-afp3"            &&

config_query_option  NETATALK_DROPBOX                                       \
                     "Enable the EXPERIMENTAL dropbox fix (INSECURE!)?"  n  \
                     "--enable-dropkludge"                                  \
                     "--disable-dropkludge"                                 &&

config_query_option  NETATALK_APPLE2                  \
                     "Enable Apple2 boot server?"  n  \
                     "--enable-a2boot"                \
                     "--disable-a2boot"               &&

config_query_option  NETATALK_DEBUG           \
                     "Enable debug code?"  n  \
                     "--enable-debug1"        \
                     "--disable-debug1"       &&

config_query_option  NETATALK_CNID_CDB                                       \
                     "Enable CNID with Concurrent DBD Data Store (cdb)?"  n  \
                     "--with-cnid-cdb-backend"                               \
                     "--without-cnid-cdb-backend"                            &&

config_query_option  NETATALK_CNID_DBD                                        \
                     "Enable CNID with Database Daemon Data Store (dbd)?"  n  \
                     "--with-cnid-dbd-backend"                                \
                     "--without-cnid-dbd-backend"                             &&

config_query_option  NETATALK_DBD                                      \
                     "Enable transaction support for dbd backend?"  n  \
                     "--with-cnid-dbd-txn"                             \
                     "--without-cnid-dbd-txn"                          &&

config_query_option  NETATALK_CNID_BDB                                    \
                     "Enable CNID with transactional BDB Data Store?"  n  \
                     "--with-cnid-db3-backend"                            \
                     "--without-cnid-db3-backend"                         &&

config_query_option  NETATALK_CNID_LAST             \
                     "Enable LAST CNID scheme?"  n  \
                     "--with-cnid-last-backend"     \
                     "--without-cnid-last-backend"  &&

config_query_option  NETATALK_CNID_HASH             \
                     "Enable HASH CNID scheme?"  n  \
                     "--with-cnid-hash-backend"     \
                     "--without-cnid-hash-backend"  &&

config_query_option  NETATALK_CNID_DID             \
                     "Enable DID CNID scheme?"  y  \
                     "--with-cnid-tdb-backend"     \
                     "--without-cnid-tdb-backend"  &&

config_query_option  NETATALK_CNID_MTAB             \
                     "Enable MTAB CNID scheme?"  n  \
                     "--with-mtab-backend"          \
                     "--without-mtab-backend"
