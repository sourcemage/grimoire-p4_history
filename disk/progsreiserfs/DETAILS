SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://reiserfs.linux.kiev.ua/$SOURCE
          MD5[0]=68eaf93e4019fa012a0663e81dc1e061
