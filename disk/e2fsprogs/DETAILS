           SPELL=e2fsprogs
         VERSION=1.30
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
          MD5[0]=7f1072ca87fe5f5f4f33f4450d98076e
        WEB_SITE=http://e2fsprogs.sourceforge.net
      LICENSE[0]=GPL
