   SOURCE_URL[2]=ftp://ftp.uni-tuebingen.de/pub/mirrors/ftp.metalab.unc.edu/pub/Linux/system/boot/${SPELL}/${SOURCE}
   SOURCE_URL[3]=ftp://ftp.sai.msu.su/pub/Linux/boot/${SOURCE}
