depends  gnupg     &&
depends  smgl-fhs  &&

KVER=`installed_version linux |cut -c-6`  &&

if [[ "$KVER" < "2.6.13" ]]; then
  depends  hotplug
fi  &&

optional_depends  libselinux             \
                  "USE_SELINUX=true"     \
                  "USE_SELINUX=false"    \
                  "For selinux support"  &&

optional_depends  SYSTEM-LOGGER                 \
                  "USE_LOG=true"                \
                  "USE_LOG=false"               \
                  "For logging through syslog"
