  if [ "$SFS_CVS_AUTOUPDATE" == "y" ]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=cvs
  fi
          SOURCE=$SPELL-cvs.tar.bz2
   SOURCE_URL[0]="cvs://:pserver:sfscvs@cvs.fs.net:/cvs:sfs1"
