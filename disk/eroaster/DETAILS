   SOURCE_URL[0]=ftp://eclipt.uni-klu.ac.at/pub/projects/eroaster/$SOURCE
     SOURCE_HASH=sha512:1f46e545aa06070cc11e9f42c7f4b5fe7d4274e1dcbcadfcfc18d9197fde55c7b34ad91a1c5bcae621b701bd7ca0fef4d05c4e04771a87bf7a13e828be1e7961
