          SOURCE=gnu-$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/gnu-$SPELL-$VERSION
   SOURCE_URL[0]=$GNU_URL/$SPELL/$SOURCE
WEB_SITE=http://www.gnu.org/software/ghostscript/ghostscript.html
      LICENSE[0]=GPL
          MD5[0]='0df418d163d05f762431830fe1e6445e'
