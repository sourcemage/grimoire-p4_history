default_pre_build       &&
cd ${SOURCE_DIRECTORY}  &&

sedit "s:/usr/local/bin:/usr/bin:g" Makefile                  &&
sedit "s:/usr/local/man/man1:/usr/share/man/man1:g" Makefile  &&

if [ "${POSTER_LETTER}" == "y" ]; then
   sedit "s:#define DefaultMedia  \"A4\":#define DefaultMedia  \"Letter\":g" poster.c  &&
   sedit "s:#define DefaultImage  \"A4\":#define DefaultImage  \"Letter\":g" poster.c
fi
