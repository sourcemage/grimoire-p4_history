                  "--enable-cups"               \
                  "--disable-cups"              \
                  "CUPS print spooler support"  &&

optional_depends  "ijs"                             \
                  "--with-ijs"                      \
                  "--without-ijs"                   \
                  "for IJS print protocol support"  &&

optional_depends  "ghostscript-fonts-other"  \
                  ""                         \
                  ""                         \
                  "for additional fonts"
