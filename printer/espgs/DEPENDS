depends  g++                    &&
depends  ghostscript-fonts-std  &&
depends  jpeg                   &&
depends  libpng                 &&
depends  tiff                   &&
depends  X11-LIBS               &&
depends  zlib                   &&
depends  glib2                  &&

if [ "${ESPGS_LIBGS}" == "y" ]; then
   depends gtk+
fi  &&

