   SOURCE_URL[0]=${SOURCEFORGE_URL}/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:39c3a121386a1b0eebb12d858dcaf5d75e5adcee3e002de08f1754de78001c3cca0d8de218a7e455109f3994bccf1e78bb9d6266dfbcd2194c6a91e123c2ae69
