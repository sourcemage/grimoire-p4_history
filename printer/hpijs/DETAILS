SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/hpinkjet/$SOURCE
          MD5[0]=9593b8b60da97f2c9dfb168eee1fc850
