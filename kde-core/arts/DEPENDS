depends  glib2        &&
depends  qt-x11       &&
depends  docbook-dtd  &&

optional_depends  alsa-lib            \
                  "--with-alsa"       \
                  "--without-alsa"    \
                  "for ALSA support"  &&

optional_depends  libmad                         \
                  "--enable-libmad"              \
                  "--disable-libmad"             \
                  "for MAD mp3 decoder support"  &&

optional_depends  libvorbis                 \
                  "--enable-arts-vorbis"    \
                  "--disable-arts-vorbis"   \
                  "for Ogg Vorbis support"
