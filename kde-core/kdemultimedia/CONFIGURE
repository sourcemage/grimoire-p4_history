source  $SECTION_DIRECTORY/KDE_CONFIGURE  &&

config_query_option  KDEMULTIMEDIA_CDDA                 \
                     "Enable CDDA lookups in KSCD?"  y  \
                     "--with-kscd-cdda"                 \
                     "--without-kscd-cdda"              &&

if  spell_ok  xine-lib;  then
  config_query  XINELIB                                            \
                "Install xine-lib for XINE video integration?"  y
else
  config_query  XINELIB                                            \
                "Install xine-lib for XINE video integration?"  n
fi
