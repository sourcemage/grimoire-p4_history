default_install                                                                     &&
if [ -d "$TMP_DIR/kdm" ]; then
  # Restore backuped kdm dir
  echo "Restoring configuration files..."                                           &&
  rm $INSTALL_ROOT/usr/share/config/kdm/{background,kdm}rc
  install_config_file $TMP_DIR/kdm/backgroundrc $INSTALL_ROOT/usr/share/config/kdm/  &&
  install_config_file $TMP_DIR/kdm/kdmrc $INSTALL_ROOT/usr/share/config/kdm/  &&
  rm -r $TMP_DIR/kdm
fi
