depends  jpeg        &&
depends  libpng      &&
depends  zlib        &&
depends  X11-SERVER  &&

optional_depends  libxml2                               \
                  '--enable-xml --enable-xml-reader'    \
                  '--disable-xml --disable-xml-reader'  \
                  'for XML and XML socket support'      &&

optional_depends  OPENGL                    \
                  '--enable-opengl'         \
                  '--disable-opengl'        \
                  'Allow OpenGL rendering'  &&

optional_depends  GECKO                      \
                  '--enable-plugin'          \
                  '--disable-plugin'         \
                  'for GECKO-based plug-in'  &&

optional_depends  sdl                       \
                  ''                        \
                  ''                        \
                  'for SDL output support'  &&

optional_depends  sdl_mixer                       \
                  ''                              \
                  ''                              \
                  'for SDL sound mixing support'
