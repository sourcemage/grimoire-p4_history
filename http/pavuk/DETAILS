   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:bec1905294608752650be4aba809f5b47857fc3ee410857c954709d1b14b90522ef62872f66a7a5f867260df04d27b8beb37ad0f152c999ceaa854f928f142c9
