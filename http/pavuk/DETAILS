   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:c4577c7a6b767d4f7b0a8f4b2e2f9865a57d1d9553311bb5c45ab506037499cf2ef4b563442fe64d47e0314995339c8bbf0d1e1f050cf3c7768aa9138dc734c4
