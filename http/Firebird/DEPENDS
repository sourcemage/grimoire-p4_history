depends libIDL                      &&
depends zlib   '--with-system-zlib' &&
depends jpeg   '--with-system-jpeg' &&
depends libpng '--with-system-png'  &&
if [ "$GTK" = "yes" ]
then depends  gtk+ '--enable-default-toolkit=gtk' &&
     depends  ORBit
fi                                  &&
if [ "$GTK2" = "yes" ]
then depends  gtk+2 '--enable-default-toolkit=gtk2 --enable-xft'         
fi                                  &&
depends zip                         &&
depends perl                        &&
depends freetype2                   &&
if [ "$HEADCODE" = "yes" ] 
then depends cvs  
fi

