SOURCE_DIRECTORY=$BUILD_DIRECTORY/dosevasive
   SOURCE_URL[0]=http://www.networkdweebs.com/stuff/$SOURCE
          MD5[0]=aa358258c81705a719d0f70e5f1a400c
