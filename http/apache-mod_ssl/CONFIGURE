if  !  grep  -q  "MODSSL_BOOT="  $SPELL_CONFIG;  then

  if    query  "Invoke apache-modssl during boot?" y
  then  echo   "MODSSL_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "MODSSL_BOOT=n"  >>  $SPELL_CONFIG
  fi

fi


if  grep  -q  "CERTIFICATE="  $SPELL_CONFIG
then  CERTIFICATE="n"
else  CERTIFICATE="y"
fi


if    query  "Generate self signed certificate?" $CERTIFICATE
then  CERTIFICATE="y"
else  CERTIFICATE="n"
fi

message  "${MESSAGE_COLOR}If you choose to encrypt the"  \
         "server key with a pass phrase you will be"     \
         "prompted for that pass phrase every time"      \
         "the server is started.${DEFAULT_COLOR}"
  
TEMP=`grep  -v  "CERTIFICATE="        $SPELL_CONFIG`
echo  "$TEMP"                     >   $SPELL_CONFIG
echo  "CERTIFICATE=$CERTIFICATE"  >>  $SPELL_CONFIG
