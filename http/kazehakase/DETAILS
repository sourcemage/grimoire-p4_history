          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/19521/${SOURCE}
     SOURCE_HASH=sha512:a12ef76d2f255c07e75e3849ebb4bcbf25ae5624c0943a27aadffca6b2f54fca8c2f22affae7b4efd58477b73603d17df965f286c4130592d3bc82979394a1dd:UPSTREAM_HASH
