  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=cvs
  fi
          SOURCE=${SPELL}-cvs.tar.bz2
  FORCE_DOWNLOAD=ON
   SOURCE_URL[0]=cvs://:pserver:anonymous@cvs.sourceforge.jp:/cvsroot/kazehakase:kazehakase
