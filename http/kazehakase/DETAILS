   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/17700/${SOURCE}
     SOURCE_HASH=sha512:7c61bb238ebfe5b378be55533c31612c0a02e181c59648984aa9a98e3885cc4f35b4af946c2420f99933f6969cd5913addd4a7ee714638167f9fdfe246e1408d:UPSTREAM_HASH
