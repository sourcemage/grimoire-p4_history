          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/16705/${SOURCE}
     SOURCE_HASH=sha512:b997005e7f89a2e4cd222d04f39d9d8957e6a0d681bf8d6ad870f795272d6b07daeffb95f4f624e0489dc94cc097c7424887f26d445826e3a92855add84a9008
