   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/17175/${SOURCE}
     SOURCE_HASH=sha512:1150875185b69687746781897b24d40c9819de88f01d42edee3f0d537d9b2c2967a6bfe828fecb06701ba8bdd7332aa79dd88c36405c7d780a64dd2c5482b8fb
