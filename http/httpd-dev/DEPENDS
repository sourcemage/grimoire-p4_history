# $Id: DEPENDS,v 1.1 2002/08/20 14:20:14 sergeyli Exp $
optional_depends openssl           \
	" --enable-ssl"                \
	"--disable-ssl"                \
	"for SSL-enabled HTTP serving" &&

optional_depends openldap                                                   \
	" --enable-auth-ldap  --enable-ldap --with-auth-ldap    --with-ldap   " \
	"--disable-auth-ldap --disable-ldap --with-auth-ldap=no --with-ldap=no" \
	"for LDAP-based authentication"
