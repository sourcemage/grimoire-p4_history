depends  jpeg    &&
depends  libpng  &&
depends  zlib    &&
depends  zip     &&
depends  ORBit   &&
depends  perl    &&

depends  gtk+2  '--enable-default-toolkit=gtk2' &&

optional_depends openldap '--enable-ldap' '--disable-ldap' 'for ldap:// schema support' &&
#optional_depends libical '--enable-calendar' '--disable-calendar' 'for Calendar support' &&

case $MOZILLA_ENIGMAIL in
  Y|y|J|j)
    depends gnupg
    ;;
esac &&

case $MOZILLA_XFT2 in
  Y|y|J|j)
    depends freetype2   &&
    depends fontconfig  &&
    depends Xft2
    ;;
  *)
    optional_depends "freetype2" "--with-ft-exec-prefix=/usr/bin" "--disable-freetype2 --disable-freetypetest" "for TrueType font support"
    ;;
esac
