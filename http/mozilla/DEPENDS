depends zip &&
depends perl &&

depends zlib   '--with-system-zlib' &&
depends jpeg   '--with-system-jpeg' &&
depends libpng '--with-system-png'  &&
depends gtk+2  '--enable-default-toolkit=gtk2' &&
depends libIDL '--with-libIDL' &&

optional_depends libmng                           \
                 '--with-system-mng'              \
                 '--without-system-mng'           \
                 'for MNG picture format support' &&

if echo "$OPTS" | grep -q 'enable-svg'; then
  depends libart_lgpl '--enable-svg-renderer-libart'
fi &&

if echo "$MOZILLA_EXT" | grep -q 'enigmail'; then
  depends gnupg
fi
