function configure_set_bool() {
  if [ -z "$1" ] || [ -z "$2" ]; then
    return
  fi

  local OPTION=$1
  local PROMPT="$2"
  local HINT=${3:-y}

  if ! grep -q "$OPTION=" $SPELL_CONFIG; then
    local VALUE="$OPTION=n"
    query "$PROMPT" $HINT && VALUE="$OPTION=y"
    echo "$VALUE" >> $SPELL_CONFIG
  fi
}

configure_set_bool MOZILLA_MAIL 'Build Mail/News client?'
configure_set_bool MOZILLA_CHAT 'Build Chat client?'
configure_set_bool MOZILLA_CALENDAR 'Enable Calendar client?'
configure_set_bool MOZILLA_CRYPTO 'Enable Personal Security Manager (PSM) for encryption support?'
configure_set_bool MOZILLA_MATHML 'Enable MathML?'
configure_set_bool MOZILLA_SVG 'Enable SVG?'
configure_set_bool MOZILLA_JAVA 'Enable Blackwood Java Code (not needed for Java Plugin support)?' n
configure_set_bool MOZILLA_XINERAMA 'Enable Xinerama support?' n
configure_set_bool MOZILLA_LDAP 'Enable LDAP:// schema support?'
configure_set_bool MOZILLA_ENIGMAIL 'Enable Enigmail support?' $MOZILLA_MAIL
