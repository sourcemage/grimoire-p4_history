MOZILLA_HOME=$INSTALL_ROOT/usr/lib/mozilla &&

# everything coming into /usr/lib/mozilla-${VERSION/rc*}/
# must actually go to /usr/lib/mozilla/
mkdir -p $MOZILLA_HOME &&
ln -fns $MOZILLA_HOME $MOZILLA_HOME-${VERSION/rc*} &&
mkdir -p $INSTALL_ROOT/usr/share/idl/mozilla &&
ln -fns $INSTALL_ROOT/usr/share/idl/mozilla $INSTALL_ROOT/usr/share/idl/mozilla-${VERSION/rc*} &&
mkdir -p $INSTALL_ROOT/usr/include/mozilla/nss &&
ln -fns $INSTALL_ROOT/usr/include/mozilla $INSTALL_ROOT/usr/include/mozilla-${VERSION/rc*} &&

make install &&

# install NSS headers -- concept by David Braaten
find $SOURCE_DIRECTORY/security/nss/lib -type f -name '*.h' -exec cp {} $INSTALL_ROOT/usr/include/mozilla/nss/ \; &&

if ! grep -q 'mozilla' $INSTALL_ROOT/etc/ld.so.conf; then
  echo '/usr/lib/mozilla' >> $INSTALL_ROOT/etc/ld.so.conf
fi
