MOZILLA_HOME=$INSTALL_ROOT/usr/lib/mozilla &&

# everything coming into /usr/lib/mozilla-${VERSION/rc*}/
# must actually go to /usr/lib/mozilla/
mkdir -p $MOZILLA_HOME &&
ln -fns $MOZILLA_HOME $MOZILLA_HOME-${VERSION/rc*} &&
mkdir -p /usr/share/idl/mozilla &&
ln -fns /usr/share/idl/mozilla /usr/share/idl/mozilla-${VERSION/rc*} &&
mkdir -p /usr/include/mozilla &&
ln -fns /usr/include/mozilla /usr/include/mozilla-${VERSION/rc*} &&

make install &&

if  !  grep  -q  "mozilla"  /etc/ld.so.conf
then
  echo  "/usr/lib/mozilla"  >>  /etc/ld.so.conf
fi
