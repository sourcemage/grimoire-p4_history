optional_depends  openssl                              \
                  "--with-ssl=/usr"                    \
                  "--without-ssl"                      \
                  "to support secure HTTP (https://)"  &&

optional_depends  flex                  \
                  "--with-libfl"        \
                  "--without-libfl"     \
                  "for parser support"  &&

