#!/bin/bash

RUNLEVEL=3
NEEDS="+network"

. /etc/init.d/smgl_init

case $1 in
	  start)
			echo "Starting Apache web server ..."
			apachectl $1
			#	apachectl startssl
			evaluate_retval
			;;
			
  	restart)
			echo "Restarting Apache web server ..."
			if [ -f /var/run/httpd.pid ]; then
				apachectl $1
				evaluate_retval
			else
				$0 start
			fi
			;;
			
	   stop)
			echo "Stopping Apache web server ..."
			apachectl $1
			evaluate_retval
			;;
			
	      *)
			echo "Usage: $0 {start|stop|restart}"
			exit 1
			;;
esac
