default_install                            &&
cp  examples/synergy.conf                  \
    /etc/synergy.conf.sample               &&

#
# For some reason, Sorcery would not install
# init.d/synergy.conf to /etc/sysconfig/synergy
#
cp  $SCRIPT_DIRECTORY/init.d/synergy.conf  \
    /etc/sysconfig/synergy
