depends  bc                  &&
depends  zlib                &&
depends  X11-LIBS            &&
if [ "$TOOLKIT" = "GTK" ]
then depends  gtk+           &&
     depends  gdk-pixbuf     &&
     depends  libxml         &&
     depends  control-center 
fi                           &&
if [ "$TOOLKIT" = "GTK2" ]
then depends  gtk+2          &&
     depends  libxml2        &&       
     depends  libglade2
fi                           &&
if [ "$TOOLKIT" = "MOTIF" ]
then depends  MOTIF
fi                           &&
optional_depends  Linux-PAM "--with-pam" "--without-pam" "for Pluggable Authentication Modules (PAM)"       &&
optional_depends  krb5 "--with-kerberos" "--without-kerberos" "for Kerberos authentication support"         &&
optional_depends  shadow "--with-shadow" "--without-shadow" "for shadow password authentication support"    &&
optional_depends  GLUT "--with-gl  --with-gle" "--without-gl  --without-gle" "for OpenGL and GLE demos"     &&
