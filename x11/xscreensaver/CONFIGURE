if ! grep -q CONFIGURED $SPELL_CONFIG || ! grep -q TOOLKIT $SPELL_CONFIG
then  sedit '1,5D' $SPELL_CONFIG &&
      if query "Would you like to add GNOME support to the Xscreensaver package?" n
       then if query "Use older gnome-libs/gtk+/gdk-pixbuf combination" n
            then TOOLKIT=GTK &&
                OPTS="\$OPTS --without-motif --with-gtk --with-xml --with-pixbuf --with-gnome"
            elif query "Use current GNOME2/gtk+2 combination" y
                 then  TOOLKIT=GTK2 &&
                       OPTS="\$OPTS --without-motif --without-pixbuf --with-gtk --with-xml"
            else OPTS="\$OPTS --with-motif --without-pixbuf --without-gtk --without-xml" &&
                 TOOLKIT=MOTIF 
             fi 
      else
         OPTS="\$OPTS --with-motif --without-pixbuf --without-gtk --without-xml" &&
         TOOLKIT=MOTIF 
      fi
     echo CONFIGURED=yes >> $SPELL_CONFIG &&
     echo TOOLKIT=$TOOLKIT >> $SPELL_CONFIG &&
     echo OPTS=\"$OPTS\"     >> $SPELL_CONFIG
fi
