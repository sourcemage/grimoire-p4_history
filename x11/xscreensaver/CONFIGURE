# Force reconfig if the old config format is found.
if  grep  -q  CONFIGURED  $SPELL_CONFIG  ;  then
  : > $SPELL_CONFIG
fi

if  !  grep  -q  TOOLKIT  $SPELL_CONFIG  ;  then
  message  "The xscreensaver demo program allows you to browse among the"
  message  "different effects available in xscreensaver. Enabling this adds"
  message  "dependencies on gtk+2 and libglade2."
  if  query  "Do you wish to enable xscreensaver-demo?"  y  ;  then
    TOOLKIT=GTK2
    OPTS="--with-gtk --with-xml"
  else
    TOOLKIT=NONE
    OPTS="--without-gtk --without-xml"
  fi
  echo  "TOOLKIT=$TOOLKIT"  >>  $SPELL_CONFIG
  echo  "OPTS=\"\$OPTS $OPTS\""  >>  $SPELL_CONFIG
fi
