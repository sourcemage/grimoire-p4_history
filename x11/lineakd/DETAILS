           SPELL=lineakd
         VERSION=0.3.5
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/lineak/$SOURCE
          MD5[0]=0e4a780705e0babc1c9ab69135cff24c
	WEB_SITE=http://lineak.sourceforge.net/
         ENTERED=
         UPDATED=
