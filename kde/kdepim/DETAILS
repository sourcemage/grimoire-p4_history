           SPELL=kdepim
         VERSION=$(grep "KDE_VERSION=" $GRIMOIRE/kde/KDE_DETAILS | awk -F '=' '{print $2;}')
          SOURCE=$SPELL-$VERSION
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$KDE_URL/stable/$VERSION/src/$SOURCE
        WEB_SITE=$(grep "KDE_WEB_SITE=" $GRIMOIRE/kde/KDE_DETAILS | awk -F '=' '{print $2;}')
