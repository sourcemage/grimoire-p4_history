if ! grep -q "MP3" $SPELL_CONFIG; then

	if query "Enable mp3 - support with CDBakeOven" y
	then MP3=y
	else MP3=n
	fi

	echo "MP3=$MP3" >> $SPELL_CONFIG

fi

if ! grep -q "OGG" $SPELL_CONFIG; then

	if query "Enable ogg/vorbis - support with CDBakeOven ?" n
	then OGG=y
	else OGG=n
	fi

	echo "OGG=$OGG" >> $SPELL_CONFIG

fi
