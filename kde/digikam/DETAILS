           SPELL=digikam
if [ "$USECVS" == "yes" ];then
         VERSION=`date -u +%Y%m%d`
          SOURCE=${SPELL}3-cvs-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}3
   SOURCE_URL[0]=http://digikam.free.fr/Tarballs/$SOURCE
             MD5=IGNORE
else
         VERSION=0.6.0-rc2
          SOURCE=${SPELL}-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/digikam/$SOURCE
             MD5=e50538eae98513ca57f568ddfee69fec
fi
        WEB_SITE=http://digikam.sourceforge.net
         LICENCE=GPL
         ENTERED=20020305
         UPDATED=20040114
      MAINTAINER=treeve01@pi.be
           SHORT="digital camera interface for KDE, using gphoto2"

cat << EOF
Digikam - A KDE frontend for gphoto2. Designed to be a standalone 
application to preview and download images from a digital camera
on a linux machine.
