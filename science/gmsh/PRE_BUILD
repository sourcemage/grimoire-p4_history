cd $BUILD_DIRECTORY              &&
unpack_file                      &&

if grep -q 'triangle="y"'  ${SPELL_CONFIG}
then
  mkdir -p $SOURCE_DIRECTORY/tmp &&
  cd $SOURCE_DIRECTORY/tmp       &&
  unpack_file 2                  &&
  cp triangle.c ../Triangle      &&
  cp triangle.h ../Triangle
fi                               &&

cd $SOURCE_DIRECTORY 
