depends  autoconf  &&
depends  automake  &&
depends  g++       &&
depends  curl      &&

if [[ $BOINC_PARTS == both || $BOINC_PARTS == client ]]
then
  optional_depends  wxgtk-no-unicode              \
                    '--with-wx-config=wx-config'  \
                    ''                            \
                    'for wxGTK-based GUI'
fi  &&

if [[ $BOINC_PARTS == both || $BOINC_PARTS == server ]]
then
  depends  mysql 'MYSQL_CONFIG=mysql_config'
fi
