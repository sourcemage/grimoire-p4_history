   SOURCE_URL[0]=http://geda.seul.org/devel/${VERSION}/${SOURCE}
     SOURCE_HASH=sha512:36f46598b9c65a355fc30fe648f4241f6ef8c368d177ba1e0eba66249ec952eb5f116e0ce115a13934c7eb63cef2eff9760200d915783cdd7a44fb2ca5b396d8
