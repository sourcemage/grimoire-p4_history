if  !  grep  -q  "FORTRAN="  ${SPELL_CONFIG};  then
  if  [  !  -x  ${INSTALL_ROOT}/usr/bin/g77  ]
  then
    message  "${PROBLEM_COLOR}You do _not_ have a Fortran 77 enabled compiler,"
    message  "please recompile gcc to support f77 and try again.${DEFAULT_COLOR}"
    if  query  "Are sure you have a f77-compatible compiler installed?"  n
    then  exit  1
    else  exit  0
    fi
  fi

  echo  "FORTRAN='y'"  >>  ${SPELL_CONFIG}
fi
