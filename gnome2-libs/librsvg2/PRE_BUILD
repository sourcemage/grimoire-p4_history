default_pre_build     &&
cd $SOURCE_DIRECTORY  &&

if test "$(get_spell_provider $SPELL GECKO)" = firefox; then
   sedit "s:npapi.h:firefox/npapi.h:" moz-plugin/moz-plugin.c                  &&
   sedit "s:npupp.h:firefox/npupp.h:" moz-plugin/moz-plugin.c                  
else
   sedit "s:npapi.h:mozilla/npapi.h:" moz-plugin/moz-plugin.c                  &&
   sedit "s:npupp.h:mozilla/npupp.h:" moz-plugin/moz-plugin.c                  
fi  

