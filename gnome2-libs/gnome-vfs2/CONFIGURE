config_query  IPV6  "Enable IPV6 support?"  n  &&

if    spell_ok  openssl;  then
  config_query_list  GNOME_VFS_CRYPTO  'Use which encryption scheme?'  \
                                       openssl gnutls none
elif  spell_ok  gnutls;  then
  config_query_list  GNOME_VFS_CRYPTO  'Use which encryption scheme?'  \
                                       gnutls openssl none
else
  config_query_list  GNOME_VFS_CRYPTO  'Use which encryption scheme?'  \
                                       none openssl gnutls
fi
