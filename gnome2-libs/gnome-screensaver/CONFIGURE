config_query_option GSCREENSAVER_LOCKING "Enable display locking support?" y    \
                    "--enable-locking" "--disable-locking"                      &&

config_query_option GSCREENSAVER_XINERAMA "Enable xinerama support?" y          \
                    "--enable-xinerama" "--disable-xinerama"                    &&

config_query_option GSCREENSAVER_DPMS "Enable DPMS extension" y                 \
                    "--with-dpms-ext"  "--without-dpms-ext"                     &&

config_query_option GSCREENSAVER_XIDLE "Enable XIdle extension" y               \
                    "--with-xidle-ext"  "--without-xidle-ext"                   &&

config_query_option GSCREENSAVER_VMODE "Enable X virtual screens extension" n   \
                    "--with-xf86vmode-ext"  "--without-xf86vmode-ext"           &&

config_query_option GSCREENSAVER_GAMMA "Enable X gamma fading" n                \
                    "--with-xf86gamma-ext"  "--without-xf86gamma-ext"           &&

config_query GSCREENSAVER_CONVERT "Import xscreensaver hacks?" n                
