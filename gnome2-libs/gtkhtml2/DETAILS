           SPELL=gtkhtml2
         VERSION=3.10.1
	  BRANCH=`echo $VERSION|cut -d . -f 1,2`
          SOURCE=gtkhtml-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/gtkhtml-$VERSION
   SOURCE_URL[0]=$GNOME_URL/sources/gtkhtml/$BRANCH/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
      LICENSE[0]=GPL
      LICENSE[1]=LGPL
      MAKE_NJOBS=1
