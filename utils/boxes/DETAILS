           SPELL=boxes
         VERSION=1.0.1
          SOURCE=$SPELL-$VERSION.src.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://boxes.thomasjensen.com/download/$SOURCE
     SOURCE_HASH=sha512:46651e06bdbce0d395557e769fe08c595f929b7a1044f0394d702c7c2d2d53d2e5017fd95afe80c07e577b78e0f42476b11c4f7535cf6ab49c3cbf8b64f3badd
