SUNBIRD_HOME=${INSTALL_ROOT}/usr/lib/sunbird &&
mkdir -p $SUNBIRD_HOME &&
ln -s $SUNBIRD_HOME $SUNBIRD_HOME-$VERSION &&

make install &&

cd ${INSTALL_ROOT}/usr/lib/sunbird &&
export LD_LIBRARY_PATH="$SUNBIRD_HOME" &&
export MOZILLA_FIVE_HOME="$SUNBIRD_HOME" &&
./regxpcom &&
./regchrome &&
touch `find . -name *.rdf`

