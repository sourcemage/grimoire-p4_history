SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.openwall.com/passwdqc/$SOURCE
          MD5[0]=9222e7ba779f31beaa336647b8478937
