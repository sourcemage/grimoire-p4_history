           SPELL=pam_passwdqc
         VERSION=0.7.4
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.openwall.com/pam/modules/$SPELL/$SOURCE
          MD5[0]=5662abf170fef664815f9a467a1eeda2
        WEB_SITE=http://www.openwall.com/passwdqc/
