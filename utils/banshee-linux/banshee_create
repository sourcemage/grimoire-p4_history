#!/bin/sh
#
# This is a script for dumping the Banshee Linux/R images to floppy
#
# v1.0.0  2003-06-09  Eric Sandall <eric@sandall.us>  Initial version
#
# Released under the GNU Public License (GPL)
#
# Usage: banshee_create
# Requires write access to /dev/fd0
#

DD="/bin/dd"
DESTINATION="/dev/fd0"
IMAGEDIR="/usr/share/banshee-linux"

echo  "Please insert disk for Boot floppy and press ENTER"    &&
read  -e                                                      &&
echo  "Writing Boot floppy..."                                &&
${DD}  if=${IMAGEDIR}/banshee-b.img  of=${DESTINATION}        &&
echo  "Please insert disk for Rescue floppy and press ENTER"  &&
read  -e                                                      &&
echo  "Writing Rescue floppy..."                              &&
${DD}  if=${IMAGEDIR}/banshee-r.img  of=${DESTINATION}        &&
echo  "All done!"
