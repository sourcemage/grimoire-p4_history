service ntp
{
  socket_type	   = stream
  protocol	      = tcp
  wait            = no
  user            = root
  server          = /usr/bin/ntpd
  # server_args     =
  per_source      = 8
  log_type	      = FILE  /var/log/xinetd/ntp
  log_on_success	= PID  HOST  USERID  EXIT  DURATION
  log_on_failure	= USERID  ATTEMPT
}
