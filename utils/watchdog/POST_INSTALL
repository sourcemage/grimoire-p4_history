if [ -e /etc/metalog.conf ]; then
  rv=`grep "watchdog" /etc/metalog.conf`
  if [ "$rv" == "" ]; then
    echo " " 					>> /etc/metalog.conf
    echo "Watchdog messages :" 			>> /etc/metalog.conf
    echo "program  = \"watchdog\""		>> /etc/metalog.conf
    echo "logdir   = \"/var/log/watchdog\""	>> /etc/metalog.conf
    telinit run metalog restart
  fi
fi

message "${MESSAGE_COLOR}Warning, with $SPELL you may encounter continuous reboot if it is misconfigured..."
message "Use with care, and do try your settings with '-q' argument in /etc/sysconfig/watchdog (simulation only) prior using it for real."
message "Watch in /var/log/watchdog/current for output. ${DEFAULT_COLOR}"

