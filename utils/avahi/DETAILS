   SOURCE_URL[0]=http://avahi.org/download/$SOURCE
     SOURCE_HASH='sha512:68873d4a91f2aebaa0abbd5849a4b66103a0d27045e001413752084190b08ae61b2636a88a23401591643bba7a8e6cb426db6737125d033e600f5a49f15550d1'
