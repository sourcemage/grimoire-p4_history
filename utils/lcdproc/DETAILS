   SOURCE_URL[0]=${SOURCEFORGE_URL}/$SPELL/$SOURCE
   SOURCE_URL[1]=http://lcdproc.omnipotent.net/download/$SOURCE
     SOURCE_HASH=sha1:3edce3e9aa160e6a2a380895cc22056287d01bde
