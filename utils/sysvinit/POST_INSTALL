mkdir  -p  /etc/rc0.d
mkdir  -p  /etc/rc1.d
mkdir  -p  /etc/rc2.d
mkdir  -p  /etc/rc3.d
mkdir  -p  /etc/rc4.d
mkdir  -p  /etc/rc5.d
mkdir  -p  /etc/rc6.d
mkdir  -p  /etc/rcS.d
mkdir  -p  /etc/init.d
mkdir  -p  /var/run
mkdir  -p  /var/log
mkdir  -p  /devices

[  -e  /etc/inittab            ]  ||  cp  $SCRIPT_DIRECTORY/inittab     /etc

touch  /var/run/utmp
touch  /var/log/wtmp
touch  /var/log/btmp
touch  /var/log/lastlog

chmod  644  /var/run/utmp
chmod  644  /var/log/wtmp
chmod  644  /var/log/btmp
chmod  644  /var/log/lastlog
