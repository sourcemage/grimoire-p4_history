#!/bin/sh

if  [  "$UID"  ==  0  ];  then

  if  [  -z  "$1"  ];  then
    read  -p  "Username: "  NEWSER
  else
    NEWSER=$1
  fi

  groupadd     $NEWSER
  useradd  -m  $NEWSER  -g  $NEWSER

  touch                 /var/spool/mail/$NEWSER
  chown   $NEWSER:mail  /var/spool/mail/$NEWSER
  chmod   0660          /var/spool/mail/$NEWSER
  passwd  $NEWSER

else

  su  -  -c  "PATH=$PATH  $0  $1"

fi

