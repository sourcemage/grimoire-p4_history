           SPELL=pwgen
         VERSION=2.04
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/$SPELL/$SOURCE
        WEB_SITE=http://pwgen.sourceforge.net
     SOURCE_HASH=sha512:45991bd94195fa730b19b5786c48d02adf111882a79b68158b27098bd07f2e9cb16650d6d707fc879359ab28bfe03754f891cbf0a0e1b385a6fba7595d189266 
