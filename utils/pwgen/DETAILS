           SPELL=pwgen
         VERSION=2.05
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/$SPELL/$SOURCE
        WEB_SITE=http://pwgen.sourceforge.net
     SOURCE_HASH=sha512:ab2bb2af5509dd379f640b39b87fb0cc23c0f61a7453097a4bb0439a78b6ea5a5f54d40bf321fd8b4a58aae5bd94169b0ce4734f67b7dde5ced5807c1a9caf51
      LICENSE[0]=GPL
         ENTERED=20040529
