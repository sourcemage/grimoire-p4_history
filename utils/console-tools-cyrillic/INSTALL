cd acm/                                                                     &&
mkdir -p ${INSTALL_ROOT}/usr/share/consoletrans                             &&
install -v -m 0644 *.acm.gz ${INSTALL_ROOT}/usr/share/consoletrans          &&
cd ../psf/                                                                  &&
mkdir -p ${INSTALL_ROOT}/usr/share/consolefonts                             &&
install -v -m 0644 *.psf.gz ${INSTALL_ROOT}/usr/share/consolefonts          &&
cd ../keymap/                                                               &&
mkdir -p ${INSTALL_ROOT}/usr/share/keymaps/i386/qwerty                      &&
install -v -m 0644 *.kmap.gz ${INSTALL_ROOT}/usr/share/keymaps/i386/qwerty  &&
cd ../sfm/                                                                  &&
install -v -m 0644 *.sfm.gz ${INSTALL_ROOT}/usr/share/consoletrans
