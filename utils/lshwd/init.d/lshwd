#!/bin/sh

PROGRAM=/bin/true
RUNLEVEL=S
NEEDS="+local_fs"

# source function library
. /etc/init.d/smgl_init


start(){
    echo "Autodetecting Hardware with lshwd"
    lshwd -a >/dev/null
    if [ $? -gt 0 ]; then
    	echo "FAIL"
    else
	echo "DONE"
    fi
}



stop(){
	/sbin/true
	echo "lshwd stopped"
}

restart(){
	stop
	start	
}

