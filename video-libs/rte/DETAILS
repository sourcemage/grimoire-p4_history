           SPELL=rte
         VERSION=0.5.6
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/zapping/$SOURCE
          MD5[0]=581dab1165e44353669e652ae784603f
