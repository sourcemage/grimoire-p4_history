         VERSION=0.8.1
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/pitfdll/$SOURCE
        WEB_SITE=http://ronald.bitfreak.net/pitfdll.php
          MD5[0]=69dd5993f9f0f453eec22ce7a07b1639
      LICENSE[0]=GPL
         ENTERED=20050423
