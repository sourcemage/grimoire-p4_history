if test "${SMGL_COMPAT_ARCHS[1]}" = "x86_64"; then
  optional_depends  yasm  ""  "--disable-assembly"  "for faster code"
elif test "${SMGL_COMPAT_ARCHS[1]}" = "ia32"; then
# note: this isn't ideal, but it works, if either of those two is enabled
#       the assembly code gets compiled
  optional_depends  yasm  "--enable-assembly"   \
                          "--disable-assembly"  \
                          "for faster code"  &&
  optional_depends  nasm  "--enable-assembly"   \
                          ""                    \
                          "for faster code"
fi
