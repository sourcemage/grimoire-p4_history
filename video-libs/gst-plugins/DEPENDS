depends  gstreamer   &&

# input sources
optional_depends  "gnome-vfs2"  ""  ""  "for gnome-vfs source support"  &&
optional_depends  "libghttp"  ""  ""  "for http source support"  &&
optional_depends  "libdvdread"  ""  ""  "for DVD source support"  &&
optional_depends  "libdvdnav"  ""  ""  "for extended DVD source support"  &&
optional_depends  "cdparanoia"  ""  ""  "for audio CD source support"  &&

# audio output
# doesn't compile with alsa 1.0(pre1) and is broken anyway
#optional_depends  "alsa-lib"  ""  ""  "for ALSA audio input/output"  &&
optional_depends  "arts"  ""  ""  "for arts audio output"  &&
optional_depends  "esound"  ""  ""  "for esd audio output"  &&
optional_depends  "ladspa"  ""  ""  "for ladspa plugin support"  &&

# video output
optional_depends  "SDL"  ""  ""  "for SDL video output"  &&
optional_depends  "Hermes"  ""  ""  "for colorspace conversion support (needed for gst-player!)"  &&
optional_depends  "aalib"   ""  ""  "for ascii-art video output"  &&

# audio codecs
optional_depends  "audiofile" "" "" "for AIFF/.snd/.au decoder"  &&
if  [  "$MP3" = "y"  ];  then
  depends  libmad  &&
  depends  libid3tag
fi  &&
optional_depends  "lame"  ""  ""  "for mp3 encoder"  &&
optional_depends  "libvorbis"  ""  ""  "for ogg-vorbis decoder/encoder"  &&
optional_depends  "flac"  ""  ""  "for FLAC decoder/encoder"  &&
optional_depends  "a52dec"  ""  ""  "for A/52 (AC-3) decoder"  &&
optional_depends  "libmikmod"  ""  ""  "for various module (mod/s3m/xm/...) decoders"  &&

# image codecs
optional_depends  "jpeg"  ""  ""  "for jpeg decoder/encoder"  &&
optional_depends  "libpng"  ""  ""  "for png encoder"  &&

#video codecs
optional_depends  "avifile"  ""  ""  "for avifile video decoder"  &&
# needs >= 0.3.1, other spells fail with that, disabling for now
#optional_depends  "mpeg2dec"  ""  ""  "for mpeg1/2 video decoder"  &&
optional_depends  "libdv" ""  ""  "for dv video decoder"  &&
optional_depends  "libraw1394"  ""  ""  "for RAW1394 dv video decoder"

