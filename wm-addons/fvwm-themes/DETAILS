     SOURCE2_URL=${SOURCEFORGE_URL}/${SPELL}/${SOURCE2}
    SOURCE2_HASH=sha512:1328ffc798dae65afba180bdf08718881d28fb9bd135951d43ee4d59b0bcf5cb9200c50a3f87b81505a715a44491ffb9aa23f397424a76393c2952059f94beb0
