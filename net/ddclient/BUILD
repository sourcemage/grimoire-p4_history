(
  prepare_install                                      &&
  cp  ddclient  /usr/sbin                              &&
  cp  -u  sample-etc_ddclient.conf /etc/ddclient.conf  &&
  mkdir  -p  /usr/doc/ddclient                         &&
  cp  sample-*  /usr/doc/ddclient                      &&
  cp  README  /usr/doc/ddclient

) > $C_FIFO 2>&1
