         VERSION=cvs
          SOURCE=${SPELL}-${VERSION}.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
   SOURCE_URL[0]=cvs://:pserver:anon@cvs.nitmtl.ca:/cvsroot:wvstreams
          MD5[0]='IGNORE'
  FORCE_DOWNLOAD=1
else
         VERSION=4.0
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://people.nit.ca/~sfllaw/${SOURCE}
          MD5[0]='30cc07fd8ecb3379b86d4bb551324ff1'
fi

