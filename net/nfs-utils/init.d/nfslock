#!/bin/sh

PROGRAM=/usr/sbin/exportfs
RUNLEVEL=3
NEEDS="+remote_fs +network +portmap nfs"

. /etc/init.d/smgl_init

start()
{
  echo   "Starting NFS file locking services, rpc.statd"
  pkill  "^rpc.statd$"  &&  sleep  5
  evaluate_retval
  ps  -C  portmap  >  /dev/null  ||
  evaluate_retval
  /usr/sbin/portmap
  evaluate_retval
  /usr/sbin/rpc.statd
  evaluate_retval
}

stop()
{
  echo "Stopping NFS file locking services"
  pkill  "^rpc.statd$"
  evaluate_retval
}

