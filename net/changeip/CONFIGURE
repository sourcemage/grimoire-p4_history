if  !  grep  -q  "USERNAME"  $SPELL_CONFIG;  then

  message "${MESSAGE_COLOR}Enter your changeip.com account username: ${DEFAULT_COLOR}"
  read USERNAME
  echo "USERNAME=$USERNAME" >> $SPELL_CONFIG

fi

if  !  grep  -q  "DDNS_INT"  $SPELL_CONFIG;  then

  message "${MESSAGE_COLOR}Enter your dynamic dns interface (ppp0, eth0...): ${DEFAULT_COLOR}"
  read DDNS_INT
  echo "DDNS_INT=$DDNS_INT" >> $SPELL_CONFIG

fi

if  !  grep  -q  "PASS"  $SPELL_CONFIG;  then

  message "${MESSAGE_COLOR}Enter your changeip.com account password: ${DEFAULT_COLOR}"
  read CHANGEIP_PASS
  echo "PASS=hidden" >> $SPELL_CONFIG

fi

if  !  grep  -q  "CRON="  $SPELL_CONFIG;  then

  message  "${MESSAGE_COLOR}changeip.sh should be run periodically (via cron) ${DEFAULT_COLOR}"

  if    query  "Add a changeip entry to root cron job ?"  y
  then  echo   "CRON=y"  >>  $SPELL_CONFIG
  else  echo   "CRON=n"  >>  $SPELL_CONFIG
  fi

fi

