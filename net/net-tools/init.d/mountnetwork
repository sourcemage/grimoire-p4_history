#!/bin/bash

PROGRAM=/bin/mount
RUNLEVEL=3
NEEDS="+remote_fs +network +portmap"

. /etc/init.d/smgl_init

start()
{
  echo  -n  "Mounting remote filesystems..."
  mount  -a  -F  -t  nfs,ncpfs,smbfs
  evaluate_retval
}

stop()
{
  echo  -n  "Unmounting remote filesystems..."
  umount  -a  -r  -t  nfs,ncpfs,smbfs
  evaluate_retval
}
