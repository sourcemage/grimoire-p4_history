./configure --prefix=/            \
    --bindir=/usr/bin             \
    --sbindir=/usr/sbin           \
    --libexecdir=/usr/libexec     \
    --datadir=/usr/share          \
    --localstatedir=/var/lib/pikt \
    --mandir=/usr/share/man       \
    --libdir=/usr/lib/pikt        \
    --sysconfdir=/etc/pikt        \
    $OPTS                         &&

make


