make DESTDIR=${INSTALL_ROOT} install && 

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/alarms ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/alarms
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/alerts ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/alerts
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/defines ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/defines
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/files ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/files
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/macros ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/macros
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/programs ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/programs
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/systems ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/systems
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/diffing ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/diffing
fi &&

if ! [ -d ${INSTALL_ROOT}/usr/lib/pikt/staging ];
then
    mkdir ${INSTALL_ROOT}/usr/lib/pikt/staging
fi
