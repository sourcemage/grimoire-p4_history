SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-${VERSION}
      SOURCE_URI=$VERSION/$SOURCE
   SOURCE_URL[0]=ftp://ftp.epix.net/pub/isc/bind9/$SOURCE_URI
