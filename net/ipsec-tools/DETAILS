          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:df2202510b643685a5fc143fbd97c4eafeebc3d6e701c3f1ab3efb167f188a71a1aaed5ccd5570097228aaffbb33ea4cf5581cabb835b166795df142927e9292
