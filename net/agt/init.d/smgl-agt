#!/bin/bash

PROGRAM=/usr/sbin/agt
RUNLEVEL=3
NEEDS="+network"

. /etc/init.d/smgl_init

start() {
  echo "Loading agt rules..."
  $PROGRAM > /dev/null 2>&1
  evaluate_retval
}

stop() {
  echo  "Flushing agt rules..."
  $PROGRAM -f /dev/null > /dev/null 2>&1
  evaluate_retval
}

reload() { return 1; }
