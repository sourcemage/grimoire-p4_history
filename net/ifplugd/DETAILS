   SOURCE_URL[0]=http://0pointer.de/lennart/projects/ifplugd/$SOURCE
     SOURCE_HASH=sha512:c606e456f81f224eba9f8912e11fb76b759c160313d1db3c9035775b8c1ca57ca10c88dfb33318ba02f5c025218a377ca78ee160fc3d9a31ac6e95b92f340d4f
