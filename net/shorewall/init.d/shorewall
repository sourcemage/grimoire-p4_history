#!/bin/bash

RUNLEVEL=3
PROGRAM=/sbin/shorewall
NEEDS="+network +remote_fs"

. /etc/init.d/smgl_init

start()
{
  ( unset -f echo; ${PROGRAM} start ; )
}

stop()
{
  ( unset -f echo; ${PROGRAM} stop ; )
}

status()
{
  ( unset -f echo; ${PROGRAM} status ; )
}

reload()
{
  ( unset -f echo; ${PROGRAM} refresh ; )
}
