           SPELL=iptables
if [ "${GRSEC_PATCH}" == "y" ]
then
	 VERSION=1.2.11
         SOURCE4=$SPELL-$VERSION.tar.bz2.sig
  SOURCE4_URL[0]=http://www.iptables.org/files/$SOURCE4
  SOURCE4_IGNORE=signature
      SOURCE_GPG="iptables.gpg:$SOURCE4" 
