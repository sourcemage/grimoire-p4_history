     SOURCE2_URL=http://www.grsecurity.org/${SOURCE2}
          MD5[1]=IGNORE
else
         VERSION=1.3.4
         SOURCE3=$SPELL-$VERSION.tar.bz2.sig
          
  SOURCE3_URL[0]=http://www.iptables.org/projects/$SPELL/files/$SOURCE3
  SOURCE3_IGNORE=signature
      SOURCE_GPG="iptables.gpg:$SOURCE3"
fi
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
      SOURCE_URL=http://www.iptables.org/projects/$SPELL/files/$SOURCE
