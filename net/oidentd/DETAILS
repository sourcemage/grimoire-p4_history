SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}-${VERSION}
   SOURCE_URL[0]=$SOURCEFORGE_URL/ojnk/$SOURCE
          MD5[0]=e9177b6e118f5fed6aa7cd9cf7085f09
