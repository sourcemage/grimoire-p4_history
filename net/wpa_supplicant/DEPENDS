depends  wireless_tools &&

# GSM/UMTS support needs pscs-lite.
if [ "$CONFIG_PCSC" == "y" ]; then
  depends  pcsc-lite
fi  &&

# wpa_gui needs qt-x11.
if [ "$WPA_GUI" == "y" ]; then
  depends  qt-x11
fi  &&

# Only these methods require openssl, not the whole WPA_EAP bunch.
if [ "$CONFIG_EAP_TLS" == "y" ]  ||
   [ "$CONFIG_EAP_PEAP" == "y" ] ||
   [ "$CONFIG_EAP_TTLS" == "y" ]; then
  depends  openssl
fi
