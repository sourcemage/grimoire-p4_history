default_pre_build      &&
cd ${SOURCE_DIRECTORY} &&

#right install paths
sedit "s/\/usr\/local/${INSTALL_ROOT}\/usr/" config.mk &&
sedit "s/\${PREFIX}\/etc/${INSTALL_ROOT}\/etc/" config.mk &&

if [[ ${WMII_SNAP} == "n" ]] ; then

 #path to the plan9 binaries from rc9 spell
 sedit 's/\${PREFIX}\/9/\/opt\/9/' config.mk

fi
