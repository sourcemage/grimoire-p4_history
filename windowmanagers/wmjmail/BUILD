(

  cp $SCRIPT_DIRECTORY/Makefile $SOURCE_DIRECTORY/src            &&
  cd $SOURCE_DIRECTORY/src                                       &&                                   
  make                                                           &&
  cp $SCRIPT_DIRECTORY/maildirchk $SOURCE_DIRECTORY/src/mailchk  &&
  prepare_install                                                &&
  make install

) > $C_FIFO 2>&1
