if ! grep -q "CONFIGURED" ${SPELL_CONFIG}
then

  if    query  "Enable shaped decorations?" y
  then  echo  'OPTS="${OPTS} --enable-shaped-decorations"'   >>  ${SPELL_CONFIG}
  else  echo  'OPTS="${OPTS} --disable-shaped-decorations"'  >>  ${SPELL_CONFIG}
  fi

  echo  "CONFIGURED='y'"  >>  ${SPELL_CONFIG}
fi
