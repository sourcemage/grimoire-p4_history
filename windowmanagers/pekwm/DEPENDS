depends  X11-LIBS  &&

optional_depends  pcre                                                       \
                  "--enable-pcre"                                            \
                  "--disable-pcre"                                           \
                  "Enable support for Perl compatible regular expressions."  &&

if  [  "$CVS" ==  "y"  ]
then  
	depends  cvs &&
	depends  automake &&
	depends  libtool 
fi

