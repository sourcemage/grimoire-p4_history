if [ ! "${RELEASE}" = "stable" ]; then
    config_query_option OPTS                      \
        "Enable NLS?" y                           \
        "--enable-nls"                            \
        "--disable-nls"                           &&
    config_query_option OPTS                      \
        "Enable Xrender alpha-blend rendering?" y \
        "--enable-xrender"                        \
        "--disable-xrender"
fi
config_query_option OPTS                              \
                        "Enable Session Managment?" y \
                        "--enable-sm"                 \
                        "--disable-sm"                &&
config_query_option OPTS                                  \
                        "Enable shaped window support?" y \
                        "--enable-shape"                  \
                        "--disable-shape"                 &&
config_query_option OPTS                             \
                        "Enable xinerama support?" y \
                        "--enable-xinerama"          \
                        "--disable-xinerama"
