if [ ! "${RELEASE}" = "stable" ]; then
    config_query_option FVWM_OPTS                 \
        "Enable NLS?" y                           \
        "--enable-nls"                            \
        "--disable-nls"                           &&
    config_query_option FVWM_OPTS                 \
        "Enable Xrender alpha-blend rendering?" y \
        "--enable-xrender"                        \
        "--disable-xrender"                       &&
    config_query FVWM_TRANSLUCENCY_PATCH "Apply menu translucency patch?" y
fi &&
config_query_option FVWM_OPTS                         \
                        "Enable Session Managment?" y \
                        "--enable-sm"                 \
                        "--disable-sm"                &&
config_query_option FVWM_OPTS                             \
                        "Enable shaped window support?" y \
                        "--enable-shape"                  \
                        "--disable-shape"                 &&
config_query_option FVWM_OPTS                        \
                        "Enable xinerama support?" y \
                        "--enable-xinerama"          \
                        "--disable-xinerama"
