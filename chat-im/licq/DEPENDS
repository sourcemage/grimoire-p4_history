if [ "$CVS" = "yes" ]; then
	depends CVS      &&
	depends automake
fi &&
if [ "$XOSD" = "yes" ]; then
    depends xosd
fi &&
depends	autoconf	&&
optional_depends  "openssl"  ""  ""  "for secure communication between clients"  &&
optional_depends  "qt-x11"   ""  ""  "for an X11 QT GUI"                            &&

optional_depends  "kdelibs"     \
                  "--with-kde"  \
                  ""            \
                  "for KDE integration"
