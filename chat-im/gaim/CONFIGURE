if  ! grep -q  GAIM_ENCRYPTION  $SPELL_CONFIG; then

  sedit '1,5D' $SPELL_CONFIG                     &&
	if query		"Enable gaim-encryption plugin? (makes 'nss' spell a depends, this or gnutls is needed for MSN's newest protocol)" n
		then		GAIM_ENCRYPTION=y
		else            GAIM_ENCRYPTION=n
	fi
  echo "GAIM_ENCRYPTION=$GAIM_ENCRYPTION" >> $SPELL_CONFIG

fi
