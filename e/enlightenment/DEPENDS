#
# Enlightenment E16 dependencies and optional dependencies
#
if  [  "$EPROFILE_E16"  ==  "y"  ];  then
  depends  e16  &&

  optional_depends  epplet-base  ''  ''  'for plugins'        &&
  optional_depends  exmms        ''  ''  'for a XMMS epplet'
fi  &&

#
# Enlightenment DR17 dependencies and optional dependencies
#
