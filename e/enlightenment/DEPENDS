  optional_depends  eterm        ''  ''  'for a vt102 terminal'              &&
  optional_depends  euphoria     ''  ''  'for an audio player'               &&
  optional_depends  evidence     ''  ''  'for a file manager'                &&
  optional_depends  exhibit      ''  ''  'for an ETK-based image viewer'     &&
  optional_depends  express      ''  ''  'for an instant messenger'          &&
  optional_depends  iconbar      ''  ''  'for a standalone iconbar'
