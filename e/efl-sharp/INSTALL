#
# Make EFL# directories
#
mkdir  -p  $INSTALL_ROOT/usr/lib/mono/gac/efl-sharp  &&
mkdir  -p  $INSTALL_ROOT/usr/lib/mono/efl-sharp      &&

#
# Copy EFL# .DLLs to hopefully the right location
#
cp  Ecore/ecore-sharp.dll $INSTALL_ROOT/usr/lib/mono/gac/efl-sharp  &&
cp  Evas/evas-sharp.dll $INSTALL_ROOT/usr/lib/mono/gac/efl-sharp    &&
cp  Ewl/ewl-sharp.dll $INSTALL_ROOT/usr/lib/mono/gac/efl-sharp      &&

#
# Make efl-sharp symlinks into the gac directory like the other C# DLLs
#
pushd  $INSTALL_ROOT/usr/lib/mono/efl-sharp  &&
for i in `ls ../gac/efl-sharp`; do
  ln  -sf  ../gac/efl-sharp/$i  $i
done  &&
popd
