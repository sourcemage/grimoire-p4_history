           SPELL=gaim-nightly
	    DATE=$(date -d `date +%H`EST +%Y%m%d) && [ $( date -d `date +%H`EST +%H ) -le 12 ] && (( DATE-- ))
         VERSION=$DATE
          SOURCE=gaim-CVS.tar.gz
	 SOURCE2=gaim-e.tar.bz2
