if  !  grep  -q  "PANEL="  $SPELL_CONFIG;  then

  if    query  "Enable gnome panel support for gaim?" n
  then  echo   "PANEL=y"  >>  $SPELL_CONFIG
  else  echo   "PANEL=n"  >>  $SPELL_CONFIG
  fi

fi

if  !  grep  -q  "GAIM_E="  $SPELL_CONFIG;  then

  if    query  "Enable gaim-e gpg encryption for gaim?" n
  then  echo   "GAIM_E=y"  >>  $SPELL_CONFIG
  else  echo   "GAIM_E=n"  >>  $SPELL_CONFIG
  fi

fi

