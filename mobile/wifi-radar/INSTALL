install  -m 755 $SOURCE_DIRECTORY/wifi-radar /usr/sbin/ 		&&
cp -Ruv $SOURCE_DIRECTORY/wifi-radar.conf /etc/sysconfig/		&&
cp -Ruv $SPELL_DIRECTORY/images/wifi-radar.png /usr/share/pixmaps	&&

if spell_ok gksu; then
   cp -Ruv $SPELL_DIRECTORY/wifi-radar_gksu.desktop /usr/share/applications/wifi-radar.desktop
else
   cp -Ruv $SPELL_DIRECTORY/wifi-radar.desktop /usr/share/applications
fi
