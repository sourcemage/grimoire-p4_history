install  -m 755 ${SOURCE_DIRECTORY}/wifi-radar ${INSTALL_ROOT}/usr/sbin/    &&
cp -Ruv ${SOURCE_DIRECTORY}/wifi-radar.conf ${INSTALL_ROOT}//etc/sysconfig/ &&
cp -Ruv ${SPELL_DIRECTORY}/images/wifi-radar.png \
                                      ${INSTALL_ROOT}/usr/share/pixmaps

if spell_ok gksu; then
   cp -Ruv ${SPELL_DIRECTORY}/wifi-radar_gksu.desktop \
                      ${INSTALL_ROOT}/usr/share/applications/wifi-radar.desktop
else
   cp -Ruv ${SPELL_DIRECTORY}/wifi-radar.desktop \
                      ${INSTALL_ROOT}/usr/share/applications
fi
