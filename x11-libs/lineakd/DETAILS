SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/lineak/$SOURCE
          MD5[0]=0ecef1dbac3ea8e0cfb4e0a0ec0c5579
