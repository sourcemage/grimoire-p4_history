show_keyboards()  {

   cat $SCRIPT_DIRECTORY/keyboard.names

}


if  !  grep  -q  "KBRD="  $SPELL_CONFIG;  then

  KBRD_LIST=`show_keyboards`                                                &&
  KBRD=`dialog  --backtitle  "LinEAK Multimedia Keyboard Selection"          \
                --stdout                                                     \
                --title      "Please choose your keyboard among the supported models"  \
                --menu                                                       \
                ""                                                           \
                0 0 10                                                       \
                $KBRD_LIST`                                                 &&

  for i in `cat  $SCRIPT_DIRECTORY/keyboard.names | cut -f 1`; do
    echo $KBRD | grep -q $i
    if  [ $? == 0 ];  then
      echo  "KBRD=$i"  >>  $SPELL_CONFIG
    fi
  done
fi

