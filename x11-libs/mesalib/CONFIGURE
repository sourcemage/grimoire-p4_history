if  !  grep  -q  "CONFIGURE"  ${SPELL_CONFIG}
  then

  if      query  "Enable full Mesa debugging?"  n
    then  echo   'OPTS="${OPTS}  --enable-debug"'    >>  ${SPELL_CONFIG}
    else  echo   'OPTS="${OPTS}  --disable-debug"'   >>  ${SPELL_CONFIG}
  fi

  if      query  "Enable Mesa trace toolkit?"  n
    then  echo   'OPTS="${OPTS}  --enable-trace"'    >>  ${SPELL_CONFIG}
    else  echo   'OPTS="${OPTS}  --disable-trace"'   >>  ${SPELL_CONFIG}
  fi

  if      query  "Enable profiling?"  n
    then  echo   'OPTS="${OPTS}  --enable-profile"'    >>  ${SPELL_CONFIG}
    else  echo   'OPTS="${OPTS}  --disable-profile"'   >>  ${SPELL_CONFIG}
  fi

  if      query  "Enable extra optimizations?"  y
    then  echo   'OPTS="${OPTS}  --enable-optimize"'   >>  ${SPELL_CONFIG}
    else  echo   'OPTS="${OPTS}  --disable-optimize"'  >>  ${SPELL_CONFIG}
  fi

  echo  'CONFIGURED="y"'  >>  ${SPELL_CONFIG}
fi
