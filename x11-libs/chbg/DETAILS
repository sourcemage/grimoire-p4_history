           SPELL=chbg
         VERSION=1.5
          SOURCE=$SPELL-$VERSION.tgz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
   SOURCE_URL[1]=http://chbg.sourceforge.net/sw/$SOURCE
   SOURCE_URL[2]=ftp://ftp.idata.sk/pub/unix/x11/$SOURCE
     SOURCE_HASH=sha512:271c35acfdb7f1800cb3043001a91edb00242d948868cfb76790b2766f1b18a0e7e60f3087a564214f2110a549b83811fa5f470cb6bf0f2ea2d6c9e113991ad9
