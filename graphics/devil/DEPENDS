optional_depends  x11-libs                         \
                  "--with-x  --enable-opengl"      \
                  "--without-x  --disable-opengl"  \
                  "for X11 and OpenGL support"     &&

optional_depends  tiff                      \
                  "--enable-tiff"           \
                  "--disable-tiff"          \
                  "for TIFF image support"  &&

optional_depends  libpng                   \
                  "--enable-png"           \
                  "--disable-png"          \
                  "for PNG image support"  &&

optional_depends  libmng                   \
                  "--enable-mng"           \
                  "--disable-mng"          \
                  "for MNG image support"  &&

optional_depends  jpeg                      \
                  "--enable-jpeg"           \
                  "--disable-jpeg"          \
                  "for JPEG image support"  &&

optional_depends  libungif                 \
                  "--enable-gif"           \
                  "--disable-gif"          \
                  "for GIF image support"  &&

optional_depends  lcms                         \
                  "--enable-lcms"              \
                  "--disable-lcms"             \
                  "for LCMS color management"  &&

optional_depends  allegro                             \
                  "--enable-allegro"                  \
                  "--disable-allegro"                 \
                  "for allegro game library support"  &&

optional_depends  SDL                \
                  "--enable-sdl"     \
                  "--disable-sdl"    \
                  "for SDL support"
