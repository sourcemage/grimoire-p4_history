           SPELL=devil
         VERSION=1.6.6
          SOURCE=DevIL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/DevIL
   SOURCE_URL[0]=${SOURCEFORGE_URL}/openil/${SOURCE}
          MD5[0]=19386ab71606a5ae48029ecfaf58975e
        WEB_SITE=http://openil.sourceforge.net/
         ENTERED=20031008
         UPDATED=20031008
