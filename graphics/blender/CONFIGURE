if  !  grep  -q  "CONFIGURED"  ${SPELL_CONFIG};  then

  if    query  "Build the gameblender engine?"  y
  then  echo  'OPTS="${OPTS}  --enable-gameblender"'   >>  ${SPELL_CONFIG}
  else  echo  'OPTS="${OPTS}  --disable-gameblender"'  >>  ${SPELL_CONFIG}
  fi

  if    query  "Build the browser plugin (will need to say yes again to mozilla later)?" n
  then  echo  'OPTS="${OPTS}  --enable-blenderplugin"'   >>  ${SPELL_CONFIG}
  else  echo  'OPTS="${OPTS}  --disable-blenderplugin"'  >>  ${SPELL_CONFIG}
  fi

  echo  'CONFIGURED="y"'  >>  ${SPELL_CONFIG}

fi
