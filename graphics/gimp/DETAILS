           SPELL=gimp

if [ "$GIMP_DEVEL" == "y" ];then
         VERSION=2.3.8
          SOURCE=$SPELL-$VERSION.tar.bz2
     SOURCE_HASH=sha512:83d435db69e5bbdbf1ed331bc95c6988318290cef3ac58906d3d832aeef2db38ebbd8e9c7bfa9cf2be660acfacaae6f44b6a72fd5b87d2c960d1865cc44858b3
