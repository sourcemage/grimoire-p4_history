SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://savannah.nongnu.org/download/openexr/${SPELL}.pkg/$VERSION/$SOURCE
        WEB_SITE=http://www.openexr.com/
