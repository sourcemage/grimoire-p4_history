          SOURCE=$SPELL-${VERSION}.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/pmt/$SOURCE
        WEB_SITE=http://pmt.sourceforge.net/pngcrush/index.html
       BUILD_API=2
         ENTERED=20030613
