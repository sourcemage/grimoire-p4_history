config_query_option  OPENVRML_IMAGE_OPTION                   \
                     'Enable ImageTexture node support?'  y  \
                     '--enable-imagetexture-node'            \
                     '--disable-imagetexture-node'           &&

config_query_option  OPENVRML_TEXT_OPTION   'Enable Text node support?'  y  \
              '--enable-text-node'  '--disable-text-node'                   &&

