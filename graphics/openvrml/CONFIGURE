#                     '--disable-script-node-java'                             &&

config_query_option  OPENVRML_JS_OPTION                           \
                     'Enable Script node JavaScript support?'  y  \
                     '--enable-script-node-javascript'            \
                     '--disable-script-node-javascript'           &&

config_query_option  OPENVRML_LOOKAT_OPTION  'Enable lookat?'  y  \
              '--enable-lookat'  '--disable-lookat'
