depends  g++     &&
depends  boost   &&
depends  sdl     &&
depends  zlib    &&
depends  libpng  &&
depends  jpeg    &&

if  [  "$OPENVRML_JS_OPTION"     ==  '--enable-script-node-javascript'  -o  \
       "$OPENVRML_JAVA_OPTION"   ==  '--enable-script-node-java'        ];  then
  depends  JAVA             &&
  depends  MOZILLA-BROWSER
fi  &&

if  [  "$OPENVRML_TEXT_OPTION"  ==  '--enable-text-node'  ];  then
  depends  fontconfig
fi  &&

optional_depends  gzip                         \
                  "--enable-gzip"              \
                  "--disable-gzip"             \
                  "for GZIPped world support"  &&

optional_depends  MOZILLA-BROWSER                      \
                  "--enable-mozilla-plugin"            \
                  "--disable-mozilla-plugin"           \
                  "for Mozilla plug-in (experimental"  &&

optional_depends  OPENGL                   \
                  "--enable-gl-renderer"   \
                  "--disable-gl-renderer"  \
                  "for OpenGL renderer"
