mk ()
{
cat << EOF
ZLIB = -lz
ZFLAG = -DWZ
BIN = /usr/bin
ploticus: plgd18
GD18LIBS = -lgd -lpng -lz -ljpeg ${LDFLAGS}
GD18H = 
GDFREETYPE = -DGDFREETYPE ${CFLAGS}
PREFABS_DIR = "/usr/lib/ploticus"
EOF
  sed  "s|/local||;s/CFLAGS = /CFLAGS+=/;/^BIN/d" src/Makefile  
}
  default_pre_build     &&
  cd $SOURCE_DIRECTORY  &&
#apply updates
  patch -p1 < $SPELL_DIRECTORY/fix.diff &&
# recreate makefile
  mk > MK               &&  
  cp MK src/Makefile    
  

