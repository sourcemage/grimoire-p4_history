depends  libgphoto2  &&
depends  jpeg  &&

optional_depends  aalib  "--with-aalib"  "--without-aalib"  \
      "to enable previewing"  &&

optional_depends  libexif  "--with-exif"  "--without-exif"  \
      "extracts additional image information provided by most cameras"  &&

optional_depends  popt  "--with-popt"  "--without-popt"  \
      "to enable command line arguments"

