(

  make                                         &&
  prepare_install                              &&
  mkdir  /usr/share/duhdraw                    &&
  rm  *.c  *.h                                 &&
  cp  *  /usr/share/duhdraw                    &&
  ln -s  /usr/share/duhdraw/duhdraw  /usr/bin

) > $C_FIFO 2>&1
