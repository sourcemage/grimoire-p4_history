   SOURCE_URL[0]=$SOURCEFORGE_URL/fltk/$SOURCE
     SOURCE_HASH=sha512:8dfe3e47fe4c67226d611562d0c4d2c020b6efb5ddf442ecf19dc7f192dc772413b85176c7ebf40bd0ce404b4b39fcd1910e40a16be9eb6ed4a10fc1d261a7a9
