depends  kdebase          &&
depends  qt-x11           &&
optional_depends  digikam                        \
                  "--enable-digiKam-plugin"      \
                  ""                             \
                  "to build the digikam plugin"  &&

optional_depends  arts                \
                  "--with-arts"       \
                  "--without-arts"    \
                  "for arts support"  &&

optional_depends  libkexif                     \
                  "--with-kexif"               \
                  "--without-kexif"            \
                  "to build the kexif plugin"  &&

optional_depends  libkipi                     \
                  "--enable-libkipi"          \
                  "--disable-libkipi"         \
                  "to build the kipi plugin"  &&

optional_depends  mysql                        \
                  "--enable-mysql"             \
                  "--disable-mysql"            \
                  "to build the mysql plugin"
