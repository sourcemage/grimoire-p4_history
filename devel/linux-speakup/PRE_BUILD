cd       /usr/src
rm  -rf  linux

unpack  $SOURCE
chown  -R  root:root  linux

if  [  -d  linux-$VERSION  ];  then
  rm   -r  linux-$VERSION
fi

mv  linux  linux-$VERSION
ln  -s     linux-$VERSION  linux

if  [  -f   $CONFIG_CACHE/.config  ];  then
  cp        $CONFIG_CACHE/.config  /usr/src/linux
fi

cd  /tmp
unpack  $SOURCE2
cd  speakup-1.00
./install
cd  /usr/src/linux
rm  -rf  /tmp/speakup-1.00
