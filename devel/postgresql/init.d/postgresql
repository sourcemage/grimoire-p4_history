#!/bin/bash

CTL=/usr/bin/pg_ctl
RUNLEVEL=3
NEEDS="+remote_fs"

. /etc/init.d/smgl_init
. /etc/sysconfig/postgresql

start()
{
    echo "Starting postmaster..."
    su $USER -c "$PROGRAM -D $DBPATH -l $LOGFILE start"
    evaluate_retval
}

stop()
{
    echo "Stopping postmaster..."
    su $USER -c "$PROGRAM -D $DBPATH -l $LOGFILE -m fast stop"
    evaluate_retval
}
