# Python required, e.g. see scripts/document.py
depends python '--enable-python --with-python=/usr/bin/python' 'for Python module and installation' &&

optional_depends gettext '--enable-gettext' '--disable-gettext' 'for message translation' &&
optional_depends APACHE1 '--enable-apache'  '--disable-apache'  'for Apache 1.3 module' &&
optional_depends perl    '--enable-perl'    '--disable-perl'    'for Perl module' &&
optional_depends ruby    '--enable-ruby'    '--disable-ruby'    'for Ruby module' &&
optional_depends JAVA    '--enable-java'    '--disable-java'    'for Java module' &&
optional_depends CSHARP  '--enable-csharp'  '--disable-csharp'  'for C# module (say NO; support broken)'
