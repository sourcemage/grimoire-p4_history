  ./configure  --build=$BUILD              \
               --prefix=/usr               \
               --sysconfdir=/etc           \
               --localstatedir=/var        \
               --with-gd-lib               \
			   --with-z-lib                \
			   --with-png-lib              \
			   --with-jpeg-lib             \
			   --with-freetype2-lib        \
               $OPTS                       &&
  make 
