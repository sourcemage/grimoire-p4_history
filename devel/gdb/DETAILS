          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$GNU_URL/$SPELL/$SOURCE
          MD5[0]=c8d5d8e50480e4f1d1584abf9ffdf1db
      LICENSE[0]=GPL
        WEB_SITE=http://sources.redhat.com/gdb/
