mk_source_dir $SOURCE_DIRECTORY   &&
unpack $SOURCE ${MD5[0]}          &&                   

mk_source_dir $SOURCE2_DIRECTORY  &&
unpack $SOURCE2 ${MD5[1]}         &&

if echo $OPT | grep -q tk; then
   mk_source_dir $SOURCE3_DIRECTORY
fi                                &&

if echo $OPT | grep -q tk; then
   unpack $SOURCE3 ${MD5[2]}
fi                                 

