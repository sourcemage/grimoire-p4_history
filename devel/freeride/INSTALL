DESTDIR=`ruby -r rbconfig -e 'print Config::CONFIG["sitedir"]'`/${SPELL}  &&
mkdir -p $DESTDIR  &&
cp -R config freebase plugins redist so test freeride.rb $DESTDIR  &&
sedit "1i#!${INSTALL_ROOT}/bin/sh" run.bat                  &&
sedit "s:freeride.rb:${DESTDIR}/freeride.rb:" run.bat    &&
cp run.bat ${INSTALL_ROOT}/usr/bin/freeride
