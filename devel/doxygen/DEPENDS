depends  bison  &&
depends  flex   &&
depends  perl   &&

optional_depends  "graphviz"  ""  ""  "for graphical charts"          &&
optional_depends  "teTeX"  ""  ""  \
                  "for generating LaTeX, Postscript, and PDF output"  &&

if  spell_installed  espgs;  then
  optional_depends  "espgs"  ""  ""             \
                    "for generating Postscript and PDF output"
elif  spell_installed  ghostscript;  then
  optional_depends  "ghostscript"  ""  ""  \
                    "for generating Postscript and PDF output"
else
  message  "If you are going to install cups, choose espgs instead of ghostscript:"
  optional_depends  "espgs"  ""  ""             \
                    "for generating Postscript and PDF output"  &&
  optional_depends  "ghostscript"  ""  ""  \
                    "for generating Postscript and PDF output"
fi
