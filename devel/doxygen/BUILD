(

  sedit  "s/grep fileutils/grep 'Free Software Foundation'/"  ./configure  &&
  sedit  "s/-O2/$CFLAGS/"  tmake/lib/linux-g++/tmake.conf                  &&
  ./configure --prefix /usr  \
              $OPTS          &&
  make                       &&
  prepare_install            &&
  make    install

) > $C_FIFO 2>&1
