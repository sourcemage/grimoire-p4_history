  TOOLSLIST=`cat $SCRIPT_DIRECTORY/sound.tools`                     &&

  ALSATOOLS=`dialog  --backtitle  "ALSA Tools Configuration Menu"   \
                     --stdout                                       \
                     --radiolist "Select an ALSA tool:"             \
                     0 0 0                                          \
                     $TOOLSLIST`
	
  echo "ALSATOOLS=$ALSATOOLS" >> $SPELL_CONFIG
