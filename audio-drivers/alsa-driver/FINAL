[ -e /etc/sysconfig/alsa ] && sedit "s:\$CARD:$CARD:"  /etc/sysconfig/alsa  &&

message  "${MESSAGE_COLOR}The alsa init script has been moved from ${SPELL_COLOR}alsa-driver${MESSAGE_COLOR} to ${SPELL_COLOR}alsa-lib${MESSAGE_COLOR}, please make sure you have ${SPELL_COLOR}alsa-lib${MESSAGE_COLOR} recast if you use the ${SPELL_COLOR}alsa-driver${MESSAGE_COLOR} spell.${DEFAULT_COLOR}"  &&
message  "${MESSAGE_COLOR}A temporary TRIGGER has been added to ${SPELL_COLOR}alsa-lib${MESSAGE_COLOR} to fix this issue. This trigger will be removed in one month.${DEFAULT_COLOR}"
