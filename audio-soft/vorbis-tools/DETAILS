SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://downloads.xiph.org/releases/vorbis/$SOURCE
          MD5[0]=53a76e8ccdb405b68f4afa3918a1f421
        WEB_SITE=http://www.xiph.org/ogg/vorbis/
