           SPELL=ices
         VERSION=2.0.1
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://downloads.us.xiph.org/releases/ices/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
      LICENSE[0]=GPL
       BUILD_API=2
        WEB_SITE=http://icecast.org/ices.php
         ENTERED=20050816
