  make    install &&

  mkdir -p /etc/uucp                      &&
  mkdir -p /var/log/uucp                  &&
  chown uucp.uucp  /var/log/uucp          &&
  mkdir -p /var/spool/uucp                &&
  chown uucp.uucp  /var/spool/uucp        &&
  mkdir -p /var/spool/uucppublic          &&
  chown uucp.uucp  /var/spool/uucppublic  &&

  mkdir -p /usr/share/doc/uucp/sample           &&
  cp  sample/*  /usr/share/doc/uucp/sample      &&

  mkdir -p /usr/share/doc/uucp/contrib          &&
  cp  contrib/*  /usr/share/doc/uucp/contrib
