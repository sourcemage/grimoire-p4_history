#!/bin/sh

case $1 in
     start)  echo      "$1ing ProFTPd FTP server."
             proftpd
             ;;
      stop)  echo      "$1ing ProFTPd FTP server."
             kill `cat /var/run/proftpd.pid`
             ;;
   restart)  echo      "$1ing ProFTPd FTP server."
             kill `cat /var/run/proftpd.pid`
             proftpd
             ;;
         *)  echo      "Usage: $0 {start|stop|restart}"
             ;;
esac
