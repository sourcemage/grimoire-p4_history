if  !  grep  -q  "CONFIGURED"  ${SPELL_CONFIG}
then
  if  query  "Use gtk+ interface" y
  then  echo  'OPTS="${OPTS} -Dgtkversion=1"'  >>  ${SPELL_CONFIG}  &&
        depends  gtk+
  elif  query  "Use gtk+2 interface (slower, uses more memory)" n
  then  echo  'OPTS="${OPTS} -Dgtkversion=2"'  >>  ${SPELL_CONFIG}  &&
        depends  gtk+2
  else  echo  'OPTS="${OPTS} -Dgtkversion=1"'  >>  ${SPELL_CONFIG}  &&
        depends  gtk+
  fi

  echo  "CONFIGURED='y'"  >>  ${SPELL_CONFIG}
fi
