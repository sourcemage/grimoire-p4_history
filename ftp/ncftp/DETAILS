   SOURCE_URL[0]=ftp://ftp.ncftp.com/ncftp/$SOURCE
     SOURCE_HASH=sha512:682e73f216785b7ad335628cfeb9f640867c8748cbd5f07d620e3ee4021b9058d70432980908d20c8d81585bcf46216d85e4ba696b7954216bf0aa4f6a977345
