optional_depends  gnutls                                       \
                  "--with-gnutls=$INSTALL_ROOT/usr"            \
                  '--without-gnutls'                           \
                  'for encrypted communications using GNUTLS'  &&
optional_depends  openssl                          \
                  "--with-ssl=$INSTALL_ROOT/usr"   \
                  '--without-ssl'                  \
                  "for https encrypted transport"
