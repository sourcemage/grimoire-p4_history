depends zlib &&
depends libtool &&
depends db &&

optional_depends "libvorbis" \
    "--enable-libvorbis"     \
    "--disable-libvorbis"    \
    "to extract meta data from ogg vorbis files" &&

optional_depends "imagemagick" \
    "--enable-imagemagick"     \
    "--disable-imagemagick"    \
    "to extract image meta data" &&
    
optional_depends "file"     \
    "--enable-libmagic"     \
    "--disable-libmagic"    \
    "to guess file types" 
    
