make  prefix=${INSTALL_ROOT}/usr  install             &&
cd  kernel/svgalib_helper                             &&
if  [  `uname  -r  |  cut  -d.  -f1,2`  ==  "2.6"  ]
then
  message  "${MESSAGE_COLOR}Installing 2.6 module...${DEFAULT_COLOR}"  &&
  make  install
else
  message  "${MESSAGE_COLOR}Installing 2.4 module...${DEFAULT_COLOR}"  &&
  env  -u  ARCH                                                        \
  make  -f  Makefile.alt    prefix=${INSTALL_ROOT}                     \
  INCLUDEDIR="/usr/src/linux/include" install
fi
