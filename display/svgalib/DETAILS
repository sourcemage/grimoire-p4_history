          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.arava.co.il/matan/svgalib/${SOURCE}
          MD5[0]='bb8e6dd2af4f65518c9ca9c34fb605a1'
