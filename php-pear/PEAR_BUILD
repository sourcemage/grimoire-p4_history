(

  message "${MESSAGE_COLOR}Checking for PEAR script...${DEFAULT_COLOR}" &&
  PEAR_CMD=$(which pear 2>/dev/null) &&
  [ -n "$PEAR_CMD" ] &&
  prepare_install &&
  if pear list | egrep -q "\<$PEAR_PACKAGE\>"; then
    pear uninstall "$PEAR_PACKAGE"
  fi &&
  pear install $SOURCE_CACHE/$SOURCE

) >$C_FIFO 2>&1
