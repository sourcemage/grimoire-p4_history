default_install  &&

cd ${SOURCE_DIRECTORY}

install -v -d /usr/share/snd               &&
install -v -m 644 *.scm    /usr/share/snd  &&
install -v -m 644 *.png    /usr/share/snd  &&
install -v -m 644 *.rb     /usr/share/snd  &&
install -v -m 644 *.lisp   /usr/share/snd  &&
install -v -m 644 *.el     /usr/share/snd  &&
install -v -m 644 *.ad     /usr/share/snd  &&
install -v -m 644 DotEmacs /usr/share/snd  &&

if [ "${SND_DOCS}" == "y" ]; then
   install -v -d /usr/share/doc/snd/            &&
   install -v -m 644 *.html /usr/share/doc/snd  
fi                                              &&

if [ "${SND_TUTOR}" == "y" ]; then
   install -v -d /usr/share/doc/snd/tutorial/files                                 &&
   install -v -d /usr/share/doc/snd/tutorial/images/jpg                            &&
   install -v -m 644 tutorial/*.html /usr/share/doc/snd/tutorial                   &&
   install -v -m 644 tutorial/files/* /usr/share/doc/snd/tutorial/files            &&
   install -v -m 644 tutorial/images/jpg/* /usr/share/doc/snd/tutorial/images/jpg  
fi                                                                                 &&

message  "${MESSAGE_COLOR} You should get the .snd from http://www.notam02.no/arkiv/src/snd/snd_conffile.scm and put it as your ~/.snd (and customize it if you wish :)${DEFAULT_COLOR}"
