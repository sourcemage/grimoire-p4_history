config_query_option SND_MIDI "include sndlib midi module?"                \
                    ${MIDI:-n} "--with-midi" "--without-midi"             &&

config_query_option SND_HOBBIT "include arity check support for hobbit?"  \
                    ${HOBBIT:-n} "--with-hobbit" "--without-hobbit"       &&

config_query_option SND_GUI "configure snd with a GUI?"                   \
                    ${GUI:-y} "--with-x" "--without-x"                    &&

if [ "${SND_GUI}" == "--with-x"  ]; then
  config_query_list SND_GUI_TOOLKIT "Select the gui toolkit?" gtk motif  
fi                                                                        &&

config_query_list SND_SCRIPT "Select a scripting language?" ruby guile    &&

config_query SND_DOCS  "Install documentation?" n                         &&
config_query SND_TUTOR "Install tutorial?" n

