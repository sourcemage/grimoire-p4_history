if query "Do you want to use ALSA " y ; then
	depends alsa-lib 
fi

if query "Do you want to use Jack " y ; then
	depends JACK-DRIVER
fi

if query "Do you want to use the GTK interface " y ; then
	depends gtk+2 &&
	depends gtkglext
else
	depends openmotif
fi

if query "Do you want to use ruby as scripting language " y ; then
	depends ruby
else
	depends guile
fi

optional_depends  "GLUT" "--with-gl" "--without-gl" "for openGL display (rocks!)" &&
optional_depends  "ladspa" "--with-ladspa" "--without-ladspa" "for LADSPA plugin support"
optional_depends  "gsl" "--with-gsl" "--without-gsl" "better numerical support"
optional_depends  "fftw2" "--with-fftw" "--without-fftw" "better FFT support" 

