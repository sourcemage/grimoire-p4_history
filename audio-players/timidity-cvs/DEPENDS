depends  CVS       &&
depends  eawpats   &&
depends  alsa-lib  &&

AUDIO="--enable-audio=alsa"  &&
if spell_installed jack || spell_installed jack-cvs ;
	then AUDIO=$AUDIO,jack ;
fi  &&

if spell_installed nas ;
	then AUDIO=$AUDIO,nas ;
fi  &&

if spell_installed esound ;
	then AUDIO=$AUDIO,esd ;
fi  &&

if spell_installed libvorbis ;
	then AUDIO=$AUDIO,vorbis ;
fi  &&

optional_depends "X11-LIBS" "" "--without-x" "for X support" &&

export AUDIO
