           SPELL=bmpx
if [ "${BMPX_DEVEL}" == "y" ]; then
         VERSION=2006-01-13-R2104
else
         VERSION=0.12.9
fi
          SOURCE=bmpx-${VERSION}.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/bmpx-${VERSION}
   SOURCE_URL[0]=${SOURCEFORGE_URL}/beepmp/${SOURCE}
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
