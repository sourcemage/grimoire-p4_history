depends  gtk+        &&

optional_depends  libxml                 \
                  ""                     \
                  "--disable-cdindex"    \
                  "for cdindex support"  &&

optional_depends  libvorbis                   \
                  ""                          \
                  ""                          \
                  "to play Ogg Vorbis files"  &&

optional_depends  libmikmod                    \
                  ""                           \
                  "--disable-mikmod"           \
                  "to play mod/s3m/med files"  &&

optional_depends  alsa-lib                   \
                  ""                         \
                  ""                         \
                  "for alsa output support"  &&

optional_depends  esound                    \
                  ""                        \
                  "--disable-esd"           \
                  "for esd output support"  &&

optional_depends  gnome-core           \
                  "--with-gnome"       \
                  "--without-gnome"    \
                  "for gnome support"
