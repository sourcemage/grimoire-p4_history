VOYEUR=on

if  spell_installed  fcron;  then
  fcrontab  -l  2>/dev/null  |
  grep  -v  exim             |
  fcrontab -    2>/dev/null
fi

if  spell_installed  hc-cron;  then
  crontab   -l    |
  sed   -n  4~1p  |
  grep  -v  exim  |
  crontab -
fi

if query "Backup $SPELL config ?" y
then
 CUR_DATE=`date +%y.%m.%d-%H.%M.%S`
 tar -cyvf /etc/$SPELL-backup-$CUR_DATE.tar.bz2 /etc/exim.conf 1>/dev/null 2>&1
fi
