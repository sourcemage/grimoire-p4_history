chgrp  -R  mail   /var/spool/mail
chmod  -R  g+rw   /var/spool/mail

EXIM_SCHEDULE="0 * * * * /usr/sbin/exim  -q"

case  $CRON  in
  f)  echo  -e  "`fcrontab  -l  2>/dev/null  |
      grep  -v  exim`\n$EXIM_SCHEDULE"       |
      fcrontab -                2>/dev/null
      ;;
  *)  echo  -e  "`crontab  -l           |
      sed   -n  4~1p                    |
      grep  -v  exim`\n$EXIM_SCHEDULE"  |
      crontab -
      ;;
esac

