case "${BRANCH}" in
  stable)
    PATCH_SOURCE="patch-1.4.sde.libesmtp.3"
       SMGL_DIFF="patch-1.4.sde.libesmtp.3.smgl.diff"
  ;;
  devel|cvs)
    PATCH_SOURCE="patch-1.5.3.sde.libesmtp.3"
       SMGL_DIFF="patch-1.5.3.sde.libesmtp.3.smgl.diff"
  ;;
esac &&

cp "${PATCH_DIRECTORY}/${PATCH}/${PATCH_SOURCE}" "${PATCH_SOURCE}" &&
patch -p0 < "${PATCH_DIRECTORY}/${PATCH}/${SMGL_DIFF}" &&
patch -p1 < "${PATCH_SOURCE}"
