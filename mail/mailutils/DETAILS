           SPELL=mailutils
         VERSION=0.6
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.gnu.org/gnu/mailutils/$SOURCE
        WEB_SITE=http://www.gnu.org/software/mailutils
