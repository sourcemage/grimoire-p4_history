config_query_option  CYRUS_IMAPD_OPTS "NNTP support?"         n  \
                     "--enable-nntp"  "--disable-nntp"           &&
config_query_option  CYRUS_IMAPD_OPTS "IMAP Murder support?"  n  \
                     "--enable-murder"  "--disable-murder"       &&
config_query_option  CYRUS_IMAPD_OPTS "SIEVE support?"        y  \
                     "--enable-sieve"  "--disable-sieve"         &&
config_query_option  CYRUS_IMAPD_OPTS "IMAP List support?"    y  \
                     "--enable-listext"  "--disable-listext"
