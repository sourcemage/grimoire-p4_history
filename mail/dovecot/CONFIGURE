if  !  grep  -q  "IMAP_BOOT"  $SPELL_CONFIG
then
  if    query  "Support imap protocol? "  n
  then  echo   "IMAP_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "IMAP_BOOT=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "POP3_BOOT"  $SPELL_CONFIG
then
  if    query  "Support pop3 protocol? "  n
  then  echo   "POP3_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "POP3_BOOT=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "IMAPS_BOOT"  $SPELL_CONFIG
then
  if    query  "Support imaps protocol? "  y
  then  echo   "IMAPS_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "IMAPS_BOOT=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "POP3S_BOOT"  $SPELL_CONFIG
then
  if    query  "Support pop3s protocol? "  y
  then  echo   "POP3S_BOOT=y"  >>  $SPELL_CONFIG
  else  echo   "POP3S_BOOT=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "IPV6"  $SPELL_CONFIG
then
  if    query  "Add IPV6 protocol support ? "  n
  then  echo   "IPV6=--enable-ipv6"    >>  $SPELL_CONFIG
  else  echo   "IPV6=--disable-ipv6"   >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "PAM"  $SPELL_CONFIG
then
  if    query  "Use PAM authentication? "  n
  then  echo   "PAM=y"  >>  $SPELL_CONFIG ; PAM=y
  else  echo   "PAM=n"  >>  $SPELL_CONFIG
  fi

  if [ "$PAM" == "y" ]; then
    message "${MESSAGE_COLOR} PAM enabled. You should look at dovecot.conf comments about auth-mecanisms (cannont have digest-md5 with PAM) ${DEFAULT_COLOR}"
  fi

fi


