optional_depends  "openssl"    ""  ""  "for encryption support" &&
optional_depends  "cyrus-sasl" ""  ""  "for Cyrus-sasl authentification support" &&
optional_depends  "openldap"           \
                   "--with-ldap"       \
                   "--without-dap"     \
                   "Enable LDAP support" &&
if [ "$PAM" == "y" ]; then
  optional_depends        "Linux-PAM"              \
                          "--with-pam"             \
                          "--without-pam"          \
                          "Enable PAM support"
fi

