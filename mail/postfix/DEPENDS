depends  db    &&
depends  pcre  &&

if  [  "$POSTFIX_MYSQL"  ==  "y"  ];  then
  depends  mysql
fi  &&

if  [  "$POSTGRES"  ==  "y"  ];  then
  depends  postgresql
fi  &&

if  [  "$POSTFIX_PAM"  ==  "y"  ];  then
  depends  linux-pam
fi  &&

if  [  "$POSTFIX_SSL"  ==  "y"  ];  then
  depends  openssl
fi  &&

if  [  "$SSL_TLS"  ==  "y"  ];  then
  depends  openssl
fi  &&

if  [  "$POSTFIX_LDAP"  ==  "y"  ];  then
  depends  openldap
fi  &&

if  [  "$POSTFIX_SASL"  ==  "y"  ];  then
  depends  cyrus-sasl
fi
