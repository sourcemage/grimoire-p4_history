config_query  POSTFIX_BENCH   "Install smtpstone benckmarking tools?"  n

message  "${MESSAGE_COLOR}You should run newaliases after each aliases file"  \
         " update, and on first ${SPELL_COLOR}$SPELL${DEFAULT_COLOR}"         \
         "${MESSAGE_COLOR} cast...${DEFAULT_COLOR}"                           &&
config_query  POSTFIX_ALIAS    "Run newaliase after cast?"  y

if  spell_ok  mysql;  then
  config_query  POSTFIX_MYSQL  "Add MySQL support?"  y
else
  config_query  POSTFIX_MYSQL  "Add MySQL support?"  n
fi  &&

if  spell_ok  linux-pam;  then
  config_query  POSTFIX_PAM  "Add PAM support?"  y
else
  config_query  POSTFIX_PAM  "Add PAM support?"  n
fi  &&

if  spell_ok  openssl;  then
  config_query  POSTFIX_SSL  "Add SSL support?"  y
else
  config_query  POSTFIX_SSL  "Add SSL support?"  n
fi  &&

# SSL and TLS libs both come from openssl :)
if  spell_ok  openssl;  then
  config_query  SSL_TLS  "Add TLS support?"  y
else
  config_query  SSL_TLS  "Add TLS support?"  n
fi  &&

if  spell_ok  openldap;  then
  config_query  POSTFIX_LDAP  "Add LDAP support?"  y
else
  config_query  POSTFIX_LDAP  "Add LDAP support?"  n
fi  &&

if  spell_ok  postgresql;  then
  config_query  POSTGRES  "Add Postgresql support?"  y
else
  config_query  POSTGRES  "Add Postgresql support?"  n
fi  &&

if  spell_ok  cyrus-sasl;  then
  config_query  POSTFIX_SASL  "Add SASL support?"  y
else
  config_query  POSTFIX_SASL  "Add SASL support?"  n
fi  &&

config_query  POSTFIX_VDA  \
              "Apply Virtual Delivery Agent (VDA) patch (EXPERIMENTAL)?"  n  &&

POSTFIX_PREVIOUS_VERSION=$(installed_version  postfix)  &&
persistent_add  POSTFIX_PREVIOUS_VERSION
