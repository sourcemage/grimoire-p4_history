          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.qcc.ca/~charlesc/software/getmail-2.0/$SOURCE
          MD5[0]=c956f8ebc7f4db59842fe2406c49d3e1
