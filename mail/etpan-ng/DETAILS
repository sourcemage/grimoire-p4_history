           SPELL=etpan-ng
if [ "$CVS" = "y" ]; then
         VERSION=cvs
          SOURCE=etpan-cvs.tar.bz2
   SOURCE_URL[0]=cvs://:pserver:anonymous@cvs.sourceforge.net:/cvsroot/libetpan:etpan-ng
          MD5[0]=IGNORE
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY=$BUILD_DIRECTORY/etpan-cvs
else
         VERSION=0.6.1
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
      SOURCE_URL=$SOURCEFORGE_URL/libetpan/$SOURCE
     SOURCE_HASH=sha512:f74d443f0e1b7744d437f4694d39cc856fd723e6c52b1228b35b7aa0a36ef14a9ece3719f1c614114f03fa540787d17d923bd95be0c29564db392812a3790061
