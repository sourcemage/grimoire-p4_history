# Setup basic paths
mkdir -vp ${INSTALL_ROOT}/var/run/xmail &&
mkdir -vp ${INSTALL_ROOT}/var/log/xmail &&
mkdir -vp ${INSTALL_ROOT}/var/spool/xmail &&
mkdir -vp ${INSTALL_ROOT}/etc/xmail &&
mkdir -vp ${INSTALL_ROOT}/usr/bin &&
mkdir -vp ${INSTALL_ROOT}/usr/sbin &&

# Now let's install it to ${INSTALL_ROOT}
cd ${SOURCE_DIRECTORY}/usr/sbin &&
cp -aRv CtrlClnt ${INSTALL_ROOT}/usr/sbin/CtrlClnt &&
cp -aRv MkMachDep ${INSTALL_ROOT}/usr/sbin/MkMachDep &&
cp -aRv MkUsers ${INSTALL_ROOT}/usr/sbin/MkUsers &&
cp -aRv sendmail ${INSTALL_ROOT}/usr/sbin/sendmail &&
cp -aRv XMail ${INSTALL_ROOT}/usr/sbin/XMail &&
cp -aRv XMCrypt ${INSTALL_ROOT}/usr/sbin/XMCrypt &&

# Install various config files
cd ${SOURCE_DIRECTORY}/MailRoot &&
cp -aRv * ${INSTALL_ROOT}/
