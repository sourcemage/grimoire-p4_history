   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:eef665382ed6527bd978ee534de1c7a90773d0539f989dc2a573df54d681ef005c41cb393f4854981853bf381703a09d6ecd8b68156c9fb3123658e466737d90
