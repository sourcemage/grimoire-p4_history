if [ -x ${INSTALL_ROOT}/etc/init.d/imapd.sh ]; then
        ${INSTALL_ROOT}/etc/init.d/imapd.sh stop
fi

if [ -x ${INSTALL_ROOT}/etc/init.d/imapd-ssl.sh ]; then
        ${INSTALL_ROOT}/etc/init.d/imapd-ssl.sh stop
fi

if [ -x ${INSTALL_ROOT}/etc/init.d/pop3d.sh ]; then
        ${INSTALL_ROOT}/etc/init.d/pop3d.sh stop
fi

if [ -x ${INSTALL_ROOT}/etc/init.d/pop3d-ssl.sh ]; then
        ${INSTALL_ROOT}/etc/init.d/pop3d-ssl.sh stop
fi
