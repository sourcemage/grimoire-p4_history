           SPELL=courier-imap
         VERSION=1.6.0
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/courier/$SOURCE
          MD5[0]=219ce8bc216ee1c4707a7939b73a5139
   SOURCE_URL[1]=ftp://download.sourcemage.org/pub/linux/distributions/sourcemage/mirror/$SOURCE
          MD5[1]=${MD5[0]}
        WEB_SITE=http://www.courier-mta.org
         ENTERED=20020309
         UPDATED=20020413
      MAINTAINER=jan.sabbe@student.kuleuven.ac.be
         LICENSE=GPL
           SHORT="courier-imap is an imap server"
    MENU_ITEM[0]=${SPELL}
    MENU_EXEC[0]="imapd"
    MENU_DESC[0]=${SHORT}
cat << EOF
Courier-IMAP is a server that provides IMAP access to Maildirs. This
IMAP server does NOT handle traditional mailbox files (/var/spool/mail,
and derivatives), it was written for the specific purpose of providing
IMAP access to Maildirs.
EOF
