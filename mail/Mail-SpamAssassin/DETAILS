          MD5[0]=8cc990a04a9c6f6a3ccb146f422629f7
        WEB_SITE=http://spamassassin.taint.org/
         ENTERED=20020313
         UPDATED=20020419
      LICENSE[0]=http://spamassassin.taint.org
           SHORT="Mail::Spamassassin: A module to fight spam."
    MENU_ITEM[0]="spamassassin"
    MENU_EXEC[0]="spamassassin"
    MENU_DESC[0]="mail filter to identify spam using text analysis"
    MENU_ITEM[1]="spamd"
