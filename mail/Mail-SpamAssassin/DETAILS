   SOURCE_URL[0]=http://us.spamassassin.org/released/$SOURCE
   SOURCE_URL[1]=http://spamassassin.taint.org/released/$SOURCE
   SOURCE_URL[2]=http://au.spamassassin.org/released/$SOURCE
