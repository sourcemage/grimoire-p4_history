VOYEUR=on

if query "Backup package config ?" y
then
 CUR_DATE=`date +%y.%m.%d-%H.%M.%S`
 tar -cyvf "/usr/share/httpd/squirrelmail-config-backup-$CUR_DATE.tar.bz2" /usr/share/httpd/htdocs/squirrelmail/config 1>/dev/null 2>&1
fi

# apache/apache2 auto setup
if  spell_installed  "apache";     then
  LOC="/usr/share/httpd"
elif  spell_installed  "apache2";  then
  LOC="/usr/share/apache2"
fi



if query "Remove squirrelmail directory ?" y
then
 rm -fr $LOC/htdocs/squirrelmail
 rm -fr /usr/doc/squirrelmail
fi
