{
# apache/apache2 auto setup
if  spell_installed    "apache";   then 
  LOC="/usr/share/httpd" 
elif  spell_installed  "apache-mod_ssl";  then 
  LOC="/usr/share/httpsd" 
elif  spell_installed  "apache2";  then 
  LOC="/usr/share/apache2" 
fi

# move the doc dir to /usr/doc
mkdir /usr/doc/squirrelmail 1>/dev/null 2>&1
mv $LOC/htdocs/squirrelmail/doc/* /usr/doc/squirrelmail/

rm -r -f $LOC/htdocs/squirrelmail/doc
ln -s /usr/doc/squirrelmail/ $LOC/htdocs/squirrelmail/doc

chown nobody.nogroup $LOC/htdocs/squirrelmail/doc
chmod 555 $LOC/htdocs/squirrelmail/doc

mv $LOC/htdocs/squirrelmail/AUTHORS      /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/COPYING      /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/INSTALL      /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/MIRRORS      /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/README       /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/ChangeLog    /usr/doc/squirrelmail
mv $LOC/htdocs/squirrelmail/ReleaseNotes /usr/doc/squirrelmail/Release-Notes
mv $LOC/htdocs/squirrelmail/UPGRADE      /usr/doc/squirrelmail

# This gives you a clue about why squirrelmail shows php code in the browser instead of the login page...
echo "#Add php4 extention support..." > $LOC/htdocs/squirrelmail/doc/httpd-sample-squirrelmail.conf
echo "<IfModule mod_php4.c>"         >> $LOC/htdocs/squirrelmail/doc/httpd-sample-squirrelmail.conf
echo "AddType application/x-httpd-php .phtml .php .php4 .php3" >> $LOC/htdocs/squirrelmail/doc/httpd-sample-squirrelmail.conf
echo "</IfModule mod_php4.c>"        >> $LOC/htdocs/squirrelmail/doc/httpd-sample-squirrelmail.conf

chown nobody.nogroup $LOC/htdocs/squirrelmail/doc/httpd-sample-squirrelmail.conf

message "Look at /usr/doc/squirrelmail/httpd-sample-squirrelmail.conf for apache's config"
message "Remember to run $LOC/htdocs/squirrelmail/configure to setup squirrelmail"
}
