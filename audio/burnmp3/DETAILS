           SPELL=burnmp3
         VERSION=0.5
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://richardsnow.bizland.com/burnmp3/$SOURCE
        WEB_SITE=http://richardsnow.bizland.com/burnmp3/index.html
         ENTERED=20020201
         UPDATED=20020228
