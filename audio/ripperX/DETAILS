SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/ripperx/$SOURCE
          MD5[0]=ed947743cb7f85f9ea57226375939442
