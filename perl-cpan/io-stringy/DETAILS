   SOURCE_URL[0]=http://www.cpan.org/authors/id/ERYQ/$SOURCE
     SOURCE_HASH=sha512:059ad2d425ef33d28802022fd10821b1c40e5b23bb00a8bfeb25c372759a98ae3542d360408ce05c6e969d3b1b3c4f93241a5fdec5a32ff3c163ba99477308b6
