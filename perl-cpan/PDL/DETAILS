         VERSION=2.3
          SOURCE=PDL-2.3.2.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/PDL-2.3.2
   SOURCE_URL[0]=http://www.cpan.org/authors/id/K/KG/KGB/PDL-2.3.2.tar.gz
        WEB_SITE=http://search.cpan.org/search?mode=module&query=PDL
         ENTERED=20020314
