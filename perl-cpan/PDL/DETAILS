           SPELL=PDL
         VERSION=2.4.0
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.cpan.org/authors/id/C/CS/CSOE/$SOURCE
          MD5[0]="f68439ca37edd740fdf741b5af804c15"
