config_query LATEST_MD5          "Install latest version of digest-md5"    y  &&
config_query LATEST_FILESPEC     "Install latest version of file-spec"     y  &&
config_query LATEST_CGI          "Install latest version of perl-cgi"      y  &&
config_query LATEST_FILTERSIMPLE "Install latest version of filter-simple" y  &&
config_query LATEST_LIBNET       "Install latest version of libnet"        y  &&
config_query LATEST_NETPING      "Install latest version of net-ping "     y  &&
config_query LATEST_TEXTBALANCED "Install latest version of text-balanced" y  &&
config_query LATEST_MIMEBASE64   "Install latest version of mime-base64"   y  &&

#Emptying DEPENDS
echo "" > $SCRIPT_DIRECTORY/DEPENDS  &&

if [ $LATEST_MD5 = "y" ]; then
   echo "depends digest-md5 &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed digest-md5 && dispel digest-md5
fi  &&

if [ $LATEST_FILESPEC = "y" ]; then
   echo "depends file-spec &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed file-spec && dispel file-spec
fi  &&

if [ $LATEST_CGI = "y" ]; then
   echo "depends perl-cgi &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed perl-cgi && dispel perl-cgi
fi  &&

if [ $LATEST_FILTERSIMPLE = "y" ]; then
   echo "depends filter-simple &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed filter-simple && dispel filter-simple
fi  &&

if [ $LATEST_LIBNET = "y" ]; then
   echo "depends perl-libnet &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed perl-libnet && dispel perl-libnet
fi  &&

if [ $LATEST_NETPING = "y" ]; then
   echo "depends net-ping &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed net-ping && dispel net-ping
fi  &&

if [ $LATEST_TEXTBALANCED = "y" ]; then
   echo "depends text-balanced &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed text-balanced && dispel text-balanced
fi  &&

if [ $LATEST_MIMEBASE64 = "y" ]; then
   echo "depends mime-base64 &&" >> $SCRIPT_DIRECTORY/DEPENDS
else
   spell_installed mime-base64 && dispel mime-base64
fi  &&

echo "true" >> $SCRIPT_DIRECTORY/DEPENDS
