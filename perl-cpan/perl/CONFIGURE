CONFIG_FILE="$DEPENDS_CONFIG/perl_config.sh"

if  !  grep  -q  "OLD_CUSTOM="  $SPELL_CONFIG;  then

  if [ -f $CONFIG_FILE ]; then
    if    query  "Use old custom configuration for Perl?"  y
    then  echo   "OLD_CUSTOM=y"  >>  $SPELL_CONFIG
    else  echo   "OLD_CUSTOM=n"  >>  $SPELL_CONFIG && OLD_CUSTOM=n
    fi
  else  echo   "OLD_CUSTOM=n"  >>  $SPELL_CONFIG && OLD_CUSTOM=n
  fi

fi

if  !  grep  -q  "NEW_CUSTOM="  $SPELL_CONFIG;  then

  case  $OLD_CUSTOM  in
      n|N)  if    query  "New custom configuration for Perl?"  n
            then  echo   "NEW_CUSTOM=y"  >>  $SPELL_CONFIG
            else  echo   "NEW_CUSTOM=n"  >>  $SPELL_CONFIG
            fi ;;
        *)  echo   "NEW_CUSTOM=n"  >>  $SPELL_CONFIG ;;
  esac

fi
