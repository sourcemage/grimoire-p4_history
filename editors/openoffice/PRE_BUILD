#      summon freetype2 openssl python
#fi                                       &&
mk_source_dir	$SOURCE_DIRECTORY  4g	&&
cd		$SOURCE_DIRECTORY	&&
unpack		$SOURCE	${MD5[0]}	&&

#
# TODO:
# Make a spell for linux-pam-headers
# get rid of this dirty hack
# have a depends on LINUX-PAM-HEADER
# which both linux-pam and the new spell PROVIDE
#
if ! spell_installed "Linux-PAM"; then
	mk_source_dir $SOURCE_DIRECTORY2 &&
	cd $BUILD_DIRECTORY		 &&
	unpack $SOURCE2 ${MD5[1]}	 &&
        mkdir -p /usr/include/security   &&
        mv -f security/*  /usr/include/security/ &&
        rm_source_dir $SOURCE_DIRECTORY2
fi

#
# Set OO to use our optimizations
#
sedit  "s:^CFLAGSOPT=.*:CFLAGSOPT=$CFLAGS:g"  solenv/inc/unxlngi3.mk  &&
sedit  "s:\-mcpu-pentiumpro::"                solenv/inc/unxlngi4.mk  &&
sedit  "s:^CFLAGSOPT=.*:CFLAGSOPT=$CFLAGS:g"  solenv/inc/unxlngi4.mk  &&

