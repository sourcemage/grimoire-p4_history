if  !  grep  -q  "CONFIGURED"  ${SPELL_CONFIG}
then

  if    query  "Do you want toolbar support?"  y
  then  echo   'OPTS="${OPTS}  --toolbars=yes"'  >>  ${SPELL_CONFIG}
  else  echo   'OPTS="${OPTS}  --toolbars=no"'   >>  ${SPELL_CONFIG}
  fi

  if    query  "Do you want generic drag and drop support?"  y
  then  echo   'OPTS="${OPTS}  --dragndrop=yes"'  >>  ${SPELL_CONFIG}
  else  echo   'OPTS="${OPTS}  --dragndrop=no"'   >>  ${SPELL_CONFIG}
  fi

  echo  'CONFIGURED="y"'  >>  ${SPELL_CONFIG}
fi
