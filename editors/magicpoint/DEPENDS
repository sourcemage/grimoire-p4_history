depends  x11-libs   &&
depends  libpng     &&
depends  uudeview   &&
depends  gzip       &&
depends  libmng     &&

optional_depends  freetype1              \
                  "--enable-freetype"    \
                  "--disable-freetype"   \
                  "for TrueType1 fonts"  &&

optional_depends  freetype2              \
                  "--enable-freetype"    \
                  "--disable-freetype"   \
                  "for TrueType2 fonts"  &&

optional_depends  libungif                 \
                  "--enable-gif"           \
                  "--disable-gif"          \
                  "for GIF image support"  &&

optional_depends  imlib                                   \
                  "--enable-imlib"                        \
                  "--disable-imlib"                       \
                  "use imlib exclusively to load images"
