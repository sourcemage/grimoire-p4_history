   SOURCE_URL[0]=http://yudit.org/download/$SOURCE
     SOURCE_HASH=sha512:4d60cd88854f09d7f0c277d8a0eeb7ae8fcc78f53d78080df132abcd3d082056657f7626ea69a73e1e8b5474ed227bb48bc15ce6e4c33cc1f306b726088c053b
