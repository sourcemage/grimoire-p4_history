SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.cs.pdx.edu/pub/$SPELL/$SOURCE
          MD5[0]=b5a5040899bdc197e9ccc70a561a6676
        WEB_SITE=ftp://ftp.cs.pdx.edu/pub/elvis
