   SOURCE_URL[0]=http://www.scribus.org.uk/downloads/$VERSION/$SOURCE
          MD5[0]=053cdc8ee50064e755f93690e114635c
        WEB_SITE=http://www.scribus.org.uk/
         ENTERED=20020201
