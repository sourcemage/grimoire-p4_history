           SPELL=code-browser
         VERSION=2.7
       BUILD_API=2
          SOURCE=${SPELL}-${VERSION}-src.tar.gz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
   SOURCE_URL[0]=${SOURCEFORGE_URL}/${SPELL}/${SOURCE}
      SOURCE_GPG=gurus.gpg:${SOURCE}.sig
        WEB_SITE=http://code-browser.sourceforge.net/
