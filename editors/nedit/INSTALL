cp ${SOURCE_DIRECTORY}/source/nedit ${INSTALL_ROOT}/usr/bin/     &&
mkdir /usr/share/doc/nedit                                      &&
echo FAQ is being copied to /usr/share/doc/nedit...             &&
cp ${SOURCE_DIRECTORY}/doc/html/* ${INSTALL_ROOT}/usr/share/doc/nedit &&

if ! [ -d /usr/share/xsessions ] ; then
  mkdir /usr/share/xsessions
fi                                                      &&
install  -m  755  ${SCRIPT_DIRECTORY}/desktop/${SPELL}.desktop  \
                  /usr/share/xsessions
