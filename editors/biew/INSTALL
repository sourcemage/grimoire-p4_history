  gzip       ${SOURCE_DIRECTORY}/doc/biew.1                                                            &&
  cp         ${SOURCE_DIRECTORY}/doc/biew.1.gz     ${INSTALL_ROOT}/usr/man/man1    &&
  cp         ${SOURCE_DIRECTORY}/biew              ${INSTALL_ROOT}/usr/bin         &&
  mkdir  -p                                        ${INSTALL_ROOT}/usr/share/biew  &&
  cp         ${SOURCE_DIRECTORY}/bin_rc/skn/*.skn  ${INSTALL_ROOT}/usr/share/biew  &&
  cp     -R  ${SOURCE_DIRECTORY}/bin_rc/xlt        ${INSTALL_ROOT}/usr/share/biew  &&
  cp         ${SOURCE_DIRECTORY}/bin_rc/biew.hlp   ${INSTALL_ROOT}/usr/share/biew  &&
  cp     -R  ${SOURCE_DIRECTORY}/hlp/*             ${INSTALL_ROOT}/usr/share/biew
