optional_depends  "perl"                          \
                  "--enable-perlinterp"           \
                  ""                              \
                  "to enable Perl interpreter"    &&
optional_depends  "Python"                        \
                  "--enable-pythoninterp"         \
                  ""                              \
                  "to enable Python interpreter"  &&
optional_depends  "tcl"                           \
                  "--enable-tclinterp"            \
                  ""                              \
                  "to enable Tcl interpreter"     &&
optional_depends  "ruby"                          \
                  "--enable-rubyinterp"           \
                  ""                              \
                  "to enable Ruby interpreter"    &&
optional_depends  "cscope"                        \
                  "--enable-cscope"               \
                  ""                              \
                  "to enable cscope interface"    &&
optional_depends  "gpm"                           \
                  "--enable-gpm"                  \
                  "--disable-gpm"                 \
                  "for console mouse support"     &&

if  [  "$GUI"  =  "gtk"  ]
then  depends  gtk+
elif  [  "$GUI"  =  "gnome"  ]
then  depends  gnome-libs
elif  [  "$GUI"  =  "gtk2"  ]
then  depends  gtk+2
elif  [  "$GUI"  =  "gnome2"  ]
then  depends  libgnomeui
elif  [  "$GUI"  =  "motif"  ]
then  depends  MOTIF
elif  [  "$GUI"  =  "athena"  ]
then  depends  X11-LIBS
fi
