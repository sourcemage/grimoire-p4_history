   SOURCE_URL[0]=ftp://ftp.ibiblio.org/pub/Linux/apps/editors/X/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:1d82ee1ab1e3bfe6477365aaa35084f7504a1503a0c97df997d937c90097c783d4cb90f023499a15f78d278df631310f59a3bd0f7a66620f147e23d7273294e9
