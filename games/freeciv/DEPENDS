depends glib   &&
depends gtk+   &&
depends imlib  &&
depends SDL    &&

optional_depends  "zlib"         \
                  "--with-zlib"  \
                  ""             \
                  "for transparent savegame (un)compression"

optional_depends  "esound"        \
                  ""              \
                  "--disable-esd" \
                  "for ESD sound output"

optional_depends  "SDL_mixer"           \
                  ""                    \
                  "--disable-sdl-mixer" \
                  "for SDL sound output"

( is_depends esound || is_depends SDL_mixer )  &&  depends freeciv-stdsounds
