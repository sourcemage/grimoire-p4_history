if  !  grep  -q  "COPY_PAK="  $SPELL_CONFIG;  then

  message "${MESSAGE_COLOR}The Quake II game engine is covered by the GNU General Public License."
  message "However, the game data is not."
  message "You will need a licensed copy of Quake II to play the game.${DEFAULT_COLOR}"

  if    query  "Should I copy the game data from the CD?\n(Warning: this is almost 200Mb)"  n
    then  echo  "COPY_PAK=y"  >>  $SPELL_CONFIG
    else  echo  "COPY_PAK=n"  >>  $SPELL_CONFIG
  fi

  if    query  "Should I copy the in-game movies from the CD?\n(Warning: this is almost 200Mb)"  n
    then  echo  "COPY_VID=y"  >>  $SPELL_CONFIG
    else  echo  "COPY_VID=n"  >>  $SPELL_CONFIG
  fi

  message "${SPELL_COLOR}${SPELL}${DEFAULT_COLOR}: ${MESSAGE_COLOR}Now I need to know where the game data is."
  message "${QUERY_COLOR}Please enter the path to the \"baseq2\" directory on the disc"
  message "[/mnt/cdrom/Install/Data/baseq2]${DEFAULT_COLOR}"

  read   -t  $PROMPT_DELAY -e

  BASE_PATH=${REPLY:=/mnt/cdrom/Install/Data/baseq2}
  echo  "BASE_PATH=${BASE_PATH}"  >>  $SPELL_CONFIG

fi