if  !  grep  -q  "KOBO_OGL="  $SPELL_CONFIG;  then

  if  query  "Enable OpenGL rendering layer support (experimental) ?" n
  then  KOBO_OGL="--enable-opengl"
  else  KOBO_OGL=""
  fi
  echo  "KOBO_OGL=\"$KOBO_OGL\""  >> $SPELL_CONFIG

fi

if  !  grep  -q  "KOBO_OSS="  $SPELL_CONFIG;  then

  if  query  "Support OSS audio API (in addition to SDL audio) ?" n
  then  KOBO_OSS="--enable-oss"
  else  KOBO_OSS=""
  fi
  echo  "KOBO_OSS=\"$KOBO_OSS\""  >>  $SPELL_CONFIG

fi
