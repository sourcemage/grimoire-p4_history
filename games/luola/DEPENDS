depends  SDL        &&
depends  SDL_image  &&

optional_depends  "SDL_mixer"          \
                  "--enable-sound"     \
                  "--disable-sound"    \
                  "for sound support"  &&

optional_depends  "SDL_gfx"                  \
                  "--enable-sdl-gfx"         \
                  "--disable-sdl-gfx"        \
                  "to draw better graphics"
