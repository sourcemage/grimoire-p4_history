if  !  grep  -q  CONFIGURED  ${SPELL_CONFIG}
then

  if    query  "Enable Xinerama support?"  n
  then  echo   'OPTS="${OPTS}  --with-xinerama"'     >>  ${SPELL_CONFIG}
  else  echo   'OPTS="${OPTS}  --without-xinerama"'  >>  ${SPELL_CONFIG}
  fi &&
  message "${RED}You must choose a UI [ParaGUI/ SDL or QT(broken)] for Freerails${DEFAULT_COLOR}" &&
  if query "Enable ParaGUI/ SDL  client for Freerails ?" y
  then echo 'OPTS="${OPTS} --with-paragui-client"'  >> ${SPELL_CONFIG}
  else if query "Enable QT  client for Freerails ?" y
  then echo 'OPTS="${OPTS} --enable-qt-mt"'  >> ${SPELL_CONFIG}
  fi
  fi
  echo  "CONFIGURED='y'"  >>  ${SPELL_CONFIG}

fi
