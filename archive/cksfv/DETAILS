           SPELL=cksfv
         VERSION=1.3
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.fodder.org/$SPELL/$SOURCE
        WEB_SITE=http://www.fodder.org/cksfv/
	BUILD_API=2
         ENTERED=20020427
