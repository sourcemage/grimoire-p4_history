OPTS="$OPTS  $PACO_OPTS"  &&

./configure  --prefix=${INSTALL_ROOT}/usr            \
             --bindir=${INSTALL_ROOT}/usr/bin        \
             --libdir=${INSTALL_ROOT}/usr/lib        \
            --datadir=${INSTALL_ROOT}/usr/share      \
             --mandir=${INSTALL_ROOT}/usr/share/man  \
                      ${OPTS}                        &&
make
