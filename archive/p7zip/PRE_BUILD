default_pre_build &&
cd $SOURCE_DIRECTORY &&

sedit "s|/usr/local|$INSTALL_ROOT/usr|g" makefile &&

case "${HOST%%-*}" in
i*86 | ppc | alpha)
  cp makefile.linux_x86_ppc_alpha makefile.machine
  ;;
x86_64)
  cp makefile.linux_amd64 makefile.machine
  ;;
#sparc*)
#  ;;
*)
  message "${ERROR_COLOR}Unsupported architecture${DEFAULT_COLOR}" &&
  false
  ;;
esac
