make install                                      &&
cd ..                                             &&
unpack_file 2                                     &&
if [ ! -e /usr/share/timidity ]
	then mkdir /usr/share/timidity
fi                                                &&
cp PC42b/PC42b.sf2 /usr/share/timidity            &&
if [ ! -e ~/.alsaplayer ]
    then mkdir ~/.alsaplayer
fi                                                &&
cd ~/.alsaplayer                                  &&
ln -s /usr/share/timidity/PC42b.sf2
