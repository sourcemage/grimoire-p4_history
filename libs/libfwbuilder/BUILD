(
  export CPPFLAGS="$CPPFLAGS -I /usr/include/libxml2/libxml"

  ./autogen.sh --build=$BUILD        \
               --prefix=/usr         \
               --sysconfdir=/etc     \
               --localstatedir=/var  \
               $OPTS                 &&
  make                               &&
  prepare_install                    &&
  make    install

) > $C_FIFO 2>&1
