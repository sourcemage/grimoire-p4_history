depends  g++  &&

optional_depends  OPENGL                \
                  '--enable-opengl'     \
                  '--disable-opengl'    \
                  'for OpenGL support'  &&

optional_depends  sdl                \
                  '--enable-sdl'     \
                  '--disable-sdl'    \
                  'for SDL support'  &&

optional_depends  sdl_image                \
                  '--enable-sdlimage'      \
                  '--disable-sdlimage'     \
                  'for SDL_image support'  &&

optional_depends  allegro                \
                  '--enable-allegro'     \
                  '--disable-allegro'    \
                  'for Allegro support'
