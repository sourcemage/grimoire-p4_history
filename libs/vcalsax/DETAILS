   SOURCE_URL[0]=ftp://ftp.logilab.org/pub/$SPELL/$SOURCE
     SOURCE_HASH=sha512:9eb9751b7465e6a3647c37a0f1d488ac165e8f1e58bab660197a937293a28ca369defeacd99b32b1ff0a6c01c469b5fd46ba4e71b68cb870db229b6bfa9f07d8
