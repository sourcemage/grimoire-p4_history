           SPELL=xerces-c
         VERSION=2.2.0
     PKG_VERSION=2_2_0
          SOURCE=${SPELL}-src${PKG_VERSION}.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}-src${PKG_VERSION}
   SOURCE_URL[0]=http://xml.apache.org/dist/$SPELL/stable/$SOURCE
          MD5[0]=f525ed484c164a9fbc286f996c0f94be
