if ! grep -q CONFIGURED $SPELL_CONFIG; then

if query "\tThis spell implements a trash can under Linux either by using 
\t/etc/ld.so.preload(from boot) or /etc/profile(on login)
\tThe safe way of doing this is to export the LD_PRELOAD variable at login,
\tWould you like sorcery to set up the safe way for you ?" y
then echo "LOGDEFS=yes" >> $SPELL_CONFIG

fi &&

echo CONFIGURED=yes >> $SPELL_CONFIG
fi
