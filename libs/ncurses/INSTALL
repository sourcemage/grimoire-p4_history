	make install &&

	# move libs over to /lib so that if on apart partition system
	# will still boot.
	rm -rf ${INSTALL_ROOT}/lib/libncurses.so*  &&
	cp -df ${INSTALL_ROOT}/usr/lib/libncurses.so* ${INSTALL_ROOT}/lib &&

	# Check for cross install and copy libs if needed.
	if [ "$CROSS_INSTALL" = "on" ]; then
		mv -f ${INSTALL_ROOT}/usr/include/ncurses/* ${INSTALL_ROOT}/usr/include/  &&
		rm -rf ${INSTALL_ROOT}/usr/include/ncurses
	fi
