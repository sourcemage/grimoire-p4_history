   SOURCE_URL[0]=http://www.libsdl.org/projects/SDL_mixer/release/$SOURCE
  SOURCE2_URL[0]=http://www.libsdl.org/projects/SDL_mixer/timidity/$SOURCE2
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
     SOURCE2_GPG="gurus.gpg:${SOURCE2}.sig"
