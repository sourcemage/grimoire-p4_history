cd       /usr/src
KVERSION=$(echo $VERSION | sed 's/-dj.*//')

rm  -rf  linux
rm  -rf  linux-$VERSION
rm  -rf  linux-$KVERSION

unpack  $SOURCE
mv  linux-$KVERSION  linux-$VERSION
chown  -R  root:root  linux-$VERSION

ln  -s     linux-$VERSION  linux

if  [  -f   $CONFIG_CACHE/.config  ];  then
  cp        $CONFIG_CACHE/.config  /usr/src/linux
fi

cd linux
bzcat  $SOURCE_CACHE/$SOURCE2  |  patch  -t -p1
