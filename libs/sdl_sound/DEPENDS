depends  sdl  &&

optional_depends  flac                       \
                  "--enable-flac"            \
                  "--disable-flac"           \
                  "to enable FLAC decoding"  &&

optional_depends  smpeg                     \
                  "--enable-smpeg"          \
                  "--disable-smpeg"         \
                  "to enable MP3 decoding"  &&

optional_depends  modplugxmms                                  \
                  "--enable-modplug"                           \
                  "--disable-modplug"                          \
                  "to enable modules decoding via libmodplug"  &&

optional_depends  libmikmod                                   \
                  "--enable-mikmod"                           \
                  "--disable-mikmod"                          \
                  "to enable modules decoding via libmikmod"  &&

optional_depends  libvorbis                        \
                  "--enable-vorbis"                \
                  "--disable-vorbis"               \
                  "to enable Ogg Vorbis decoding"
