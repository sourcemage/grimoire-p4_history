          SOURCE=$SPELL,$VERSION.tar.gz
	 SOURCE2=allwords
   SOURCE_URL[0]=http://www.crypticide.com/users/alecm/security/${SOURCE}
  SOURCE2_URL[0]=http://www.cotse.com/wordlists/allwords
          MD5[0]=655677387ae4e0aa1f3373d0fb57691b
