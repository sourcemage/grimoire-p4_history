if ! grep -q /sbin/ldconfig $PROTECTED
then echo "/sbin/ldconfig" >> $PROTECTED
fi 

if [[ $(uname -r) == 2.6.* ]] 
    then config_query NPTL "As you are running a 2.6 kernel, would you like to use the new nptl (Native Posix Thread Libary)" y
fi  
config_query UTF "Would you like to generate UTF-8 locale data (Unicode) as well as the native charset data ?" n

