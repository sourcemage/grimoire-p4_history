           SPELL=gksu
         VERSION=1.0.7
          SOURCE=${SPELL}-${VERSION}.tar.gz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
   SOURCE_URL[0]=http://people.debian.org/~kov/gksu/${SOURCE}
          MD5[0]='df2c1874ac3936160cf9090ec9fa44ea'
        WEB_SITE=http://www.nongnu.org/gksu/
         ENTERED=20040327
