if query "Do you want ssh1 compatability?" y;
	then echo "SSH1=y" >> $SPELL_CONFIG
	else echo "SSH1=n" >> $SPELL_CONFIG
fi

if spell_installed xfree86; 
	then 
	if query "Do you want to enable the XFree86 compile options?" y
	then echo "XFREE86=y" >> $SPELL_CONFIG
	else echo "XFREE86=n" >> $SPELL_CONFIG
	fi
fi