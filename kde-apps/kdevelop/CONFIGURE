source  $SECTION_DIRECTORY/KDE_CONFIGURE  &&

config_query_option  KDEVELOP_ADA  'Enable Ada support?'  n  \
                     '--enable-ada'  '--disable-ada'         &&

config_query_option  KDEVELOP_PASCAL  'Enable Pascal support?'  n  \
                     '--enable-pascal'  '--disable-pascal'         &&

config_query_option  KDEVELOP_CLEARCASE  'Enable ClearCase support?'  n  \
                     '--enable-clearcase'  '--disable-clearcase'         &&

config_query_option  KDEVELOP_VISUALBOY  'Enable VisualBoy Advance support?'  \
                     n  '--enable-vba'  '--disable-vba'
