depends  koffice  &&

optional_depends  mysql               \
                  "--enable-mysql"    \
                  "--disable-mysql"   \
                  "for MySQL plugin"  &&

optional_depends  postgresql               \
                  "--enable-pgsql"         \
                  "--disable-pgsql"        \
                  "for PostgreSQL plugin"

#
# KDE is currently built with arts anyways...
#
optional_depends  arts                             \
                  "--with-arts"                    \
                  "--without-arts"                 \
                  "for ARTS sound system support"
