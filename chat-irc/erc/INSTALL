if [ ! -d ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc ]
then
    mkdir ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc 
fi &&

install -m0644 erc-compat.el ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc   &&
install -m0644 erc-bbdb.el ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc     &&
install -m0644 erc-ibuffer.el ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc  &&
install -m0644 erc-speak.el ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc    &&
install -m0644 erc-speedbar.el ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc &&

install -m0644 erc*.elc ${INSTALL_ROOT}/usr/share/emacs/site-lisp/erc        
