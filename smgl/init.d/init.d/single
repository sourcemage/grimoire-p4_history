#!/bin/bash

RUNLEVEL=S
NEEDS="+local_fs"

. /etc/init.d/smgl_init

case "$1" in
  start)  echo "Entering single user mode..."
          cat > /etc/nologin << EOF
The system is currently in single user mode.

Login is therefore restricted to root.
EOF
          evaluate_retval
          ;;

  stop)   echo "Leaving single user mode..."
          rm /etc/nologin
          evaluate_retval
          ;;

  *)      exit 1
          ;;
esac
