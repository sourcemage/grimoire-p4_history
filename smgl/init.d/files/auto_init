#!/bin/bash
#---------------------------------------------------------------------
# vim:set ts=2 sw=2 et:
#---------------------------------------------------------------------
##
##=head1 SYNOPSIS
##
##
##
##=head1 DESCRIPTION
##
##
##
##=head1 COPYRIGHT
##
## Copyright (C) 2003 Robert Helgesson <rycee@home.se>
## 
##=head1 FUNCTIONS
#---------------------------------------------------------------------


_start() {

  echo "Starting $NAME..."
  loadproc $PROGRAM $ARGS

}

_stop() {
  
  echo "Stopping $NAME..."
  killproc $PROGRAM

}

_restart() {

  echo "Restarting $NAME..."
  $0 stop
  sleep 2
  $0 start

}

_reload() {

  echo "Reloading $NAME..."
  reloadproc $PROGRAM

}

_force_reload() {
  run_func restart
}

_status() {

  statusproc $PROGRAM

}

_usage() {

  echo "Usage: $0 {start|stop|restart|reload|force-reload|status}"

}


# Handles function "overloading"
run_func() {
  # If for example start exists then run it, otherwise run _start
  type -t $1 > /dev/null && $1 || _$1
}


# First check to see if the program actually can be run
test -x $PROGRAM || {
  echo "Program doesn't appear to be installed" > /dev/stderr
  exit 5
}

[ -z "$NAME" ] && NAME=$( basename $PROGRAM )

case $1 in
  start)        run_func $1           ;;
  stop)         run_func $1           ;;
  restart)      run_func $1           ;;
  reload)       run_func $1           ;;
  force-reload) run_func force_reload ;;
  status)       run_func $1           ;;
  *)            run_func usage
                exit 2
                ;;
esac

exit $?


#---------------------------------------------------------------------
