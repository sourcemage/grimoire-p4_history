cp $SPELL_DIRECTORY/sorcery-rescue.sh /tmp/  
cat $SPELL_DIRECTORY/notice | less           

#
# Cleanout all leftovers...
#
rm -rf /var/log/sorcery/*/sorcery-sound
rm -rf /var/log/sorcery/*/sorcery-onl*
rm -rf /var/log/sorcery/*/sorcery-dev*
rm -rf /var/log/sorcery/*/sorcery-te*
rm -rf /var/log/sorcery/*/sorcery-st*
rm -rf /tmp/libcodex.findspell*
rm -rf /etc/sorcery/local/depends/sorcery-sound
rm -rf /etc/sorcery/local/depends/sorcery-onl*
rm -rf /etc/sorcery/local/depends/sorcery-dev*
rm -rf /etc/sorcery/local/depends/sorcery-te*
rm -rf /etc/sorcery/local/depends/sorcery-st*

sed /sorcery-sound/d< /var/state/sorcery/packages
sed /sorcery-onl/d< /var/state/sorcery/packages
sed /sorcery-dev/d< /var/state/sorcery/packages
sed /sorcery-te/d< /var/state/sorcery/packages
sed /sorcery-st/d< /var/state/sorcery/packages

exit 1
