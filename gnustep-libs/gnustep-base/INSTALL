make GNUSTEP_INSTALLATION_DIR=$GNUSTEP_SYSTEM_ROOT install           


# documentation must be installed after gnustep-base due needed 
# dependences.
if [ "$DOCU" == "y" ]; 
then
    cd Documentation                                                 &&
    make_single                                                      &&
    make GNUSTEP_INSTALLATION_DIR=$GNUSTEP_SYSTEM_ROOT install       &&
    make_normal
fi
