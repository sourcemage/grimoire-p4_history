           SPELL=gnustep-make
         VERSION=1.12.0
      PATCHLEVEL=1
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.gnustep.org/pub/gnustep/core/$SOURCE
        WEB_SITE=http://www.gnustep.org
