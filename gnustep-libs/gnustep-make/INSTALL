make install                                                         &&

if [ "$DOCU" == "y" ]; 
then
    . GNUstep.sh
    cd Documentation                                                 &&
    make GNUSTEP_INSTALLATION_DIR=$GNUSTEP_SYSTEM_ROOT install       &&
    cd ../
fi

if [ -f /etc/profile.d/GNUstep.sh ];
then
	rm -f /etc/profile.d/GNUstep.sh
fi

ln -s /usr/GNUstep/System/Library/Makefiles/GNUstep.sh \
    /etc/profile.d/GNUstep.sh
