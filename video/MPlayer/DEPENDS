depends  unzip       &&
depends  libdvdread  &&
depends  w32codec    &&

optional_depends  "SDL"            \
                  "--enable-sdl"   \
                  ""               \
                  "to use SDL to output video signal"            &&

optional_depends  "alsa-lib"  ""  ""  "for ALSA sound support"   &&
optional_depends  "aalib"     ""  ""  "for ascii art rendering"  &&

if    [  "$GUI"  =  "y"  ]
then  depends  libpng  &&
      depends  gtk+
else  optional_depends  "libpng"         \
                        "--enable-png"   \
                        "--disable-png"  \
                        "to display portable network graphics files"
fi
