depends  libgnomeui  &&
optional_depends  nautilus2   "--enable-nautilus"  "--disable-nautilus"  "for nautilus plugin"  &&
optional_depends  nautilus-cd-burner ""  ""  "for more comfortable optical device chooser"  &&
optional_depends  lirc  "--enable-lirc"  "--disable-lirc"  "for remote control"  &&
if    [  "$GSTREAMER"  =  "y"  ]
then  depends  gst-plugins "--enable-gstreamer"
else  depends  xine-lib
fi
