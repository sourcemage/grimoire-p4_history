SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
        WEB_SITE=http://motion.sourceforge.net
     SOURCE_HASH=sha512:98ca078a810934507482efb7fcf5ece77747d4b1b654c2f82207c16ad91e557592eaa194c15d6d7d321f352307f6f69a17e1ea0e4b0ddf22035a29c9d0ce11b2
