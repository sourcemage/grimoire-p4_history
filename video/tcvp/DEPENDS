                  "--enable-audiofile"   \
                  "--disable-audiofile"  \
                  "for WAV file support"  &&
optional_depends  "mad"            \
                  "--enable-mad"   \
                  "--disable-mad"  \
                  "for mad mp3 decoder support"  &&
