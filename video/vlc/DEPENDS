# interface options
optional_depends  "gtk+"                  \
                  "--enable-gtk"          \
                  "--disable-gtk"         \
                  "for gtk interface"     &&

optional_depends  "gnome-libs"            \
                  "--enable-gnome"        \
                  "--disable-gnome"       \
                  "for gnome interface"   &&

optional_depends  "wxGTK"                 \
                  "--enable-wxwindows"    \
                  "--disable-wxwindows"   \
                  "for wxGTK interface"   &&

optional_depends  "qt-x11"                \
                  "--enable-qt"           \
                  "--disable-qt"          \
                  "for qt interface"      &&

optional_depends  "kdelibs"               \
                  "--enable-kde"          \
                  "--disable-kde"         \
                  "for kde interface"     &&

optional_depends  "ncurses"               \
                  "--enable-ncurses"      \
                  "--disable-ncurses"     \
                  "for ncurses interface"   &&

optional_depends  "xosd"                  \
                  "--enable-xosd"         \
                  "--disable-xosd"        \
                  "for xosd interface"    &&

optional_depends  "MOZILLA-BROWSER"       \
                  "--enable-mozilla"      \
                  "--disable-mozilla"     \
                  "for a mozilla plugin"  &&

# control plugins
optional_depends  "lirc"                  \
                  "--enable-lirc"         \
                  "--disable-lirc"        \
                  "for lirc support"      &&

# video output options
optional_depends  "freetype2"             \
                  "--enable-freetype"     \
                  "--disable-freetype"    \
                  "for freetype subtitle rendering support"  &&

optional_depends  "SDL"                   \
                  "--enable-sdl"          \
                  "--disable-sdl"         \
                  "for SDL video output"  &&

optional_depends  "aalib"                 \
                  "--enable-aa"           \
                  "--disable-aa"          \
                  "for aalib video output" &&

optional_depends  "libggi"                \
                  "--enable-ggi"          \
                  "--disable-ggi"         \
                  "for GGI video output"  &&

optional_depends  "svgalib"               \
                  "--enable-svgalib"      \
                  "--disable-svgalib"     \
                  "for svgalib video output" &&

# audio output options
optional_depends  "esound"                \
                  "--enable-esd"          \
                  "--disable-esd"         \
                  "for esd audio output"  &&

optional_depends  "arts"                  \
                  "--enable-arts"         \
                  "--disable-arts"        \
                  "for arts audio output" &&

optional_depends  "alsa-lib"               \
                  "--enable-alsa"          \
                  "--disable-alsa"         \
                  "for alsa audio output"  &&

# audio codec options
optional_depends  "a52dec"                 \
                  "--enable-a52"           \
                  "--disable-a52"          \
                  "for AC3 audio decoder"  &&

optional_depends  "libmad"                 \
                  "--enable-mad"           \
                  "--disable-mad"          \
                  "for mad mp3 decoder"    &&

optional_depends  "libvorbis"              \
                  "--enable-vorbis"        \
                  "--disable-vorbis"       \
                  "for ogg vorbis decoder" &&

optional_depends  "faad2"                  \
                  "--enable-faad"          \
                  "--disable-faad"         \
                  "for AAC audio decoder"  &&

optional_depends  "flac"                   \
                  "--enable-flac"          \
                  "--disable-flac"         \
                  "for flac audio decoder" &&

# video codec options
optional_depends  LIBAVCODEC               \
                  "--enable-ffmpeg"        \
                  "--disable-ffmpeg"       \
                  "for lots of video codecs"  &&

optional_depends  "xvid"                   \
                  "--enable-xvid"          \
                  "--disable-xvid"         \
                  "for xvid video decoder" &&

optional_depends  "libdv"                  \
                  "--enable-dv"            \
                  "--disable-dv"           \
                  "for DV video decoder"   &&

optional_depends  "libmatroska"            \
                  "--enable-mkv"           \
                  "--disable-mkv"          \
                  "for matroska file support"  &&

optional_depends  "libogg"                 \
                  "--enable-ogg"           \
                  "--disable-ogg"          \
                  "for ogg demuxer support"  &&

# dvd options
optional_depends  "libdvdcss"              \
                   "--enable-dvd"          \
                   "--disable-dvd"         \
                   "for DVD support"       &&

optional_depends  "libdvdplay"             \
                  "--enable-dvdplay"       \
                  "--disable-dvdplay"      \
                  "for DVD navigation support"
