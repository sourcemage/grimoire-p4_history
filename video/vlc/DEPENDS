# interface options
optional_depends  "gtk+"                  \
                  "--enable-gtk"          \
                  "--disable-gtk"         \
                  "for gtk interface"     &&

optional_depends  "gnome-libs"            \
                  "--enable-gnome"        \
                  "--disable-gnome"       \
                  "for gnome interface"   &&

optional_depends  "wxgtk"                 \
                  "--enable-wxwindows"    \
                  "--disable-wxwindows"   \
                  "for wxGTK interface"   &&

optional_depends  "qt-x11"                \
                  "--enable-qt"           \
                  "--disable-qt"          \
                  "for qt interface"      &&

optional_depends  "kdelibs"               \
                  "--enable-kde"          \
                  "--disable-kde"         \
                  "for kde interface"     &&

optional_depends  "ncurses"               \
                  "--enable-ncurses"      \
                  "--disable-ncurses"     \
                  "for ncurses interface"   &&

optional_depends  "xosd"                  \
                  "--enable-xosd"         \
                  "--disable-xosd"        \
                  "for xosd interface"    &&

optional_depends  "GECKO"                 \
                  "--enable-mozilla"      \
                  "--disable-mozilla"     \
                  "for a mozilla plugin"  &&

# control plugins
optional_depends  "lirc"                  \
                  "--enable-lirc"         \
                  "--disable-lirc"        \
                  "for lirc support"      &&

# video output options
optional_depends  "freetype2"             \
                  "--enable-freetype"     \
                  "--disable-freetype"    \
                  "for freetype subtitle rendering support"  &&

optional_depends  "sdl"                   \
                  "--enable-sdl"          \
                  "--disable-sdl"         \
                  "for SDL video output"  &&

optional_depends  "aalib"                 \
                  "--enable-aa"           \
                  "--disable-aa"          \
                  "for aalib video output" &&

optional_depends  "libggi"                \
                  "--enable-ggi"          \
                  "--disable-ggi"         \
                  "for GGI video output"  &&

optional_depends  "svgalib"               \
                  "--enable-svgalib"      \
                  "--disable-svgalib"     \
                  "for svgalib video output" &&

# audio output options
optional_depends  "esound"                \
                  "--enable-esd"          \
                  "--disable-esd"         \
                  "for esd audio output"  &&

optional_depends  "arts"                  \
                  "--enable-arts"         \
                  "--disable-arts"        \
                  "for arts audio output" &&

optional_depends  "alsa-lib"               \
                  "--enable-alsa"          \
                  "--disable-alsa"         \
                  "for alsa audio output"  &&

# audio codec options
optional_depends  "a52dec"                 \
                  "--enable-a52"           \
                  "--disable-a52"          \
                  "for AC3 audio decoder"  &&

optional_depends  "libmad"                 \
                  "--enable-mad"           \
                  "--disable-mad"          \
                  "for fixed point mp3 decoder"  &&

optional_depends  "libid3tag" "" "" "for id3 tag reading support"  &&

optional_depends  "libvorbis"              \
                  "--enable-vorbis"        \
                  "--disable-vorbis"       \
                  "for ogg vorbis decoder" &&

optional_depends  "faad2"                  \
                  "--enable-faad"          \
                  "--disable-faad"         \
                  "for AAC audio decoder"  &&

optional_depends  "flac"                   \
                  "--enable-flac"          \
                  "--disable-flac"         \
                  "for flac audio decoder" &&

optional_depends  "libdts"                 \
                  "--enable-dts"           \
                  "--disable-dts"          \
                  "for DTS audio decoder"  &&

# video codec options
depends  mpeg2dec  &&
optional_depends  LIBAVCODEC               \
                  "--enable-ffmpeg"        \
                  "--disable-ffmpeg"       \
                  "for lots of video codecs"  &&

optional_depends  "libmatroska"            \
                  "--enable-mkv"           \
                  "--disable-mkv"          \
                  "for matroska file support"  &&

optional_depends  "libogg"                 \
                  "--enable-ogg"           \
                  "--disable-ogg"          \
                  "for ogg demuxer support"  &&

optional_depends  "libtheora"              \
                  "--enable-theora"        \
                  "--disable-theora"       \
                  "for Theora video support"  &&

# dvd options
optional_depends  "libdvdcss"              \
                   "--enable-dvd"          \
                   "--disable-dvd"         \
                   "for DVD support"       &&

optional_depends  "libdvdplay"             \
                  "--enable-dvdplay"       \
                  "--disable-dvdplay"      \
                  "for old DVD navigation support"  &&

optional_depends  "libdvdnav"              \
                  "--enable-dvdnav"        \
                  "--disable-dvdnav"       \
                  "for new DVD navigation support"  &&

# misc
optional_depends  "live"                  \
                  "--enable-livedotcom --with-livedotcom-tree=/usr/lib/live"  \
                  "--disable-livedotcom"  \
                  "for rtsp:// protocol support"  &&

optional_depends  "libdvbpsi"          \
                  "--enable-dvbpsi"    \
                  "--disable-dvbpsi"   \
                  "for DVB program information support"  &&

optional_depends  "libcdio"            \
                  "--enable-libcdio"   \
                  "--disable-libcdio"  \
                  "for enhanced audio cd support"  &&

optional_depends  "libcddb"            \
                  "--enable-libcddb"   \
                  "--disable-libcddb"  \
                  "for CDDB lookup support for audio cds"  &&

optional_depends  "vcdimager-unstable"  \
                  "--enable-vcdx"       \
                  "--disable-vcdx"      \
                  "for VCD navigation support"  &&

optional_depends  "gnutls"            \
                  "--enable-gnutls"   \
                  "--disable-gnutls"  \
                  "for TLS/SSL support"
