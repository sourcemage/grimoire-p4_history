                  ""                      \
                  "--disable-sdl"         \
                  "for SDL video output"  &&

optional_depends  "aalib"                 \
                  "--enable-aa"           \
                  ""                      \
                  "for aalib video output" &&

optional_depends  "libggi"                \
                  "--enable-ggi"          \
                  ""                      \
                  "for GGI video output"  &&

optional_depends  "svgalib"               \
                  "--enable-svgalib"      \
                  ""                      \
                  "for svgalib video output" &&

# audio output options
optional_depends  "esound"                \
                  "--enable-esd"          \
                  ""                      \
                  "for esd audio output"  &&

optional_depends  "arts"                  \
                  "--enable-arts"         \
                  ""                      \
                  "for arts audio output" &&

optional_depends  "alsa-lib"               \
                  "--enable-alsa"          \
                  ""                       \
                  "for alsa audio output"  &&

# audio codec options
optional_depends  "mad"                    \
                  "--enable-mad"           \
                  ""                       \
                  "for mad mp3 decoder"    &&

optional_depends  "libvorbis"              \
                  ""                       \
                  "--disable-vorbis"       \
                  "for ogg vorbis decoder" &&

# video codec options
optional_depends  "ffmpeg"                 \
                  "--enable-ffmpeg"        \
                  ""                       \
                  "for ffmpeg video decoder" &&

optional_depends  "xvid"                   \
                  "--enable-xvid"          \
                  ""                       \
                  "for xvid video decoder" &&

# dvd options
optional_depends  "libdvdcss"              \
                   ""                      \
                   "--disable-dvd"         \
                   "for DVD support"       &&

optional_depends  "libdvdplay"             \
                  ""                       \
                  ""                       \
                  "for DVD navigation support"
