# interface options
optional_depends  "gtk+"                  \
                  ""                      \
                  "--disable-gtk"         \
                  "for gtk interface"     &&

optional_depends  "wxGTK"                 \
                  ""                      \
                  ""                      \
                  "for wxGTK interface"   &&

optional_depends  "gnome-libs"            \
                  "--enable-gnome"        \
                  ""                      \
                  "for gnome interface"   &&

optional_depends  "qt-x11"                \
                  "--enable-qt"           \
                  ""                      \
                  "for qt interface"      &&

optional_depends  "kdelibs"               \
                  "--enable-kde"          \
                  ""                      \
                  "for kde interface"     &&

optional_depends  "ncurses"               \
                  "--enable-ncurses"      \
                  ""                      \
                  "for ncurses support"   &&

optional_depends  "lirc"                  \
                  "--enable-lirc"         \
                  ""                      \
                  "for lirc support"      &&

# video output options
