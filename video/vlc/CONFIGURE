if  !  grep  -q  "JOYSTICK"  $SPELL_CONFIG; then
  if    query  "Enable Joystick support?" y
  then  JOYSTICK=y
  else  JOYSTICK=n
  fi
  echo "JOYSTICK=$JOYSTICK"  >>  $SPELL_CONFIG
fi

if  !  grep  -q  "V4L"  $SPELL_CONFIG; then
  if    query  "Enable Video4Linux input support?" y
  then  V4L=y
  else  V4L=n
  fi
  echo "V4L=$V4L"  >>  $SPELL_CONFIG
fi
