           SPELL=transcode
         VERSION=0.6.12
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.zebra.fh-weingarten.de/~$SPELL/pre/$SOURCE
          MD5[0]=f7aa63ed423750cde3f95e4f74477b3a
        WEB_SITE=http://www.theorie.physik.uni-goettingen.de/~ostreich/transcode/
      LICENSE[0]=GPL
         ENTERED=20020430
