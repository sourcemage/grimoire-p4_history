# input devices
optional_depends  "cdparanoia"  ""  ""  "to play audio cds"             &&
optional_depends  "live"  "--enable-live"  ""  "for live.com Streaming Media (sdp/rtsp) support"  &&

# input codecs
depends  ffmpeg-cvs  &&
optional_depends  "zlib"  ""  ""  "to play movies using losless compression algorithms" &&
optional_depends  "w32codec"  ""  ""  "to use windows codec DLLs for video decoding" &&
optional_depends  "libvorbis"  ""  ""  "to play ogg/vorbis audio" &&
optional_depends  "libdv"  ""  ""  "to play files encoded with libdv (used by most digital camcorders)" &&
optional_depends  "mad"  ""  ""  "to play mp3 audio using libmad" &&
optional_depends  "MPlayer-codecs"  ""  ""  "for additional audio/video codecs" &&
optional_depends  "xvid" "" "" "for encoding with the xvid codec (distribution in USA and Japan is forbidden)" &&
optional_depends  "xmms" "--enable-xmms" "" "for xmms input plugin support" &&
optional_depends  "libmatroska"  ""  ""  "for matroska media support (.mkv, .mka)"  &&

# output devices
optional_depends  "svgalib"  ""  ""  "for svgalib video output" &&
optional_depends  "SDL"  ""  ""  "for SDL video and ESD audio output" &&
optional_depends  "esound"  ""  ""  "for direct esd audio output" &&
optional_depends  "aalib"  ""  ""  "for aalib (ascii) video output" &&
optional_depends  "libggi"  ""  ""  "for GGI video output" &&
optional_depends  "arts"  ""  ""  "for arts audio output" &&
optional_depends  "alsa-lib"  ""  ""  "for alsa audio output" &&
optional_depends  "nas"  ""  ""  "for NAS audio output" &&

# output codecs
optional_depends  "libungif"  ""  ""  "to output to .gif files" &&
optional_depends  "libpng"  ""  ""  "to output to .png files" &&
optional_depends  "jpeg"  ""  ""  "to output to .jpeg files" &&
optional_depends  "lame"  ""  ""  "to encode files with mp3 audio (mencoder)" &&

# input devices
optional_depends  "lirc"  ""  ""  "for remote-control" &&

optional_depends  "freetype2"  ""  ""  "for truetype subtitle font support" &&
if  [  "$FONTCONFIG"  =  "y"  ]; then
 optional_depends  "fontconfig"  ""  ""  "for fontconfig font lookup support"
fi &&
optional_depends  "MPlayer-fonts"  ""  ""  "for OSD/subtitle fonts (not needed if compiled with freetype2 support" &&
optional_depends  "directfb"  ""  ""  "for direct framebuffer support"  &&

if    [  "$GUI"  =  "y"  ]
then  depends  gtk+ &&
      depends  MPlayer-gui
fi
