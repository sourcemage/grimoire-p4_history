         VERSION=0.10
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/acidrip/$SOURCE
          MD5[0]=af14052d119851d3062f292d6b2dedd0
