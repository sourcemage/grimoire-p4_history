depends  X11-SERVER  &&
depends  jpeg        &&

optional_depends  libpng                                    \
                  ""                                        \
                  ""                                        \
                  "to capture screen images to png format"  &&

optional_depends  alsa-lib                  \
                  "--enable-alsa"           \
                  "--disable-alsa"          \
                  "for ALSA audio support"  &&

optional_depends  MOTIF                \
                  "--enable-motif"     \
                  "--disable-motif"    \
                  "for motif support"  &&

optional_depends  recode                  \
                  ""                      \
                  ""                      \
                  "for MoTV translation"  &&

optional_depends  libdv                   \
                  "--enable-dv"           \
                  "--disable-dv"          \
                  "for dv video support"  &&

optional_depends  lirc                          \
                  "--enable-lirc"               \
                  "--disable-lirc"              \
                  "for remote control support"  &&

optional_depends  aalib                   \
                  "--enable-aa"           \
                  "--disable-aa"          \
                  "for ascii art output"  &&

optional_depends  zvbi  "--enable-zvbi"  "--disable-zvbi"  "for the scantv tool"
