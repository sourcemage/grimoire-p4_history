if  [  "$GUI"  =  "n"  ];  then
  if  spell_installed  MPlayer-gui;  then
    dispel MPlayer-gui
  fi
fi

if  (ldd /usr/bin/mplayer | grep freetype) > /dev/null; then
  if ! (ldd /usr/bin/mplayer | grep fontconfig) > /dev/null; then
    message "Note:  To use another font than the default one for OSD/Subtitles,"
    message "       put any Type1 or Truetype font to ~/.mplayer/subfont.ttf."
  fi
fi
