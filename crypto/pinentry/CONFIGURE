if  !  grep  -q  KMail  $SPELL_CONFIG
  then

    if  query  "Do you want pinentry due to KMail?" n
      then
        KMail=y
      else
        KMail=n

        if  query  "Do you want pinentry for Qt toolkit?" n
          then
            Qt=y
          else
            Qt=n
        fi

        if  query  "Do you want pinentry for GTK+ toolkit?" n
          then
            GTK=y
          else
            GTK=n
        fi

    fi

		echo  "KMail=$KMail"  >>  $SPELL_CONFIG
    echo  "Qt=$Qt"        >>  $SPELL_CONFIG
    echo  "GTK=$GTK"      >>  $SPELL_CONFIG

fi
