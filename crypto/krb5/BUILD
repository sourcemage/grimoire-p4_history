if [ "$KRB4" == "y" ]; then
    OPTS="$OPTS --with-krb4"
else
    OPTS="$OPTS --without-krb4"
fi

cd  $SPELL-$VERSION/src                 &&

# Buffer overflow, heap corruption in KDC.
patch -p0 < $SCRIPT_DIRECTORY/2005-002-patch_1.4.1.txt  &&

# Double-free in krb5_recvauth.
patch -p0 < $SCRIPT_DIRECTORY/2005-003-patch_1.4.1.txt  &&

./configure  --enable-dns-for-kdc       \
             --enable-dns-for-realm     \
             --infodir=/usr/share/info  \
             --mandir=/usr/share/man    \
             --enable-shared            \
             --prefix=/usr              \
             --localstatedir=/var       \
             $OPTS                      &&
make_single                             &&
make
