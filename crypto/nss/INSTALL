### cheating to get them all in one place
make_normal    &&
make  install  &&
### manually do the real install


# ppc  => ppc
# i?86 => x86
MACHINE=$(uname -m)
MACHINE=${MACHINE/i[0-9]/x}

sedit "s/usr\/local/usr/g" $SOURCE_DIRECTORY/nsprpub/Linux${NSS_LINUX_VERSION}_${MACHINE}_glibc_PTH_OPT.OBJ/config/nspr-config     &&
cp -v $SOURCE_DIRECTORY/nsprpub/Linux${NSS_LINUX_VERSION}_${MACHINE}_glibc_PTH_OPT.OBJ/config/nspr-config ${INSTALL_ROOT}/usr/bin/ && 
cd  $SOURCE_DIRECTORY/dist                                &&
cp  -vaL  public/nss  ${INSTALL_ROOT}/usr/include/        &&
cd  Linux${NSS_LINUX_VERSION}_${MACHINE}_glibc_PTH_OPT.OBJ/lib/      &&
cp  -vaL  *.so ${INSTALL_ROOT}/usr/lib/                   &&
mkdir  -p  ${INSTALL_ROOT}/usr/include/nspr               &&
cp  -vaL  ../include/*  ${INSTALL_ROOT}/usr/include/nspr  &&
cp  -v  $SCRIPT_DIRECTORY/mozilla-nss.pc                  \
        ${INSTALL_ROOT}/usr/include/nss/                  &&
cp  -v  $SCRIPT_DIRECTORY/mozilla-nspr.pc                 \
        ${INSTALL_ROOT}/usr/include/nspr/                 &&
cp  -v  $SCRIPT_DIRECTORY/mozilla-nss.pc                  \
        ${INSTALL_ROOT}/usr/lib/pkgconfig/                &&
cp  -v  $SCRIPT_DIRECTORY/mozilla-nspr.pc                 \
        ${INSTALL_ROOT}/usr/lib/pkgconfig/                &&
cp  -vaL  ../bin/*  ${INSTALL_ROOT}/usr/bin/
