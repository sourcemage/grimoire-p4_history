if ! grep -q 'CONFIGURED=y' $SPELL_CONFIG; then
  query 'Build saslauthd SASL authentication daemon?' y && echo 'SASLAUTHD=y' >> $SPELL_CONFIG

  if grep -q 'SASLAUTHD=y' $SPELL_CONFIG \
    && query 'Use LDAP as a backend for password authentication?' y
  then echo 'SASLAUTHD_LDAP=y' >> $SPELL_CONFIG
  elif query 'Use db or gdbm database for password storage and authentication?' y
  then
    echo 'SASLDB=y' >> $SPELL_CONFIG

    if query 'Use Berkeley DB as a password database ("no" means GDBM will be used)?' y
    then echo 'SASLDB_BDB=y'  >> $SPELL_CONFIG
    else echo 'SASLDB_GDBM=y' >> $SPELL_CONFIG
    fi
  fi
  echo 'CONFIGURED=y' >> $SPELL_CONFIG
fi

config_query_option  CYRUSSASLPLAIN  "Enable PLAIN authentication?"  n  \
                     "--enable-plain"                                   \
                     "--disable-plain"
