depends automake &&
depends autoconf &&
depends libmcrypt &&

optional_depends Linux-PAM '--with-pam'      '--without-pam'     'support for PAM authentication' &&
optional_depends openssl   '--with-openssl'  '--without-openssl' 'support for NTLM and OTP'       &&
optional_depends krb5      '--enable-gssapi' '--disable-gssapi'  'support for Kerberos 5 GSSAPI'  &&

if [ "$SASLAUTHD_LDAP" == "y" ]; then
  depends openldap '--with-ldap --without-dblib'
elif [ "$SASLDB_BDB" == "y" ]; then
  depends db '--with-dblib=berkeley'
elif [ "$SASLDB_GDBM" == "y" ]; then
  depends gdbm '--with-dblib=gdbm'
fi
