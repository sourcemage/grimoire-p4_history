SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-v$VERSION
   SOURCE_URL[0]=http://loop-aes.sourceforge.net/aespipe/$SOURCE
          MD5[0]=fe79b08e22e6a1ba72ecbd97ae4868f6
        WEB_SITE=http://loop-aes.sourceforge.net/
