           SPELL=gnutls

if [ "$GNUTLS_OLD" == "y" ];then
         VERSION=1.0.25
          SOURCE=$SPELL-$VERSION.tar.gz
          MD5[0]=f4959398d22ade4bf6ec54752e18ba86
else
         VERSION=1.2.8
          SOURCE=$SPELL-$VERSION.tar.bz2
     SOURCE_HASH=sha512:134d551cc9324894305e61e1b475a1b7101c5828f4f55833ef81cf2631c528625fdbc7b468f463943473e70fca729e5f10f292ee353b42a07e1eb62acbb42855
