if [ `grep -c lids /etc/sorcery/local/depends/linux` != 0 ] ; then
    LIDS_VERSION=`grep lids /etc/sorcery/local/depends/linux | cut -d= -f2`
else
    echo "You MUST cast linux with the LIDS patch, aborting..."
    return 1
fi

export LIDS_VERSION
export LKV=`echo ${LIDS_VERSION} | cut -d'-' -f2`
export LKS=`echo ${LKS} | cut -d. -f1,2`
