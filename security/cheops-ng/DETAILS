          SOURCE=$SPELL-$VERSION.tgz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:35f42372128f05ad3ee7b683b1b94530a9af2b605a822222f6712a708782b108e2da83ab37e8ee7de268b5d8a7c666868806f4c1d7d86d0c2d85162486245cd5
