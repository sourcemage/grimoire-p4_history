          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.openwall.com/scanlogd/lib/${SOURCE}
   SOURCE_URL[1]=http://www.avet.com.pl/~nergal/${SPELL}/dist/${SOURCE}
          MD5[0]=59e16c38308fe771f7417b5df3ba4276
