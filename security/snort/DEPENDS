depends  libpcap							&&

# Flexible Responce code
if  [  "${CF_FLEXR}"  ==  "y"  ];  then
  depends  libnet
fi									&&

# Configure RDBMS deps. if needed
if  [  "${CF_DB}"  ==  "y"  ]; then

  if  [  "${CF_MYSQL}"  ==  "y"  ]; then
      depends mysql
  fi
  if  [  "${CF_PSQL}"  ==  "y"  ]; then
      depends postgresql
  fi
  if  [  "${CF_ODBC}"  ==  "y"  ]; then
      depends unixODBC
  fi
  
fi									&&

#depends swatch
#depends acid
#depends snortsnarf
#

optional_depends  openssl		\
		  "--with-openssl"	\
		  "--without-openssl"	\
		  "for OpenSSL support (used by XML output plugin)"