   SOURCE_URL[0]=ftp://ftp.mcs.anl.gov/pub/mpi/$SOURCE
     SOURCE_HASH=sha512:94fdeaaccda0be431336beeb0647f429cb61b546253f38e6df1fd71fa09840ffbb078262e717f232f0968e45f821b2ba3be3af16107b64cd711520cc0551fa8f
