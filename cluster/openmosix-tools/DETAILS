           SPELL=openmosix-tools
         VERSION=0.3.5
          SOURCE=${SPELL}-${VERSION}.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/openmosix/$SOURCE
     SOURCE_HASH=sha512:86870b22ce01675f1f2d05c8c1253058641ee6cfc012e0d894c51c1ed1175928f007e6107be8a61fb8f1a0b09eb3f2b68c69619fcb2804b67070a27617eabc7b
