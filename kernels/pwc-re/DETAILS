            SPELL=pwc-re
          VERSION=10.0.12-rc1
           SOURCE=pwc-$VERSION.tar.bz2
 SOURCE_DIRECTORY=$BUILD_DIRECTORY/pwc-$VERSION
    SOURCE_URL[0]=http://www.saillard.org/linux/pwc/files/$SOURCE
       SOURCE_GPG="gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME"
