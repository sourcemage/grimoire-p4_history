DESCRIPTION="Bluetooth stack"
SHORT="Latest bluez stack updates"
HELP="Bluez is the official bluetooth stack for linux. These patches bring the kernel up to the latest bluez releases."
VERSIONS="2.4.20-mh5
2.4.20-mh4
2.4.20-mh3
2.4.20-mh2
2.4.20-mh1
2.4.19-mh2
2.4.19-mh1"
MD5S[0]=dd135b5b0a8f363d44c1748320f8235d
MD5S[1]=680f34a9ed5477358df7555a2562e8f4
MD5S[2]=febc71b9a698aa39eda9b914066a9243
MD5S[3]=b868314a5ec56e6e7d5c1aedf6360cac
MD5S[4]=d5d9e850b603e49733401dd6cf5d763c
MD5S[5]=06f9133627fbcf77ea73c83a2aa7b8af
MD5S[6]=b39cfe49ae3069852ce7a8e346c3db4a


if [[ "$1" == "CONFIG" ]]; then
echo "
SOURCE${COUNTER}=patch-${!PATCH}.gz
SOURCE${COUNTER}_URL=http://www.holtmann.org/linux/kernel/\$SOURCE${COUNTER}" >> ${SPELL_CONFIG}.DETAILS
source $SCRIPT_DIRECTORY/MD5PATCH
fi
