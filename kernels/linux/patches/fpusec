#!/bin/bash

DESCRIPTION="security fix for FPU exception handling DoS"
SHORT="security fix for FPU exception handling DoS"
HELP="Vulnerability Local User DoS in FPU Exception Handling

See http://linuxreviews.org/news/2004-06-11_kernel_crash

This affects linux versions equal to and prior to the patches provided.
"
VERSIONS="2.6.7-rc3-bk5_i387.h.patch
2.4.26_i387.h_patch"

MD5S[0]=0007461018edbbfc53d18b90a96aa96e
MD5S[1]=5be98093ca690daffaf11aa8b781776d

if [[ "$1" == "CONFIG" ]]; then
echo "
SOURCE${COUNTER}='${!PATCH}.txt'
SOURCE${COUNTER}_URL='http://linuxreviews.org/news/2004-06-11_kernel_crash/${!PATCH}.txt'" >> ${SPELL_CONFIG}.DETAILS
source $SCRIPT_DIRECTORY/MD5PATCH
fi
