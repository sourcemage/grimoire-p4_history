#!/bin/bash

DESCRIPTION="Sistina's device-mapper patch"
SHORT="The device-mapper is a requisite for LVM2, for 2.4 kernels"
HELP="The device-mapper patch here is for 2.4 kernels.  It is already in 
2.6.  It is used with LVM2, the next generation of LVM.
http://www.sistina.com/products_lvm.htm"
VERSIONS="2.4.25
2.4.23-pre7.dm3"
MD5S[0]=41ee8b1ca943e899d873e3cc87aee443
MD5S[1]=b47151799b660295ff48c27605058259

if [[ "$1" == "CONFIG" ]]; then
echo "
SOURCE${COUNTER}=linux-dm-${!PATCH}.patch.bz2
SOURCE${COUNTER}_URL=http://download.sourcemage.org/mirror/\$SOURCE${COUNTER}" >> ${SPELL_CONFIG}.DETAILS
source $SCRIPT_DIRECTORY/MD5PATCH
fi
