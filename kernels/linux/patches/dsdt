#!/bin/bash

# jbernardo@sourcemage.org

DESCRIPTION="DSDT patch"
SHORT="DSDT loaded from initrd"
HELP="This patch is intended for people who like to hack their DSDT and don't want to recompile their kernel after every change. http://gaugusch.at/kernel.shtml"

VERSIONS="0.4-2.6.4
0.4-2.6.1
0.4-2.6.0"

MD5S[0]=ea70fe59fea6d833f8cd620c37766982
MD5S[1]=324dc8426be65d15f7318feaded1f73f
MD5S[2]=d95e1ba1b3695e2638e1fcd6bb5c52df

if [[ "$1" == "CONFIG" ]]; then
echo "
SOURCE${COUNTER}=acpi-dsdt-initrd-patch-v${!PATCH}.diff
SOURCE${COUNTER}_URL=http://gaugusch.at/acpi-dsdt-initrd-patches/\$SOURCE${COUNTER}" >> ${SPELL_CONFIG}.DETAILS
source $SCRIPT_DIRECTORY/MD5PATCH
fi
