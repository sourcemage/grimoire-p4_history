#!/bin/bash

DESCRIPTION="grsecurity patch"
SHORT="Provides ACL (Access Control List)"
HELP="An ACL (Access Control List) system is software that provides fine-grained access control for your computer."
VERSIONS="1.9.6-2.4.19
1.9.7-rc5-2.4.19"

if [[ "$1" == "CONFIG" ]]; then
echo "
SOURCE${COUNTER}=grsecurity-${!PATCH}.patch.gz
SOURCE${COUNTER}_URL=http://www.grsecurity.net/\$SOURCE${COUNTER}" >> $SPELL_CONFIG
fi
