config_query  OLD_CONFIG     "Make oldconfig?"                n
config_query  USE_GUI        "Use a GUI configuration tool?"  n
if  [  -d /usr/src/linux-${VERSION}  ]
then
  message  "${MESSAGE_COLOR}Existing Linux source tree found (/usr/src/linux-${VERSION})."
  message  "If you don't want to do a whole rebuild from fresh sources you can reuse the existing ones if you haven't changed what patches you've applied.${DEFAULT_COLOR}"
  config_query  REUSE_SOURCE   "Reuse existing source tree?"    y
fi

