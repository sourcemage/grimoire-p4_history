cd  ${XEN_SOURCE_DIRECTORY}  &&

make install  &&

chown  -R  root:root  ${XEN_SOURCE_DIRECTORY}                    &&

ln  -sfn  ${XEN_SOURCE_DIRECTORY}/linux-${XEN_KVERSION}-xen0/    \
          ${BUILD_DIRECTORY}/.                                   &&
ln  -sfn  linux-${XEN_KVERSION}-xen0/  ${BUILD_DIRECTORY}/linux
