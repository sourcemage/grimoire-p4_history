#!/bin/bash

PROGRAM=/usr/sbin/xend
RUNLEVEL=3
NEEDS="+network +remote_fs"

. /etc/init.d/smgl_init

if [ ! -e /proc/xen/privcmd ]; then
  exit 0
fi

getpids()
{
  return 0
}

start()
{
  echo "Starting $NAME..."
  loadproc $PROGRAM start
}

stop()
{
  echo "Stopping $NAME..."
  loadproc $PROGRAM stop
}

restart() {
  echo "Restarting $NAME..."
  loadproc $PROGRAM restart
}

status()
{
  loadproc xm list
}
