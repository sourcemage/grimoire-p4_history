if [[ $RECONFIGURE ]]
then
case ${KERNEL_VERSION} in
	2.6*)
		config_query_list MAKEMODE "What make configuration tool would you like to use?" \
					"menuconfig" \
					"oldconfig" \
					"xconfig" \
					"defconfig" \
					"gconfig" \
					"allmodconfig" \
					"allyesconfig" \
					"allnoconfig" 
		;;
	2.[24]*)
		config_query_list MAKEMODE "What make configuration tool would you like to use?" \
					"menuconfig" \
					"xconfig" \
					"oldconfig" 
		;;
	2.0*)
		config_query_list MAKEMODE "What make configuration tool would you like to use?" \
					"menuconfig" \
					"xconfig"
		;;
esac

if [[ $MAKEMODE == "menuconfig" || $MAKEMODE == "oldconfig" ]]
then
	VOYEUR="on"
fi

fi
