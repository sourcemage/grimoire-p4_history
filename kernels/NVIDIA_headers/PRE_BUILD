message "${SPELL_COLOR}NO SOURCE TO UNPACK TODAY :-)${DEFAULT_COLOR}\n\
${MESSAGE_COLOR}BACKING UP EXISTING XFREE86 HEADERS${DEFAULT_COLOR}" &&
  XFREE_DIR=${INSTALL_ROOT}/usr/include/GL/xfree &&
  GL_DIR=${INSTALL_ROOT}/usr/include/GL/ &&	 
if ! [ -d ${XFREE_DIR} ] 
	then mkdir ${XFREE_DIR} && 
	for i in gl.h glx.h glxtokens.h ; 
		do  cp  ${GL_DIR}/$i ${XFREE_DIR} ;
		done
fi
