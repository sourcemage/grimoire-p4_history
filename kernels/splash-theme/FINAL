#
# Make an initrd for each theme
#
for theme in `ls $TRACK_ROOT/etc/splash`;  do
  splash_geninitramfs  $theme  -g $TRACK_ROOT/boot/$theme.initrd.splash
done  &&

message  "${MESSAGE_COLOR}Remember to add"                                  \
         "\"initrd=/boot/fbsplash-{theme}.initrd\" to your bootloader and"  \
         "append \"splash=silent,theme:{theme}\" to your kernel options"    \
         "${DEFAULT_COLOR}"
