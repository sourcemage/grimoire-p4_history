if  !  grep  -q  "VIA4X"  $SPELL_CONFIG;  then
  if    query "Enable AGP 4x mode on VIA chipsets, which might cause instability?" n
  then  echo  "VIA4X=y"  >>  $SPELL_CONFIG
  else  echo  "VIA4X=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "ALiAGP"  $SPELL_CONFIG;  then
  if    query "Enable AGP on ALi chipsets, which might cause instability?" n
  then  echo  "ALiAGP=y"  >>  $SPELL_CONFIG
  else  echo  "ALiAGP=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "AGPSBA"  $SPELL_CONFIG;  then
  if    query "Enable AGP SBA(Side Band Addressing) on all supported chipsets, which might cause instability?"  n
  then  echo  "AGPSBA=y"  >>  $SPELL_CONFIG
  else  echo  "AGPSBA=n"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "AGPFW"  $SPELL_CONFIG;  then
  if    query "Enable AGP Fast Writes on all supported chipsets, which might cause instability?" n
  then  echo  "AGPFW=y"  >>  $SPELL_CONFIG
  else  echo  "AGPFW=n"  >>  $SPELL_CONFIG
  fi
fi
