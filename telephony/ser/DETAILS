           SPELL=ser
         VERSION=0.9.6
       BUILD_API=2
          SOURCE=${SPELL}-${VERSION}_src.tar.gz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
   SOURCE_URL[0]=http://ftp.iptel.org/pub/${SPELL}/0.9.6/src/${SOURCE}
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
