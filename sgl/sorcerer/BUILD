(

  prepare_install                                 &&
  mkdir  -p                  /usr/share/sorcerer  &&
  cd                         /usr/share/sorcerer  &&
  cp  $SOURCE_CACHE/$SOURCE  /usr/share/sorcerer  &&
  bunzip2           $SOURCE                       &&
  rm  -rf  $SOURCE_DIRECTORY

) > $C_FIFO 2>&1
