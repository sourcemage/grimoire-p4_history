           SPELL=sorcery-only
         VERSION=`date -u +%Y%m%d`
          SOURCE=sorcery.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/sorcery
   SOURCE_URL[0]=$SORCERY_URL/$SOURCE
   SOURCE_URL[1]=http://http://codex.sourcemage.org/devel-grimoire/$SOURCE
   SOURCE_URL[2]=http://sgl.bccs.net/sorcery/$SOURCE
   SOURCE_URL[3]=http://infolab.uvt.nl/people/erics/linux/$SOURCE
   SOURCE_URL[4]=http://www.smee.org/smgl/test/$SOURCE
        WEB_SITE=http://www.sourcemage.org
         ENTERED=20020328
         UPDATED=20020527
      MAINTAINER=eric@schabell.com
