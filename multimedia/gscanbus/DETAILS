           SPELL=gscanbus
         VERSION=0.7.1
          SOURCE=$SPELL-$VERSION.tgz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.ivistar.de/download/gscanbus/gscanbus-0.7.1.tgz
        WEB_SITE=http://www.ivistar.de/0500opensource.php3?lang=en
         ENTERED=20020202
