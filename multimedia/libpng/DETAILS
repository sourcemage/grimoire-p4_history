   SOURCE_URL[0]=http://prdownloads.sourceforge.net/$SPELL/$SOURCE
  SOURCE2_URL[0]=http://prdownloads.sourceforge.net/$SPELL/$SOURCE2
        WEB_SITE=http://www.libpng.org/pub/png/libpng.html
